{
  "hosting": {
    "web": {
      "source": "./web",
      "ignore": [
        ".git",
        ".gitignore",
        "node_modules",
        "*.md",
        "README.md"
      ],
      "headers": [
        {
          "source": "**/*.html",
          "headers": [
            {
              "key": "Cache-Control",
              "value": "no-cache, no-store, must-revalidate"
            }
          ]
        },
        {
          "source": "**/*.css",
          "headers": [
            {
              "key": "Cache-Control",
              "value": "public, max-age=31536000"
            }
          ]
        },
        {
          "source": "**/*.js",
          "headers": [
            {
              "key": "Cache-Control",
              "value": "public, max-age=31536000"
            }
          ]
        },
        {
          "source": "**/*.{png,jpg,jpeg,gif,svg,ico}",
          "headers": [
            {
              "key": "Cache-Control",
              "value": "public, max-age=31536000"
            }
          ]
        }
      ],
      "rewrites": [
        {
          "source": "**",
          "destination": "/index.html"
        }
      ]
    },
    "admin": {
      "source": "./admin",
      "ignore": [
        ".git",
        ".gitignore",
        "node_modules",
        "*.md",
