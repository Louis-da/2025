{
  "name": "yunsf3",
  "version": "3.0.0",
  "description": "云收发系统 - 微信小程序云开发版本",
  "main": "index.html",
  "scripts": {
    "dev": "http-server . -p 3000 -c-1",
    "start": "http-server . -p 3000",
    "deploy": "echo '云函数部署请使用微信开发者工具'",
    "setup": "npm install",
    "lint": "eslint . --ext .js,.ts --fix",
    "lint:check": "eslint . --ext .js,.ts",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "type-check": "tsc --noEmit",
    "pre-commit": "npm run lint:check && npm run format:check && npm run type-check",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage"
  },
  "keywords": [
    "wechat",
    "miniprogram",
    "cloud",
    "processing",
    "order-management",
    "factory",
    "logistics"
  ],
  "author": "云收发技术团队",
  "license": "MIT",
  "dependencies": {
    "@cloudbase/node-sdk": "^3.10.1",
    "http-server": "^14.1.1"
  },
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^6.15.0",
    "@typescript-eslint/parser": "^6.15.0",
    "eslint": "^8.56.0",
    "eslint-plugin-miniprogram": "^1.0.0",
    "prettier": "^3.1.1",
    "typescript": "^5.3.3",
    "jest": "^29.7.0",
    "@types/jest": "^29.5.8",
    "nodemon": "^3.0.2",
    "husky": "^8.0.3",
    "lint-staged": "^15.2.0"
  },
  "engines": {
    "node": ">=16.0.0",
    "npm": ">=8.0.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/your-org/yunsf3.git"
  },
  "bugs": {
    "url": "https://github.com/your-org/yunsf3/issues"
  },
  "homepage": "https://github.com/your-org/yunsf3#readme",
  "private": true,
  "workspaces": [
    "cloudfunctions/*"
  ]
}
