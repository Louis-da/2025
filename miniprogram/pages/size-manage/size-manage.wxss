/* pages/size-manage/size-manage.wxss */

/* 页面容器 */
.page-container {
  min-height: 100vh;
  background: linear-gradient(135deg, #e8d5ff 0%, #f0e6ff 50%, #f5f0ff 100%);
  font-family: -apple-system, BlinkMacSystemFont, sans-serif;
}

/* 页面头部 */
.page-header {
  background: rgba(255, 255, 255, 0.95);
  padding: 20rpx 32rpx;
  position: sticky;
  top: 0;
  z-index: 100;
  box-shadow: 0 2rpx 20rpx rgba(0, 0, 0, 0.1);
}

.header-content {
  display: flex;
  justify-content: space-between;
  align-items: center;
  max-width: 1200rpx;
  margin: 0 auto;
  flex-wrap: wrap;
  gap: 16rpx;
}

.header-left {
  display: flex;
  flex-direction: column;
}

.page-title {
  font-size: 48rpx;
  font-weight: 700;
  color: #8b5cf6;
  margin-bottom: 8rpx;
}

.page-subtitle {
  font-size: 18rpx;
  color: #666;
  font-weight: 400;
  line-height: 1.2;
}

.header-right .add-btn-wrapper {
  position: relative;
}

.add-btn {
  display: flex;
  align-items: center;
  background: linear-gradient(45deg, #8b5cf6, #a855f7);
  color: #fff;
  padding: 20rpx 32rpx;
  border-radius: 50rpx;
  font-size: 32rpx;
  font-weight: 600;
  box-shadow: 0 8rpx 25rpx rgba(139, 92, 246, 0.3);
  transition: all 0.3s ease;
}

.add-btn:active {
  transform: translateY(2rpx);
  box-shadow: 0 4rpx 15rpx rgba(139, 92, 246, 0.3);
}

.add-icon {
  font-size: 36rpx;
  font-weight: 300;
  margin-right: 12rpx;
}

.add-text {
  font-size: 32rpx;
}

/* AI智能提示卡片 */
.ai-tip-card {
  margin: 32rpx;
  background: linear-gradient(135deg, #4facfe 0%, #00f2fe 100%);
  border-radius: 24rpx;
  padding: 32rpx;
  display: flex;
  align-items: center;
  box-shadow: 0 8rpx 32rpx rgba(79, 172, 254, 0.3);
}

.ai-tip-icon {
  font-size: 48rpx;
  animation: pulse 2s infinite;
  margin-right: 24rpx;
}

@keyframes pulse {
  0%, 100% { transform: scale(1); }
  50% { transform: scale(1.1); }
}

.ai-tip-content {
  flex: 1;
  display: flex;
  flex-direction: column;
}

.ai-tip-title {
  font-size: 32rpx;
  font-weight: 700;
  color: #fff;
  margin-bottom: 8rpx;
}

.ai-tip-desc {
  font-size: 28rpx;
  color: rgba(255, 255, 255, 0.9);
  line-height: 1.5;
}

/* 加载状态 */
.loading-wrapper {
  display: flex;
  justify-content: center;
  align-items: center;
  min-height: 60vh;
}

.loading-content {
  display: flex;
  flex-direction: column;
  align-items: center;
  color: #fff;
}

.loading-spinner {
  width: 80rpx;
  height: 80rpx;
  border: 6rpx solid rgba(255, 255, 255, 0.3);
  border-top: 6rpx solid #fff;
  border-radius: 50%;
  animation: spin 1s linear infinite;
  margin-bottom: 32rpx;
}

@keyframes spin {
  0% { transform: rotate(0deg); }
  100% { transform: rotate(360deg); }
}

.loading-text {
  font-size: 32rpx;
  color: rgba(255, 255, 255, 0.9);
}

/* 空状态 */
.empty-wrapper {
  display: flex;
  justify-content: center;
  align-items: center;
  min-height: 60vh;
  padding: 0 32rpx;
}

.empty-content {
  text-align: center;
  color: #fff;
  max-width: 600rpx;
}

.empty-icon {
  font-size: 120rpx;
  margin-bottom: 32rpx;
  opacity: 0.8;
}

.empty-title {
  font-size: 40rpx;
  font-weight: 600;
  margin-bottom: 16rpx;
  display: block;
}

.empty-desc {
  font-size: 30rpx;
  opacity: 0.8;
  line-height: 1.5;
  margin-bottom: 48rpx;
  display: block;
}

.empty-action {
  margin-top: 48rpx;
}

.empty-btn {
  display: inline-block;
  background: rgba(255, 255, 255, 0.2);
  color: #fff;
  padding: 24rpx 48rpx;
  border-radius: 50rpx;
  font-size: 32rpx;
  font-weight: 600;
  border: 2rpx solid rgba(255, 255, 255, 0.3);
  transition: all 0.3s ease;
}

.empty-btn:active {
  background: rgba(255, 255, 255, 0.3);
  transform: scale(0.95);
}

/* 尺码网格布局 - 巧克力键盘模块式 */
.size-grid {
  padding: 24rpx;
  display: flex;
  flex-wrap: wrap;
  justify-content: space-between;
  max-width: 1200rpx;
  margin: 0 auto;
  gap: 16rpx;
}

/* 尺码卡片 - 巧克力键盘模块式 */
.size-card {
  background: rgba(255, 255, 255, 0.98);
  border-radius: 16rpx;
  padding: 20rpx;
  position: relative;
  overflow: hidden;
  transition: all 0.2s ease;
  box-shadow: 
    0 2rpx 8rpx rgba(0, 0, 0, 0.08),
    0 1rpx 2rpx rgba(0, 0, 0, 0.06),
    inset 0 1rpx 0 rgba(255, 255, 255, 0.9);
  border: 1rpx solid rgba(255, 255, 255, 0.3);
  width: calc(25% - 12rpx);
  min-width: 160rpx;
  aspect-ratio: 1;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  text-align: center;
}

.size-card:active {
  transform: translateY(-2rpx) scale(0.98);
  box-shadow: 
    0 4rpx 12rpx rgba(0, 0, 0, 0.12),
    0 2rpx 4rpx rgba(0, 0, 0, 0.08),
    inset 0 1rpx 0 rgba(255, 255, 255, 0.7);
}

.size-card.disabled {
  opacity: 0.7;
  filter: grayscale(30%);
  background: rgba(255, 255, 255, 0.9);
}

.size-card.disabled .enable-btn {
  opacity: 1;
  filter: none;
  background: linear-gradient(45deg, #51cf66, #69db7c);
  box-shadow: 0 3rpx 12rpx rgba(81, 207, 102, 0.4);
  transform: scale(1.1);
}

.size-card.disabled:active {
  transform: none;
}

/* 卡片头部 - 紧凑布局 */
.card-header {
  position: absolute;
  top: 8rpx;
  left: 8rpx;
  right: 8rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
  z-index: 2;
}

.size-order-badge {
  background: linear-gradient(45deg, #8b5cf6, #a855f7);
  color: #fff;
  padding: 4rpx 8rpx;
  border-radius: 12rpx;
  font-size: 20rpx;
  font-weight: 600;
  min-width: 32rpx;
  text-align: center;
  line-height: 1.2;
}

.status-indicator {
  width: 16rpx;
  height: 16rpx;
  border-radius: 50%;
  transition: all 0.2s ease;
}

.status-indicator.active {
  background: #52c41a;
  box-shadow: 0 0 0 3rpx rgba(82, 196, 26, 0.2);
}

.status-indicator.inactive {
  background: #ff4d4f;
  box-shadow: 0 0 0 3rpx rgba(255, 77, 79, 0.2);
}

/* 卡片内容 - 紧凑布局 */
.card-content {
  margin-top: 32rpx;
  margin-bottom: 48rpx;
  flex: 1;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
}

.size-name {
  font-size: 36rpx;
  font-weight: 700;
  color: #1a1a1a;
  line-height: 1.1;
  max-width: 100%;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

/* 移除size-meta相关样式，不再显示排序信息 */

/* 卡片操作 - 左下角小图标 */
.card-actions {
  position: absolute;
  bottom: 8rpx;
  left: 8rpx;
  width: auto;
  z-index: 3;
}

.action-btn {
  display: flex;
  align-items: center;
  justify-content: center;
  padding: 6rpx;
  border-radius: 50%;
  font-size: 20rpx;
  font-weight: 600;
  transition: all 0.2s ease;
  border: none;
  width: 36rpx;
  height: 36rpx;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.15);
}

.disable-btn {
  background: linear-gradient(45deg, #ff6b6b, #ff8e8e);
  color: #fff;
}

.disable-btn:active {
  background: linear-gradient(45deg, #ff5252, #ff7777);
  transform: scale(0.9);
}

.enable-btn {
  background: linear-gradient(45deg, #51cf66, #69db7c);
  color: #fff;
}

.enable-btn:active {
  background: linear-gradient(45deg, #40c057, #5bb95d);
  transform: scale(0.9);
}

.btn-icon {
  font-size: 20rpx;
  line-height: 1;
}

.btn-text {
  display: none; /* 隐藏按钮文字 */
}

/* 状态标签 - 隐藏状态 */
.status-badge {
  display: none; /* 在紧凑布局中隐藏状态标签，状态通过指示器显示 */
}

.status-badge.status-active {
  background: rgba(82, 196, 26, 0.2);
  color: #52c41a;
  border: 1rpx solid rgba(82, 196, 26, 0.3);
}

.status-badge.status-disabled {
  background: rgba(255, 77, 79, 0.2);
  color: #ff4d4f;
  border: 1rpx solid rgba(255, 77, 79, 0.3);
}

/* 弹窗样式 */
.modal-mask {
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  background: rgba(0, 0, 0, 0.5);
  z-index: 1000;
  opacity: 0;
  transition: opacity 0.3s ease;
}

.modal-container {
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  display: flex;
  align-items: center;
  justify-content: center;
  z-index: 1001;
  opacity: 0;
  transform: scale(0.8);
  transition: all 0.3s ease;
  padding: 64rpx;
  box-sizing: border-box;
}

.modal-container.modal-show {
  opacity: 1;
  transform: scale(1);
}

.modal-content {
  background: #fff;
  border-radius: 32rpx;
  width: 100%;
  max-width: 700rpx;
  max-height: 80vh;
  overflow: hidden;
  box-shadow: 0 20rpx 60rpx rgba(0, 0, 0, 0.3);
}

.modal-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 40rpx 48rpx 0;
  background: linear-gradient(135deg, #8b5cf6, #a855f7);
  color: #fff;
}

.modal-title {
  font-size: 40rpx;
  font-weight: 700;
}

.modal-close {
  font-size: 48rpx;
  font-weight: 300;
  padding: 16rpx;
  line-height: 1;
  opacity: 0.8;
  transition: opacity 0.3s ease;
}

.modal-close:active {
  opacity: 1;
}

.modal-body {
  padding: 48rpx;
  max-height: 60vh;
  overflow-y: auto;
}

/* 表单区域 */
.form-section {
  margin-bottom: 40rpx;
}

.form-item {
  margin-bottom: 32rpx;
}

.form-label {
  display: block;
  font-size: 32rpx;
  font-weight: 600;
  color: #1a1a1a;
  margin-bottom: 16rpx;
}

.form-input {
  width: 100%;
  height: 96rpx;
  padding: 0 24rpx;
  border: 2rpx solid #e8e8e8;
  border-radius: 16rpx;
  font-size: 32rpx;
  color: #1a1a1a;
  background: #f8f9fa;
  transition: all 0.3s ease;
  box-sizing: border-box;
}

.form-input:focus {
  border-color: #8b5cf6;
  background: #fff;
  box-shadow: 0 0 0 6rpx rgba(139, 92, 246, 0.1);
}

/* AI建议区域 */
.ai-suggestion {
  background: linear-gradient(135deg, #4facfe 0%, #00f2fe 100%);
  border-radius: 20rpx;
  padding: 32rpx;
  display: flex;
  align-items: flex-start;
}

.suggestion-icon {
  font-size: 36rpx;
  animation: bounce 2s infinite;
  margin-right: 20rpx;
}

@keyframes bounce {
  0%, 20%, 50%, 80%, 100% { transform: translateY(0); }
  40% { transform: translateY(-10rpx); }
  60% { transform: translateY(-5rpx); }
}

.suggestion-content {
  flex: 1;
  display: flex;
  flex-direction: column;
}

.suggestion-title {
  font-size: 30rpx;
  font-weight: 700;
  color: #fff;
  margin-bottom: 8rpx;
}

.suggestion-desc {
  font-size: 26rpx;
  color: rgba(255, 255, 255, 0.9);
  line-height: 1.5;
}

/* 编辑警告区域 */
.edit-warning {
  background: linear-gradient(135deg, #ffecd2 0%, #fcb69f 100%);
  border-radius: 20rpx;
  padding: 32rpx;
  display: flex;
  align-items: flex-start;
}

.warning-icon {
  font-size: 36rpx;
  animation: shake 3s infinite;
  margin-right: 20rpx;
}

@keyframes shake {
  0%, 100% { transform: translateX(0); }
  10%, 30%, 50%, 70%, 90% { transform: translateX(-2rpx); }
  20%, 40%, 60%, 80% { transform: translateX(2rpx); }
}

.warning-content {
  flex: 1;
  display: flex;
  flex-direction: column;
}

.warning-title {
  font-size: 30rpx;
  font-weight: 700;
  color: #d4691f;
  margin-bottom: 8rpx;
}

.warning-desc {
  font-size: 26rpx;
  color: #8b5a2b;
  line-height: 1.5;
}

/* 弹窗底部 */
.modal-footer {
  display: flex;
  padding: 0 48rpx 48rpx;
  background: #f8f9fa;
}

.footer-btn {
  flex: 1;
  height: 88rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  border-radius: 20rpx;
  font-size: 32rpx;
  font-weight: 600;
  transition: all 0.3s ease;
  margin-right: 24rpx;
}

.footer-btn:last-child {
  margin-right: 0;
}

.cancel-btn {
  background: #e8e8e8;
  color: #666;
}

.cancel-btn:active {
  background: #d8d8d8;
  transform: scale(0.95);
}

.confirm-btn {
  background: linear-gradient(45deg, #8b5cf6, #a855f7);
  color: #fff;
  box-shadow: 0 8rpx 25rpx rgba(139, 92, 246, 0.3);
}

.confirm-btn:active {
  transform: scale(0.95);
  box-shadow: 0 4rpx 15rpx rgba(139, 92, 246, 0.3);
}

/* 响应式设计 - 全面屏幕自适应 */

/* 大屏幕优化 (>1000rpx) */
@media (min-width: 1000rpx) {
  .page-container {
    max-width: 1200rpx;
    margin: 0 auto;
  }
  
  .size-grid {
    padding: 40rpx;
    gap: 20rpx;
  }
  
  .size-card {
    width: calc(20% - 16rpx); /* 5列布局 */
  }
}

/* 中大屏幕 (750rpx - 1000rpx) */
@media (max-width: 1000rpx) and (min-width: 750rpx) {
  .size-grid {
    gap: 16rpx;
    padding: 32rpx;
  }
  
  .size-card {
    width: calc(25% - 12rpx); /* 4列布局 */
  }
}

/* 中屏幕 (500rpx - 750rpx) */
@media (max-width: 750rpx) and (min-width: 500rpx) {
  .page-header {
    padding: 18rpx 28rpx;
  }
  
  .page-title {
    font-size: 44rpx;
  }
  
  .page-subtitle {
    font-size: 16rpx;
  }
  
  .add-btn {
    padding: 18rpx 28rpx;
    font-size: 28rpx;
  }
  
  .add-text {
    font-size: 28rpx;
  }
  
  .size-grid {
    gap: 12rpx;
    padding: 24rpx;
  }
  
  .size-card {
    width: calc(33.33% - 8rpx); /* 3列布局 */
    min-width: 140rpx;
  }
  
  .size-name {
    font-size: 32rpx;
  }
  
  .action-btn {
    width: 32rpx;
    height: 32rpx;
  }
  
  .btn-icon {
    font-size: 18rpx;
  }
  
  .ai-tip-card {
    margin: 28rpx;
    padding: 28rpx;
  }
  
  .ai-tip-title {
    font-size: 28rpx;
  }
  
  .ai-tip-desc {
    font-size: 24rpx;
  }
  
  .modal-container {
    padding: 40rpx;
  }
  
  .modal-content {
    border-radius: 28rpx;
  }
  
  .modal-title {
    font-size: 36rpx;
  }
  
  .form-label {
    font-size: 28rpx;
  }
  
  .form-input {
    height: 88rpx;
    font-size: 28rpx;
  }
}

/* 小屏幕 (320rpx - 500rpx) */
@media (max-width: 500rpx) {
  .page-header {
    padding: 12rpx 20rpx;
  }
  
  .header-content {
    flex-direction: column;
    align-items: flex-start;
    gap: 12rpx;
  }
  
  .page-title {
    font-size: 36rpx;
  }
  
  .page-subtitle {
    font-size: 14rpx;
  }
  
  .add-btn {
    padding: 12rpx 20rpx;
    font-size: 24rpx;
    border-radius: 40rpx;
  }
  
  .add-icon {
    font-size: 28rpx;
  }
  
  .add-text {
    font-size: 24rpx;
  }
  
  .size-grid {
    gap: 8rpx;
    padding: 16rpx;
  }
  
  .size-card {
    width: calc(50% - 4rpx); /* 2列布局 */
    min-width: 120rpx;
    padding: 16rpx;
  }
  
  .size-name {
    font-size: 28rpx;
  }
  
  .card-header {
    top: 6rpx;
    left: 6rpx;
    right: 6rpx;
  }
  
  .size-order-badge {
    padding: 2rpx 6rpx;
    font-size: 16rpx;
    min-width: 24rpx;
  }
  
  .status-indicator {
    width: 12rpx;
    height: 12rpx;
  }
  
  .card-actions {
    bottom: 6rpx;
    left: 6rpx;
  }
  
  .action-btn {
    width: 28rpx;
    height: 28rpx;
    padding: 4rpx;
  }
  
  .btn-icon {
    font-size: 16rpx;
  }
  
  .ai-tip-card {
    margin: 16rpx;
    padding: 20rpx;
    border-radius: 16rpx;
  }
  
  .ai-tip-icon {
    font-size: 36rpx;
  }
  
  .ai-tip-title {
    font-size: 24rpx;
  }
  
  .ai-tip-desc {
    font-size: 20rpx;
  }
  
  .loading-spinner {
    width: 60rpx;
    height: 60rpx;
  }
  
  .loading-text {
    font-size: 26rpx;
  }
  
  .empty-icon {
    font-size: 80rpx;
  }
  
  .empty-title {
    font-size: 32rpx;
  }
  
  .empty-desc {
    font-size: 24rpx;
  }
  
  .empty-btn {
    padding: 20rpx 36rpx;
    font-size: 26rpx;
  }
  
  .modal-container {
    padding: 20rpx;
  }
  
  .modal-content {
    border-radius: 20rpx;
  }
  
  .modal-header {
    padding: 24rpx 32rpx 0;
  }
  
  .modal-title {
    font-size: 32rpx;
  }
  
  .modal-close {
    font-size: 36rpx;
  }
  
  .modal-body {
    padding: 24rpx;
  }
  
  .form-label {
    font-size: 26rpx;
  }
  
  .form-input {
    height: 80rpx;
    padding: 0 20rpx;
    font-size: 26rpx;
  }
  
  .suggestion-title, .warning-title {
    font-size: 24rpx;
  }
  
  .suggestion-desc, .warning-desc {
    font-size: 22rpx;
  }
  
  .modal-footer {
    padding: 0 24rpx 24rpx;
  }
  
  .footer-btn {
    height: 72rpx;
    font-size: 26rpx;
  }
}

/* 超小屏幕 (<320rpx) */
@media (max-width: 320rpx) {
  .header-content {
    flex-direction: column;
    align-items: center;
    text-align: center;
  }
  
  .page-title {
    font-size: 32rpx;
  }
  
  .page-subtitle {
    font-size: 12rpx;
  }
  
  .size-grid {
    flex-direction: column;
    align-items: center;
  }
  
  .size-card {
    width: 100%;
    max-width: 280rpx;
  }
  
  .modal-container {
    padding: 16rpx;
  }
}

/* 工具函数 */
.stopPropagation {
  /* 用于阻止事件冒泡的占位类 */
}