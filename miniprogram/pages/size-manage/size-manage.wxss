/* pages/size-manage/size-manage.wxss */

/* 页面容器 */
.container {
  padding: 0;
  width: 100%;
  height: 100vh;
  box-sizing: border-box;
  display: flex;
  flex-direction: column;
}

/* 搜索区域 */
.search-container {
  padding: 16rpx 24rpx;
  background-color: #fff;
  position: relative;
  z-index: 10;
}

.search-box {
  position: relative;
  background-color: #f5f5f5;
  border-radius: 32rpx;
  display: flex;
  align-items: center;
  padding: 0 20rpx;
  height: 72rpx;
}

.search-icon {
  margin-right: 16rpx;
  color: #999;
  font-size: 28rpx;
}

.search-input {
  flex: 1;
  height: 72rpx;
  line-height: 72rpx;
  font-size: 28rpx;
  color: #333;
}

.search-input-placeholder {
  color: #999;
}

.clear-icon {
  padding: 8rpx;
}

/* 操作区域 */
.header-actions {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 16rpx 24rpx;
  background: #fff;
  border-bottom: 1rpx solid #eee;
}

.action-btn {
  background: #07c160;
  color: #fff;
  padding: 12rpx 24rpx;
  border-radius: 8rpx;
  font-size: 28rpx;
  height: 72rpx;
  line-height: 48rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}

.cancel-btn {
  background: #f5f5f5;
  color: #333;
  margin-right: 20rpx;
}

.icon-text {
  margin-left: 8rpx;
}

.action-right {
  display: flex;
}

/* 加载状态 */
.loading-container {
  padding: 40rpx 0;
  text-align: center;
}

/* 空状态 */
.empty-container {
  padding: 120rpx 0;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  color: #999;
}

.empty-icon {
  font-size: 88rpx;
  margin-bottom: 20rpx;
  color: #ddd;
}

.empty-text {
  font-size: 28rpx;
}

/* 尺码列表 */
.size-list-container {
  flex: 1;
  overflow-y: auto;
  padding: 0 24rpx;
  background: #f8f8f8;
}

.size-item {
  background: #fff;
  border-radius: 12rpx;
  margin: 20rpx 0;
  padding: 24rpx;
  position: relative;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.05);
  overflow: hidden;
}

.size-item.sorting {
  cursor: move;
  z-index: 2;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.12);
}

.size-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 16rpx;
}

.size-name {
  font-size: 32rpx;
  font-weight: 500;
  color: #333;
}

.size-status {
  font-size: 22rpx;
  padding: 4rpx 12rpx;
  border-radius: 6rpx;
  background: #e8f7f0;
  color: #07c160;
}

.size-status.disabled {
  background: #f5f5f5;
  color: #999;
}

.size-code {
  font-size: 26rpx;
  color: #666;
  margin-bottom: 8rpx;
  display: flex;
  align-items: center;
}

.code-value {
  margin-left: 12rpx;
  color: #4d88ff;
  font-family: monospace;
}

.copy-icon {
  margin-left: 8rpx;
  font-size: 24rpx;
  color: #999;
  padding: 4rpx;
}

.size-description {
  font-size: 26rpx;
  color: #666;
  margin-top: 8rpx;
  width: 100%;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.size-order {
  font-size: 24rpx;
  color: #999;
  margin-top: 16rpx;
}

.size-actions {
  display: flex;
  justify-content: flex-end;
  margin-top: 16rpx;
  border-top: 1rpx solid #f5f5f5;
  padding-top: 16rpx;
}

.size-action-btn {
  margin-left: 32rpx;
  font-size: 26rpx;
  color: #666;
  background: none;
  border: none;
  padding: 0;
  display: flex;
  align-items: center;
}

.btn-edit {
  color: #4d88ff;
}

.btn-toggle {
  color: #ff9800;
}

.btn-toggle.disabled {
  color: #07c160;
}

.size-action-btn-icon {
  margin-right: 8rpx;
  font-size: 28rpx;
}

.drag-handle {
  position: absolute;
  right: 24rpx;
  top: 50%;
  transform: translateY(-50%);
  color: #ccc;
  font-size: 40rpx;
}

/* 弹窗样式 */
.modal-mask {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: rgba(0, 0, 0, 0.5);
  z-index: 100;
  display: flex;
  align-items: center;
  justify-content: center;
}

.modal-container {
  width: 86%;
  background: #fff;
  border-radius: 12rpx;
  overflow: hidden;
  animation: modalIn 0.3s ease;
}

@keyframes modalIn {
  from {
    transform: translateY(50rpx);
    opacity: 0;
  }
  to {
    transform: translateY(0);
    opacity: 1;
  }
}

.modal-header {
  padding: 24rpx;
  text-align: center;
  font-size: 32rpx;
  font-weight: 500;
  border-bottom: 1rpx solid #f5f5f5;
}

.modal-body {
  padding: 24rpx;
  max-height: 70vh;
  overflow-y: auto;
}

.form-item {
  margin-bottom: 24rpx;
}

.form-label {
  font-size: 28rpx;
  color: #333;
  margin-bottom: 12rpx;
  display: block;
}

.form-input {
  width: 100%;
  height: 80rpx;
  border: 1rpx solid #ddd;
  border-radius: 8rpx;
  font-size: 28rpx;
  padding: 0 20rpx;
  box-sizing: border-box;
}

.form-textarea {
  width: 100%;
  height: 160rpx;
  border: 1rpx solid #ddd;
  border-radius: 8rpx;
  font-size: 28rpx;
  padding: 16rpx 20rpx;
  box-sizing: border-box;
}

.modal-footer {
  display: flex;
  border-top: 1rpx solid #f5f5f5;
}

.modal-btn {
  flex: 1;
  height: 88rpx;
  line-height: 88rpx;
  text-align: center;
  font-size: 30rpx;
}

.btn-cancel {
  color: #666;
  border-right: 1rpx solid #f5f5f5;
}

.btn-confirm {
  color: #07c160;
  font-weight: 500;
}

/* 适配暗黑模式 */
@media (prefers-color-scheme: dark) {
  .container, .size-item, .modal-container, .search-container, .header-actions {
    background: #1f1f1f;
  }
  
  .search-box {
    background: #2c2c2c;
  }
  
  .search-input, .size-name {
    color: #fff;
  }
  
  .size-code, .size-description {
    color: #aaa;
  }
  
  .empty-container, .size-order {
    color: #666;
  }
  
  .empty-icon {
    color: #444;
  }
  
  .size-item {
    box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.2);
  }
  
  .modal-header, .modal-footer, .size-actions {
    border-color: #333;
  }
  
  .form-input, .form-textarea {
    background: #2c2c2c;
    border-color: #444;
    color: #fff;
  }
  
  .btn-cancel, .size-list-container {
    background: #1f1f1f;
  }
}

/* 页面特定样式，其他样式使用app.wxss全局样式 */

.header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 24rpx 30rpx;
  background-color: #ffffff;
  border-bottom: 0.5rpx solid #e5e5ea;
  position: sticky;
  top: 0;
  z-index: 99;
}

.title {
  font-size: 36rpx;
  font-weight: 600;
  color: #1d1d1f;
}

.add-btn {
  min-width: 160rpx;
  text-align: center;
}

/* 列表项样式扩展 */
.list {
  padding: 4rpx 8rpx;
}

.list-item {
  margin-bottom: 8rpx;
  padding: 12rpx 16rpx;
  min-height: 60rpx;
}

.list-item.disabled {
  opacity: 0.7;
}

.list-item-content {
  flex: 1;
  padding-right: 16rpx;
}

.list-item-title {
  font-size: 28rpx;
}

.list-item-order {
  font-size: 24rpx;
  color: #8e8e93;
  margin-top: 8rpx;
}

.list-item-right {
  display: flex;
  flex-direction: column;
  align-items: flex-end;
  min-width: 120rpx;
}

.list-item-right .tag {
  font-size: 20rpx;
  padding: 2rpx 10rpx;
  border-radius: 8rpx;
}

.btn-small {
  font-size: 22rpx;
  padding: 8rpx 20rpx;
  min-width: 60rpx;
  height: 36rpx;
  line-height: 36rpx;
}

/* 弹窗样式扩展 */
.drawer-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 32rpx 32rpx;
  border-bottom: 0.5rpx solid #e5e5ea;
}

.drawer-title {
  font-size: 34rpx;
  font-weight: 600;
  color: #1d1d1f;
}

.drawer-close {
  font-size: 40rpx;
  color: #8e8e93;
  width: 60rpx;
  height: 60rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}

.drawer-body {
  padding: 40rpx 32rpx;
}

/* 表单样式优化 */
.form-group {
  margin-bottom: 32rpx;
}

.form-label {
  display: block;
  font-size: 28rpx;
  font-weight: 500;
  color: #1d1d1f;
  margin-bottom: 12rpx;
  letter-spacing: 0.2rpx;
}

.form-control {
  width: 100%;
  height: 88rpx;
  background-color: rgba(242, 242, 247, 0.8);
  border-radius: 12rpx;
  padding: 0 24rpx;
  font-size: 32rpx;
  color: #1d1d1f;
  transition: background-color 0.2s;
  box-sizing: border-box;
  border: 1rpx solid rgba(0, 0, 0, 0.1);
}

.form-control::placeholder {
  color: #8e8e93;
  font-size: 30rpx;
}

.form-control:focus {
  background-color: rgba(242, 242, 247, 1);
}

.form-textarea {
  width: 100%;
  height: 160rpx;
  background-color: rgba(242, 242, 247, 0.8);
  border-radius: 12rpx;
  padding: 16rpx 24rpx;
  font-size: 32rpx;
  color: #1d1d1f;
  line-height: 1.5;
  transition: background-color 0.2s;
}

.form-textarea::placeholder {
  color: #8e8e93;
  font-size: 30rpx;
}

/* 表单帮助文本 */
.form-helper {
  font-size: 24rpx;
  color: #8e8e93;
  margin-top: 12rpx;
  line-height: 1.4;
  padding-left: 4rpx;
}

/* 通知提示区域 */
.drawer-notice {
  display: flex;
  align-items: flex-start;
  background-color: rgba(0, 122, 255, 0.08);
  padding: 16rpx 20rpx;
  border-radius: 12rpx;
  margin-top: 16rpx;
}

.notice-icon {
  font-size: 32rpx;
  color: #007aff;
  margin-right: 12rpx;
  line-height: 1.2;
}

.notice-text {
  font-size: 26rpx;
  color: #007aff;
  line-height: 1.5;
  flex: 1;
}

.drawer-footer {
  display: flex;
  justify-content: space-between;
  gap: 24rpx;
  padding: 32rpx;
  border-top: 0.5rpx solid #e5e5ea;
}

.drawer-footer .btn {
  flex: 1;
  height: 96rpx;
  font-size: 32rpx;
}

.cancel-btn {
  background-color: rgba(142, 142, 147, 0.12);
  color: #8e8e93;
}

.confirm-btn {
  font-weight: 500;
}

/* 自定义模态弹出动画 */
.drawer.drawer-bottom {
  padding-bottom: env(safe-area-inset-bottom);
  background-color: #ffffff;
}

/* 遮罩层样式 */
.mask {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background-color: rgba(0, 0, 0, 0.4);
  z-index: 900;
  display: flex;
  align-items: center;
  justify-content: center;
  backdrop-filter: blur(5px);
  -webkit-backdrop-filter: blur(5px);
}

/* 抽屉弹窗样式 */
.drawer {
  position: fixed;
  background-color: #ffffff;
  z-index: 1000;
  transition: all 0.3s ease;
}

.drawer.drawer-bottom {
  left: 0;
  bottom: 0;
  width: 100%;
  border-radius: 20rpx 20rpx 0 0;
  transform: translateY(100%);
  overflow: hidden;
  max-height: 90vh;
}

.drawer-show {
  transform: translate(0) !important;
}

