/* pages/color-manage/color-manage.wxss */

/* 页面特定样式，其他样式使用app.wxss全局样式 */

.color-manage-container {
  min-height: 100vh;
  background-color: #f6f8fa;
  padding-bottom: 40rpx;
}

/* 头部样式 */
.header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 24rpx 30rpx;
  background-color: #ffffff;
  border-bottom: 0.5rpx solid #e5e5ea;
  position: sticky;
  top: 0;
  z-index: 99;
}

.title {
  font-size: 36rpx;
  font-weight: 600;
  color: #1d1d1f;
}

.add-btn {
  min-width: 160rpx;
  text-align: center;
}

/* 加载状态 */
.loading-container {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 100rpx 0;
}

.loading-spinner {
  width: 60rpx;
  height: 60rpx;
  border: 4rpx solid #f3f3f3;
  border-top: 4rpx solid #1989fa;
  border-radius: 50%;
  animation: spin 1s linear infinite;
  margin-bottom: 20rpx;
}

@keyframes spin {
  0% { transform: rotate(0deg); }
  100% { transform: rotate(360deg); }
}

.loading-text {
  font-size: 28rpx;
  color: #999;
}

/* 空状态 */
.empty-container {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 100rpx 30rpx;
  text-align: center;
}

.empty-image {
  width: 200rpx;
  height: 200rpx;
  margin-bottom: 30rpx;
}

.empty-text {
  font-size: 32rpx;
  color: #333;
  font-weight: 500;
  margin-bottom: 16rpx;
}

.empty-tips {
  font-size: 28rpx;
  color: #999;
  margin-bottom: 30rpx;
}

.empty-btn {
  padding: 16rpx 32rpx;
  background-color: #1989fa;
  color: #fff;
  font-size: 28rpx;
  border-radius: 8rpx;
}

/* 颜色列表 */
.color-list {
  padding: 20rpx 30rpx;
}

/* 列表项样式扩展 */
.list {
  padding: 4rpx 8rpx;
}

.list-item {
  margin-bottom: 8rpx;
  padding: 12rpx 16rpx;
  min-height: 60rpx;
  position: relative;
  display: flex;
  justify-content: space-between;
  align-items: center;
  border-radius: 16rpx;
  background-color: #ffffff;
  box-shadow: 0 1rpx 10rpx rgba(0, 0, 0, 0.05);
}

.list-item.disabled {
  opacity: 0.7;
}

.list-item-content {
  flex: 1;
  padding-right: 16rpx;
}

.list-item-title {
  font-size: 28rpx;
  color: #1d1d1f;
  font-weight: 500;
}

.list-item-note {
  font-family: SF Mono, Menlo, Monaco, Courier, monospace;
}

.list-item-right {
  display: flex;
  flex-direction: column;
  align-items: flex-end;
  min-width: 120rpx;
}

.list-item-right .tag {
  font-size: 20rpx;
  padding: 2rpx 10rpx;
  border-radius: 8rpx;
}

.btn-small {
  font-size: 22rpx;
  padding: 8rpx 20rpx;
  min-width: 60rpx;
  height: 36rpx;
  line-height: 36rpx;
}

/* 弹窗样式扩展 */
.drawer-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 32rpx 32rpx;
  border-bottom: 0.5rpx solid #e5e5ea;
}

.drawer-title {
  font-size: 34rpx;
  font-weight: 600;
  color: #1d1d1f;
}

.drawer-close {
  font-size: 40rpx;
  color: #8e8e93;
  width: 60rpx;
  height: 60rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}

.drawer-body {
  padding: 40rpx 32rpx;
}

/* 表单样式优化 */
.form-group {
  margin-bottom: 32rpx;
}

.form-label {
  display: block;
  font-size: 28rpx;
  font-weight: 500;
  color: #1d1d1f;
  margin-bottom: 12rpx;
  letter-spacing: 0.2rpx;
}

.form-control {
  width: 100%;
  height: 88rpx;
  background-color: rgba(242, 242, 247, 0.8);
  border-radius: 12rpx;
  padding: 0 24rpx;
  font-size: 32rpx;
  color: #1d1d1f;
  transition: background-color 0.2s;
}

.form-control::placeholder {
  color: #8e8e93;
  font-size: 30rpx;
}

.form-control:focus {
  background-color: rgba(242, 242, 247, 1);
}

/* 表单帮助文本 */
.form-helper {
  font-size: 24rpx;
  color: #8e8e93;
  margin-top: 12rpx;
  line-height: 1.4;
  padding-left: 4rpx;
}

/* 通知提示区域 */
.drawer-notice {
  display: flex;
  align-items: flex-start;
  background-color: rgba(0, 122, 255, 0.08);
  padding: 16rpx 20rpx;
  border-radius: 12rpx;
  margin-bottom: 24rpx;
}

.notice-icon {
  font-size: 32rpx;
  color: #007aff;
  margin-right: 12rpx;
  line-height: 1.2;
}

.notice-text {
  font-size: 26rpx;
  color: #007aff;
  line-height: 1.5;
  flex: 1;
}

.drawer-footer {
  display: flex;
  justify-content: space-between;
  gap: 24rpx;
  padding: 32rpx;
  border-top: 0.5rpx solid #e5e5ea;
}

.drawer-footer .btn {
  flex: 1;
  height: 96rpx;
  font-size: 32rpx;
}

.cancel-btn {
  background-color: rgba(142, 142, 147, 0.12);
  color: #8e8e93;
}

.confirm-btn {
  font-weight: 500;
}

/* 自定义模态弹出动画 */
.drawer.drawer-bottom {
  padding-bottom: env(safe-area-inset-bottom);
  background-color: #ffffff;
}

/* 下拉刷新提示 */
.pull-tip {
  text-align: center;
  color: #999;
  font-size: 24rpx;
  padding: 20rpx 0;
}

/* 弹窗样式 */
.modal-mask {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background-color: rgba(0, 0, 0, 0.5);
  z-index: 999;
}

.modal-dialog {
  position: fixed;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
  width: 600rpx;
  background-color: #fff;
  border-radius: 12rpx;
  overflow: hidden;
  z-index: 1000;
}

.modal-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 30rpx;
  border-bottom: 1rpx solid #eee;
}

.modal-title {
  font-size: 32rpx;
  font-weight: 600;
  color: #333;
}

.modal-close {
  font-size: 40rpx;
  color: #999;
  line-height: 1;
}

.modal-body {
  padding: 30rpx;
}

.form-item {
  margin-bottom: 24rpx;
}

.form-color-input {
  display: flex;
  align-items: center;
  width: 100%;
}

.form-color-input .form-input {
  flex: 1;
}

.form-color-input .color-preview {
  width: 60rpx;
  height: 60rpx;
  border-radius: 6rpx;
  margin: 0 20rpx;
  border: 1rpx solid rgba(0, 0, 0, 0.1);
}

.color-picker-btn {
  padding: 12rpx 24rpx;
  background-color: #1989fa;
  color: #fff;
  font-size: 24rpx;
  border-radius: 6rpx;
  margin-left: 10rpx;
}

.modal-footer {
  display: flex;
  border-top: 1rpx solid #eee;
}

.modal-btn {
  flex: 1;
  height: 90rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 30rpx;
}

.modal-btn.cancel {
  color: #666;
  background-color: #f7f7f7;
}

.modal-btn.confirm {
  color: #fff;
  background-color: #1989fa;
} 