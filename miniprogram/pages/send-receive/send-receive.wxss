page, .page-bg {
  background-color: #f5f5f7;
  min-height: 100vh;
}

.card {
  background-color: #fff;
  border-radius: 18rpx;
  box-shadow: 0 2rpx 10rpx rgba(0,0,0,0.04);
  margin-bottom: 24rpx;
  padding: 0;
}

.tabs-card {
  padding: 0 0 0 0;
  margin-top: 24rpx;
}

.report-card {
  padding: 24rpx 0 0 0;
}

.search-card {
  padding: 0 0 0 0;
}

.order-list-card {
  padding: 0 0 0 0;
}

.tabs {
  display: flex;
  background: #f5f5f7;
  border-radius: 16rpx;
  overflow: hidden;
  margin: 0 24rpx;
}

.tab {
  flex: 1;
  text-align: center;
  padding: 28rpx 0;
  font-size: 32rpx;
  color: #6e6e73;
  background: none;
  border-radius: 16rpx;
  transition: all 0.3s;
}

.tab.active {
  color: #fff;
  font-weight: 600;
  background: linear-gradient(90deg, #34C759 0%, #30B0FF 100%);
  box-shadow: 0 2rpx 8rpx rgba(52,199,89,0.08);
}

.report-entry {
  display: flex;
  justify-content: space-around;
  padding: 24rpx 0 0 0;
}

.report-item {
  display: flex;
  flex-direction: column;
  align-items: center;
  flex: 1;
  padding: 10rpx 0;
}

.report-icon {
  width: 60rpx;
  height: 60rpx;
  margin-bottom: 10rpx;
}

.report-text {
  font-size: 26rpx;
  color: #555;
}

.search-container {
  display: flex;
  align-items: center;
  padding: 20rpx 24rpx;
}

.search-box {
  flex: 1;
  background-color: #f0f0f5;
  border-radius: 20rpx;
  padding: 16rpx 20rpx;
  display: flex;
  align-items: center;
}

.search-icon {
  font-size: 32rpx;
  color: #8e8e93;
  margin-right: 10rpx;
}

.search-input {
  flex: 1;
  font-size: 30rpx;
  height: 40rpx;
  border: none;
  padding: 0;
  color: #1d1d1f;
  background: none;
}

.search-clear {
  font-size: 28rpx;
  color: #8e8e93;
  padding: 0 10rpx;
  background-color: rgba(142, 142, 147, 0.24);
  border-radius: 50%;
  width: 40rpx;
  height: 40rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}

.filter-btn {
  width: 72rpx;
  height: 72rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  background-color: #fff;
  border-radius: 20rpx;
  margin-left: 16rpx;
  box-shadow: 0 2rpx 10rpx rgba(0,0,0,0.04);
}

.filter-icon {
  width: 36rpx;
  height: 36rpx;
}

.order-list {
  flex: 1;
  min-height: 300rpx;
  padding: 0 0 24rpx 0;
}

.order-item-wrapper {
  width: 100%;
  position: relative;
  overflow: hidden;
  margin-bottom: 18rpx;
}

.order-item {
  width: 96%;
  margin: 0 auto;
  background-color: #fff;
  border-radius: 16rpx;
  padding: 24rpx 24rpx 18rpx 24rpx;
  box-shadow: 0 2rpx 8rpx rgba(0,0,0,0.04);
  box-sizing: border-box;
  position: relative;
}

.order-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 16rpx;
  line-height: 1.2;
}

.order-no-small-gray {
  font-size: 28rpx;
  color: #3875FF;
  font-weight: 600;
  flex-shrink: 0;
}

.order-status {
  font-size: 22rpx;
  color: #fff;
  background-color: #FF3B30;
  padding: 6rpx 16rpx;
  border-radius: 20rpx;
  font-weight: 500;
}

.share-icon {
  margin-left: 10rpx;
  width: 36rpx;
  height: 36rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}

.order-factory {
  font-size: 28rpx;
  color: #1d1d1f;
  font-weight: 500;
  margin-bottom: 12rpx;
  line-height: 1.4;
}

.order-details {
  display: flex;
  justify-content: space-around;
  background-color: #f5f5f7;
  border-radius: 12rpx;
  padding: 16rpx 0;
  margin-bottom: 12rpx;
}

.detail-item {
  display: flex;
  flex-direction: column;
  align-items: center;
  flex: 1;
}

.detail-label {
  font-size: 22rpx;
  color: #86868b;
  margin-bottom: 6rpx;
}

.detail-value {
  font-size: 28rpx;
  color: #1d1d1f;
  font-weight: 500;
}

.order-footer {
  display: flex;
  justify-content: space-between;
  align-items: center;
  font-size: 22rpx;
  color: #86868b;
  border-top: 1rpx solid #f5f5f7;
  padding-top: 10rpx;
}

.order-staff {
  display: flex;
  align-items: center;
}

.order-date {
  text-align: right;
}

.empty-list {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 60rpx 0 40rpx 0;
}

.empty-icon {
  width: 120rpx;
  height: 120rpx;
  margin-bottom: 20rpx;
  opacity: 0.5;
}

.empty-text {
  font-size: 28rpx;
  color: #b0b0b0;
}

.add-button {
  position: fixed;
  right: 48rpx;
  bottom: 180rpx;
  width: 100rpx;
  height: 100rpx;
  background-color: #34C759;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  box-shadow: 0 8rpx 16rpx rgba(52,199,89,0.18);
  z-index: 99;
}

.add-icon {
  color: #fff;
  font-size: 60rpx;
  font-weight: 600;
  line-height: 1;
}

/* 筛选栏 */
.filter-bar {
  display: flex;
  padding: 20rpx 30rpx;
  background-color: #fff;
  margin-bottom: 20rpx;
  border-radius: 20rpx;
  align-items: center;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.05);
}

.filter-item {
  display: flex;
  align-items: center;
  margin-right: 30rpx;
  font-size: 28rpx;
  color: #666;
}

.filter-icon {
  margin-right: 10rpx;
}

/* 筛选弹窗 */
.filter-modal {
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  z-index: 1000;
  visibility: hidden;
  transition: visibility 0.3s;
}

.filter-show {
  visibility: visible;
}

.filter-overlay {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  background-color: rgba(0, 0, 0, 0.4);
  opacity: 0;
  transition: opacity 0.3s;
  backdrop-filter: blur(5px);
}

.filter-show .filter-overlay {
  opacity: 1;
}

.filter-content {
  position: absolute;
  bottom: 0;
  left: 0;
  width: 100%;
  background-color: #ffffff;
  border-radius: 24rpx 24rpx 0 0;
  transform: translateY(100%);
  transition: transform 0.3s;
}

.filter-show .filter-content {
  transform: translateY(0);
}

.filter-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 24rpx;
  border-bottom: 1rpx solid #f5f5f7;
}

.filter-title {
  font-size: 34rpx;
  font-weight: 600;
  color: #1d1d1f;
}

.filter-close {
  font-size: 32rpx;
  color: #8e8e93;
  padding: 10rpx;
  width: 60rpx;
  height: 60rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  border-radius: 50%;
}

.filter-close:active {
  background-color: rgba(142, 142, 147, 0.12);
}

.filter-body {
  padding: 24rpx;
  max-height: 70vh;
  overflow-y: auto;
}

.filter-section {
  margin-bottom: 30rpx;
}

.filter-label {
  font-size: 28rpx;
  color: #6e6e73;
  margin-bottom: 16rpx;
  font-weight: 500;
}

.date-range {
  display: flex;
  align-items: center;
  gap: 16rpx;
}

.date-picker {
  flex: 1;
  font-size: 28rpx;
  padding: 16rpx;
  background-color: rgba(142, 142, 147, 0.12);
  border-radius: 12rpx;
  text-align: center;
  color: #1d1d1f;
  height: 72rpx;
  line-height: 40rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}

.date-separator {
  font-size: 28rpx;
  color: #8e8e93;
}

.filter-picker {
  font-size: 28rpx;
  padding: 16rpx;
  background-color: rgba(142, 142, 147, 0.12);
  border-radius: 12rpx;
  color: #8e8e93;
  height: 72rpx;
  line-height: 40rpx;
  display: flex;
  align-items: center;
}

.filter-picker.has-value {
  color: #1d1d1f;
}

.filter-input {
  font-size: 28rpx;
  padding: 16rpx;
  background-color: rgba(142, 142, 147, 0.12);
  border-radius: 12rpx;
  color: #1d1d1f;
  height: 72rpx;
  line-height: 40rpx;
}

.filter-footer {
  display: flex;
  padding: 24rpx;
  border-top: 1rpx solid #f5f5f7;
  gap: 16rpx;
}

.filter-reset, .filter-apply {
  flex: 1;
  height: 88rpx;
  border-radius: 16rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 30rpx;
  font-weight: 500;
}

.filter-reset {
  background-color: rgba(142, 142, 147, 0.12);
  color: #1d1d1f;
}

.filter-apply {
  background-color: #007AFF;
  color: #ffffff;
}

.share-icon-purple {
  background: #a98dfc;
  border-radius: 50%;
  width: 48rpx;
  height: 48rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  margin-left: 10rpx;
  transform: rotate(-45deg);
}

.share-icon-purple image {
  width: 24rpx;
  height: 24rpx;
  transform: rotate(45deg);
}