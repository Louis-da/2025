.container {
  padding: 30rpx;
}

.header {
  margin-bottom: 40rpx;
}

.title {
  font-size: 40rpx;
  font-weight: bold;
}

.section {
  margin-bottom: 40rpx;
  border: 1px solid #eee;
  border-radius: 8rpx;
  padding: 20rpx;
  background-color: #fff;
}

.section-title {
  font-size: 32rpx;
  font-weight: bold;
  margin-bottom: 20rpx;
  padding-bottom: 10rpx;
  border-bottom: 1px solid #eee;
}

.form-item {
  display: flex;
  align-items: center;
  margin-bottom: 20rpx;
}

.label {
  width: 180rpx;
  font-size: 28rpx;
}

.input {
  flex: 1;
  height: 70rpx;
  padding: 0 20rpx;
  border: 1px solid #ddd;
  border-radius: 8rpx;
}

.button-group {
  display: flex;
  flex-direction: column;
  gap: 20rpx;
}

.btn {
  margin: 0;
}

.btn-warning {
  background-color: #ff9800;
  color: white;
}

.btn-danger {
  background-color: #f44336;
  color: white;
}

.logs {
  max-height: 400rpx;
  overflow-y: auto;
}

.log-item {
  font-size: 24rpx;
  padding: 10rpx 0;
  border-bottom: 1px solid #f0f0f0;
}

.log-time {
  color: #999;
  margin-right: 10rpx;
}

.log-message {
  color: #333;
} 