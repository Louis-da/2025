/* AI智能助理 - 苹果简约风格 */
.ai-assistant-container {
  background: linear-gradient(135deg, #a18cd1 0%, #fbc2eb 100%);
  min-height: 100vh;
  padding: 32rpx;
}

.ai-assistant-gradient-bg {
  width: 100vw;
  min-height: 100vh;
  background: linear-gradient(135deg, #a18cd1 0%, #fbc2eb 100%);
}

/* 页面标题 */
.page-header {
  text-align: center;
  margin-bottom: 48rpx;
}

.page-title {
  font-size: 56rpx;
  font-weight: 700;
  color: #1d1d1f;
  margin-bottom: 12rpx;
}

.page-subtitle {
  font-size: 28rpx;
  color: #8e8e93;
  font-weight: 400;
}

/* 模块卡片通用样式 */
.module-card {
  background-color: #ffffff;
  border-radius: 24rpx;
  margin-bottom: 32rpx;
  overflow: hidden;
  box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.06);
}

.module-header {
  display: flex;
  flex-direction: column;
  padding: 32rpx;
  border-bottom: 0.5px solid rgba(60, 60, 67, 0.12);
  position: relative;
}

.header-right {
  position: absolute;
  top: 32rpx;
  right: 32rpx;
  display: flex;
  flex-direction: column;
  align-items: flex-end;
  gap: 12rpx;
}

/* 时间筛选容器 */
.time-filter-container {
  display: flex;
  flex-direction: column;
  gap: 8rpx;
}

.time-filter-buttons {
  display: flex;
  align-items: center;
  gap: 6rpx;
  flex-wrap: wrap;
  justify-content: flex-end;
}

.time-filter-btn {
  font-size: 20rpx;
  color: #8e8e93;
  padding: 8rpx 12rpx;
  background-color: #f2f2f7;
  border-radius: 12rpx;
  border: 1px solid rgba(60, 60, 67, 0.08);
  font-weight: 400;
  transition: all 0.2s ease;
}

.time-filter-btn.active {
  color: #007aff;
  background-color: rgba(0, 122, 255, 0.1);
  border-color: rgba(0, 122, 255, 0.3);
  font-weight: 500;
}

.time-filter-btn.custom {
  color: #ff9500;
}

.time-filter-btn.custom.active {
  color: #ff9500;
  background-color: rgba(255, 149, 0, 0.1);
  border-color: rgba(255, 149, 0, 0.3);
}

.mode-switch {
  display: flex;
  align-items: center;
  gap: 8rpx;
  padding: 12rpx 20rpx;
  background-color: #f2f2f7;
  border-radius: 20rpx;
  border: 1px solid rgba(60, 60, 67, 0.12);
}

.mode-text {
  font-size: 24rpx;
  color: #007aff;
  font-weight: 500;
}

.switch-icon {
  font-size: 20rpx;
  color: #007aff;
}

.count-text {
  font-size: 28rpx;
  color: #ff9500;
  font-weight: 700;
}

.module-icon {
  font-size: 48rpx;
  margin-right: 24rpx;
}

.module-info {
  display: flex;
  align-items: center;
  margin-bottom: 16rpx;
}

.module-title {
  font-size: 36rpx;
  font-weight: 600;
  color: #1d1d1f;
  display: block;
  margin-bottom: 8rpx;
}

.module-desc {
  font-size: 26rpx;
  color: #8e8e93;
  display: block;
}

.bottom-info {
  display: flex;
  align-items: center;
  justify-content: space-between;
  margin-top: 16rpx;
}

.rule-text {
  font-size: 22rpx;
  color: #8e8e93;
  font-weight: 400;
}

.module-content {
  padding: 32rpx;
}

/* 异常警报模块（损耗率排行榜） */
.alert-module .alert-icon {
  color: #007aff;
}

.alert-list {
  display: flex;
  flex-direction: column;
  gap: 16rpx;
}

.alert-item {
  display: flex;
  align-items: flex-start;
  padding: 24rpx;
  background-color: #f8f9fa;
  border-radius: 16rpx;
  border-left: 6rpx solid #8e8e93;
  position: relative;
}

.alert-item.high {
  border-left-color: #ff3b30;
  background-color: #fff5f5;
}

.alert-item.medium {
  border-left-color: #ff9500;
  background-color: #fff8f0;
}

.alert-item.low {
  border-left-color: #34c759;
  background-color: #f0fff4;
}

.rank-indicator {
  width: 48rpx;
  height: 48rpx;
  border-radius: 50%;
  background: linear-gradient(135deg, #007aff 0%, #5ac8fa 100%);
  display: flex;
  align-items: center;
  justify-content: center;
  margin-right: 20rpx;
  flex-shrink: 0;
}

.rank-number {
  font-size: 24rpx;
  font-weight: 700;
  color: #ffffff;
}

.alert-content {
  flex: 1;
}

.product-info {
  display: flex;
  flex-direction: column;
  align-items: flex-start;
  margin-bottom: 8rpx;
  position: relative;
}

.product-no {
  font-size: 28rpx;
  font-weight: 700;
  color: #007aff;
  margin-bottom: 4rpx;
}

.product-name {
  font-size: 30rpx;
  font-weight: 600;
  color: #1d1d1f;
  margin-right: 16rpx;
}

.product-name.small {
  font-size: 24rpx;
  font-weight: 400;
  color: #8e8e93;
}

.loss-rate {
  font-size: 28rpx;
  font-weight: 700;
  padding: 4rpx 12rpx;
  border-radius: 12rpx;
  background-color: #f2f2f7;
  color: #8e8e93;
  position: absolute;
  top: 0;
  right: 0;
}

.loss-rate.high {
  background-color: #ff3b30;
  color: #ffffff;
}

.loss-rate.medium {
  background-color: #ff9500;
  color: #ffffff;
}

.loss-rate.red {
  background: #ff5252;
  color: #fff;
}

.loss-rate.orange {
  background: #ff9800;
  color: #fff;
}

.loss-rate.yellow {
  background: #ffeb3b;
  color: #333;
}

.loss-rate.green {
  background: #4caf50;
  color: #fff;
}

.alert-desc {
  font-size: 26rpx;
  color: #8e8e93;
  line-height: 1.4;
  display: block;
  margin-bottom: 12rpx;
}

.alert-time {
  font-size: 24rpx;
  color: #c7c7cc;
  display: block;
}

/* 货品图片容器 */
.product-image-container {
  width: 80rpx;
  height: 80rpx;
  margin-right: 20rpx;
  flex-shrink: 0;
}

.product-image {
  width: 100%;
  height: 100%;
  border-radius: 12rpx;
  background-color: #f8f9fa;
}

/* 工厂图标容器 */
.factory-icon-container {
  width: 80rpx;
  height: 80rpx;
  margin-right: 20rpx;
  flex-shrink: 0;
  display: flex;
  align-items: center;
  justify-content: center;
  background-color: #f8f9fa;
  border-radius: 12rpx;
}

.factory-icon {
  font-size: 40rpx;
}

/* 工厂模式底部行 */
.factory-bottom-row {
  display: flex;
  align-items: center;
  justify-content: space-between;
  margin-top: 8rpx;
}

.product-count {
  font-size: 22rpx;
  color: #007aff;
  font-weight: 500;
  background-color: rgba(0, 122, 255, 0.1);
  padding: 4rpx 8rpx;
  border-radius: 8rpx;
}

.factory-count {
  font-size: 22rpx;
  color: #34c759;
  font-weight: 500;
  background-color: rgba(52, 199, 89, 0.1);
  padding: 4rpx 8rpx;
  border-radius: 8rpx;
}

/* 重量信息 */
.weight-info {
  display: flex;
  flex-wrap: wrap;
  gap: 16rpx;
  margin: 12rpx 0;
}

.weight-info-row {
  display: flex;
  align-items: center;
  gap: 12rpx;
  margin: 12rpx 0;
}

.weight-item {
  font-size: 24rpx;
  color: #8e8e93;
  background-color: #f2f2f7;
  padding: 6rpx 12rpx;
  border-radius: 8rpx;
}

.weight-item.loss {
  color: #ff3b30;
  background-color: #fff5f5;
}

/* 工厂信息 */
.factory-info {
  display: flex;
  align-items: center;
  justify-content: space-between;
  margin-bottom: 8rpx;
}

.factory-name {
  font-size: 30rpx;
  font-weight: 600;
  color: #1d1d1f;
  flex: 1;
  margin-right: 16rpx;
}

/* 活跃排行模块 */
.trend-module .trend-icon {
  color: #007aff;
}

.active-section {
  margin-bottom: 32rpx;
}

.active-section:last-child {
  margin-bottom: 0;
}

.section-header {
  margin-bottom: 24rpx;
  padding-bottom: 20rpx;
  border-bottom: 0.5px solid rgba(60, 60, 67, 0.12);
}

.section-title-row {
  display: flex;
  align-items: center;
  justify-content: space-between;
  margin-bottom: 8rpx;
}

.section-title {
  font-size: 30rpx;
  font-weight: 700;
  color: #1d1d1f;
}

.section-count {
  font-size: 20rpx;
  font-weight: 600;
  color: #007aff;
  background-color: rgba(0, 122, 255, 0.1);
  padding: 6rpx 12rpx;
  border-radius: 12rpx;
}

.section-desc {
  font-size: 24rpx;
  color: #8e8e93;
  font-weight: 400;
}

.active-list {
  display: flex;
  flex-direction: column;
  gap: 12rpx;
}

.active-item {
  background: white;
  border-radius: 12rpx;
  padding: 20rpx;
  margin-bottom: 16rpx;
  box-shadow: 0 2rpx 8rpx rgba(0,0,0,0.1);
  border-left: 4rpx solid #007aff;
  position: relative;
}

.active-item.top-item {
  background: linear-gradient(135deg, #fff9f0 0%, #ffffff 100%);
  border-color: rgba(255, 149, 0, 0.2);
}

.active-item.top-item::before {
  content: '';
  position: absolute;
  left: 0;
  top: 0;
  bottom: 0;
  width: 6rpx;
  background: linear-gradient(180deg, #ff9500 0%, #ffb84d 100%);
}

.active-rank {
  width: 48rpx;
  height: 48rpx;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  margin-right: 20rpx;
  flex-shrink: 0;
  position: relative;
}

.rank-1 {
  background: linear-gradient(135deg, #ff9500 0%, #ffb84d 100%);
}

.rank-2 {
  background: linear-gradient(135deg, #8e8e93 0%, #aeaeb2 100%);
}

.rank-3 {
  background: linear-gradient(135deg, #cd7f32 0%, #daa520 100%);
}

.rank-4, .rank-5 {
  background: linear-gradient(135deg, #007aff 0%, #5ac8fa 100%);
}

.rank-number {
  font-size: 22rpx;
  font-weight: 700;
  color: #ffffff;
  position: absolute;
}

.rank-medal {
  font-size: 24rpx;
  position: absolute;
  top: -8rpx;
  right: -8rpx;
}

.active-content {
  flex: 1;
  display: flex;
  flex-direction: column;
  gap: 8rpx;
}

.active-main-info {
  display: flex;
  flex-direction: column;
  gap: 4rpx;
}

.active-name {
  font-size: 28rpx;
  font-weight: 600;
  color: #1d1d1f;
  line-height: 1.3;
}

.active-code {
  font-size: 22rpx;
  color: #8e8e93;
  font-weight: 500;
}

.active-sub-info {
  display: flex;
  align-items: center;
  gap: 12rpx;
}

.factory-info, .product-info {
  font-size: 20rpx;
  color: #34c759;
  background-color: rgba(52, 199, 89, 0.1);
  padding: 4rpx 8rpx;
  border-radius: 8rpx;
  font-weight: 500;
}

.active-stats {
  display: flex;
  flex-direction: column;
  align-items: flex-end;
  gap: 8rpx;
  min-width: 120rpx;
}

.stat-item {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 8rpx 12rpx;
  border-radius: 12rpx;
  min-width: 80rpx;
}

.stat-item.primary {
  background-color: rgba(0, 122, 255, 0.1);
  border: 1px solid rgba(0, 122, 255, 0.2);
}

.stat-item.secondary {
  background-color: rgba(142, 142, 147, 0.1);
  border: 1px solid rgba(142, 142, 147, 0.2);
}

.stat-value {
  font-size: 26rpx;
  font-weight: 700;
  line-height: 1.2;
}

.stat-item.primary .stat-value {
  color: #007aff;
}

.stat-item.secondary .stat-value {
  color: #1d1d1f;
}

.stat-label {
  font-size: 18rpx;
  font-weight: 500;
  color: #8e8e93;
  margin-top: 2rpx;
}

.section-footer {
  text-align: center;
  padding: 40rpx 20rpx;
}

.empty-hint {
  font-size: 24rpx;
  color: #8e8e93;
  font-style: italic;
}

/* 智能建议模块 */
.suggestion-module .suggestion-icon {
  color: #ff9500;
}

.suggestion-list {
  display: flex;
  flex-direction: column;
  gap: 24rpx;
}

.suggestion-item {
  display: flex;
  align-items: flex-start;
  padding: 24rpx;
  background-color: #f8f9fa;
  border-radius: 16rpx;
  border-left: 6rpx solid #8e8e93;
}

.suggestion-item.high {
  border-left-color: #ff3b30;
  background-color: #fff5f5;
}

.suggestion-item.medium {
  border-left-color: #ff9500;
  background-color: #fff8f0;
}

.suggestion-item.low {
  border-left-color: #34c759;
  background-color: #f0fff4;
}

.suggestion-item .suggestion-icon {
  font-size: 32rpx;
  margin-right: 20rpx;
  margin-top: 4rpx;
  flex-shrink: 0;
}

.suggestion-content {
  flex: 1;
}

.suggestion-title {
  font-size: 30rpx;
  font-weight: 600;
  color: #1d1d1f;
  display: block;
  margin-bottom: 8rpx;
}

.suggestion-desc {
  font-size: 26rpx;
  color: #8e8e93;
  line-height: 1.4;
  display: block;
  margin-bottom: 20rpx;
}

.suggestion-actions {
  display: flex;
  gap: 16rpx;
}

.action-btn {
  padding: 12rpx 24rpx;
  border-radius: 12rpx;
  font-size: 26rpx;
  font-weight: 500;
  text-align: center;
  background-color: #007aff;
  color: #ffffff;
}

.action-btn.secondary {
  background-color: #f2f2f7;
  color: #8e8e93;
}

/* 空状态 */
.empty-state {
  text-align: center;
  padding: 60rpx 32rpx;
}

.empty-icon {
  font-size: 80rpx;
  margin-bottom: 24rpx;
  opacity: 0.6;
}

.empty-text {
  font-size: 32rpx;
  font-weight: 600;
  color: #1d1d1f;
  display: block;
  margin-bottom: 12rpx;
}

.empty-desc {
  font-size: 26rpx;
  color: #8e8e93;
  display: block;
}

/* 刷新按钮 */
.refresh-section {
  text-align: center;
  margin-top: 32rpx;
  padding-bottom: 32rpx;
}

.refresh-btn {
  background-color: #007aff;
  color: #ffffff;
  border-radius: 16rpx;
  padding: 24rpx 48rpx;
  font-size: 30rpx;
  font-weight: 600;
  border: none;
  display: inline-flex;
  align-items: center;
  gap: 12rpx;
}

.refresh-btn::after {
  border: none;
}

.refresh-icon {
  font-size: 28rpx;
}

/* 详情弹窗 */
.detail-modal {
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  background-color: rgba(0, 0, 0, 0.5);
  display: flex;
  align-items: center;
  justify-content: center;
  z-index: 1000;
}

.modal-content {
  width: 90%;
  max-width: 600rpx;
  max-height: 80%;
  background-color: #ffffff;
  border-radius: 24rpx;
  overflow: hidden;
}

.modal-header {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 32rpx;
  border-bottom: 0.5px solid rgba(60, 60, 67, 0.12);
}

.modal-title {
  font-size: 32rpx;
  font-weight: 600;
  color: #1d1d1f;
}

.modal-close {
  font-size: 32rpx;
  color: #8e8e93;
  padding: 8rpx;
}

.modal-body {
  max-height: 600rpx;
  padding: 24rpx;
}

.detail-item {
  display: flex;
  align-items: center;
  padding: 20rpx;
  margin-bottom: 16rpx;
  background-color: #f8f9fa;
  border-radius: 16rpx;
}

.detail-rank {
  width: 48rpx;
  height: 48rpx;
  border-radius: 50%;
  background: linear-gradient(135deg, #007aff 0%, #5ac8fa 100%);
  display: flex;
  align-items: center;
  justify-content: center;
  margin-right: 20rpx;
  flex-shrink: 0;
  font-size: 24rpx;
  font-weight: 700;
  color: #ffffff;
}

.detail-content {
  flex: 1;
}

.detail-name {
  font-size: 28rpx;
  font-weight: 600;
  color: #1d1d1f;
  margin-bottom: 8rpx;
}

.detail-info {
  display: flex;
  align-items: center;
  gap: 16rpx;
  flex-wrap: wrap;
}

.detail-loss-rate {
  font-size: 24rpx;
  font-weight: 700;
  padding: 4rpx 12rpx;
  border-radius: 12rpx;
  background-color: #f2f2f7;
  color: #8e8e93;
}

.detail-loss-rate.high {
  background-color: #ff3b30;
  color: #ffffff;
}

.detail-loss-rate.medium {
  background-color: #ff9500;
  color: #ffffff;
}

.detail-weight {
  font-size: 22rpx;
  color: #8e8e93;
  background-color: #f2f2f7;
  padding: 4rpx 8rpx;
  border-radius: 8rpx;
}

/* 响应式设计 */
@media (max-width: 750rpx) {
  .ai-assistant-container {
    padding: 24rpx;
  }
  
  .page-title {
    font-size: 48rpx;
  }
  
  .module-header {
    padding: 24rpx;
  }
  
  .module-content {
    padding: 24rpx;
  }
  
  .module-title {
    font-size: 32rpx;
  }
  
  .module-desc {
    font-size: 24rpx;
  }
}

/* 深色模式支持 */
@media (prefers-color-scheme: dark) {
  .ai-assistant-gradient-bg {
    background: linear-gradient(135deg, #3a235c 0%, #5e366e 100%);
  }
  .ai-assistant-container {
    background: transparent;
  }
  
  .module-card {
    background-color: #1c1c1e;
  }
  
  .page-title,
  .module-title,
  .alert-title,
  .suggestion-title,
  .trend-label,
  .empty-text {
    color: #ffffff;
  }
  
  .module-header {
    border-bottom-color: rgba(84, 84, 88, 0.6);
  }
  
  .alert-item,
  .suggestion-item,
  .trend-chart {
    background-color: #2c2c2e;
  }
  
  .action-btn.secondary {
    background-color: #2c2c2e;
    color: #ffffff;
  }
}

/* 自定义时间筛选弹窗 */
.time-filter-modal {
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  background-color: rgba(0, 0, 0, 0.5);
  display: flex;
  align-items: center;
  justify-content: center;
  z-index: 1001;
}

.time-modal-content {
  width: 90%;
  max-width: 500rpx;
  background-color: #ffffff;
  border-radius: 24rpx;
  overflow: hidden;
}

.time-modal-header {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 32rpx;
  border-bottom: 0.5px solid rgba(60, 60, 67, 0.12);
}

.time-modal-title {
  font-size: 32rpx;
  font-weight: 600;
  color: #1d1d1f;
}

.time-modal-close {
  font-size: 32rpx;
  color: #8e8e93;
  padding: 8rpx;
}

.time-modal-body {
  padding: 32rpx;
}

.time-input-section {
  margin-bottom: 32rpx;
}

.time-input-group {
  display: flex;
  flex-direction: column;
  margin-bottom: 24rpx;
}

.time-label {
  font-size: 28rpx;
  color: #1d1d1f;
  margin-bottom: 12rpx;
  font-weight: 500;
}

.time-picker {
  padding: 20rpx 24rpx;
  background-color: #f2f2f7;
  border-radius: 16rpx;
  border: 1px solid rgba(60, 60, 67, 0.12);
  font-size: 30rpx;
  color: #1d1d1f;
  min-height: 48rpx;
  display: flex;
  align-items: center;
}

.time-modal-footer {
  display: flex;
  gap: 16rpx;
  margin-top: 32rpx;
}

.time-cancel-btn,
.time-confirm-btn {
  flex: 1;
  padding: 20rpx;
  border-radius: 16rpx;
  font-size: 30rpx;
  font-weight: 500;
  text-align: center;
  border: none;
}

.time-cancel-btn {
  background-color: #f2f2f7;
  color: #8e8e93;
}

.time-confirm-btn {
  background-color: #007aff;
  color: #ffffff;
}

.time-cancel-btn::after,
.time-confirm-btn::after {
  border: none;
}

/* 工厂模式下工厂名样式 */
.factory-mode-factory-name {
  font-size: 28rpx;
  color: #1976d2;
  font-weight: 500;
  line-height: 1.2;
  word-break: break-all;
}

/* 科学活跃度指标样式 */
.scientific-metrics {
  margin: 12rpx 0;
  padding: 16rpx;
  background: #f8f9fa;
  border-radius: 8rpx;
  border-left: 4rpx solid #007aff;
}

.metric-group {
  display: flex;
  justify-content: space-between;
  margin-bottom: 12rpx;
}

.metric-item {
  flex: 1;
  text-align: center;
  padding: 8rpx;
  background: white;
  border-radius: 6rpx;
  margin: 0 4rpx;
  box-shadow: 0 1rpx 3rpx rgba(0,0,0,0.1);
}

.metric-label {
  display: block;
  font-size: 22rpx;
  color: #666;
  margin-bottom: 4rpx;
}

.metric-value {
  display: block;
  font-size: 24rpx;
  font-weight: 600;
  color: #333;
}

.completion-bar {
  margin-top: 8rpx;
}

.completion-info {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 6rpx;
}

.completion-label {
  font-size: 22rpx;
  color: #666;
}

.completion-percent {
  font-size: 24rpx;
  font-weight: 600;
  color: #007aff;
}

.progress-bar {
  height: 8rpx;
  background: #e9ecef;
  border-radius: 4rpx;
  overflow: hidden;
}

.progress-fill {
  height: 100%;
  background: linear-gradient(90deg, #007aff 0%, #34c759 100%);
  border-radius: 4rpx;
  transition: width 0.3s ease;
}

.active-item-header {
  display: flex;
  align-items: center;
  margin-bottom: 12rpx;
  margin-left: 20rpx;
}

.active-item-image {
  width: 60rpx;
  height: 60rpx;
  border-radius: 8rpx;
  margin-right: 16rpx;
  background: #f0f0f0;
}

.factory-icon {
  width: 60rpx;
  height: 60rpx;
  line-height: 60rpx;
  text-align: center;
  font-size: 32rpx;
  background: #e3f2fd;
  border-radius: 8rpx;
  margin-right: 16rpx;
}

.active-item-info {
  flex: 1;
  min-width: 0;
}

.active-item-title {
  display: block;
  font-size: 26rpx;
  font-weight: 600;
  color: #333;
  margin-bottom: 4rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.active-item-subtitle {
  display: block;
  font-size: 22rpx;
  color: #999;
  margin-bottom: 8rpx;
}

.active-item-score {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  text-align: center;
  min-width: 80rpx;
}

.score-value {
  font-size: 24rpx;
  font-weight: 700;
  color: #007aff;
  line-height: 1.2;
  margin-bottom: 2rpx;
}

.score-label {
  font-size: 20rpx;
  color: #666;
  line-height: 1.2;
}

.active-item-details {
  display: flex;
  flex-wrap: wrap;
  gap: 16rpx;
  margin-top: 12rpx;
  padding-top: 12rpx;
  border-top: 1rpx solid #eee;
}

.detail-text {
  font-size: 22rpx;
  color: #666;
  background: #f8f9fa;
  padding: 4rpx 8rpx;
  border-radius: 4rpx;
}

/* 左上角排名徽章 */
.rank-badge {
  position: absolute;
  top: 8rpx;
  left: 8rpx;
  z-index: 10;
}

.rank-badge .rank-number {
  font-size: 28rpx;
  font-weight: 700;
  color: #007aff;
  background: #e3f2fd;
  width: 48rpx;
  height: 48rpx;
  line-height: 48rpx;
  text-align: center;
  border-radius: 50%;
  display: block;
  box-shadow: 0 2rpx 6rpx rgba(0,122,255,0.2);
} 