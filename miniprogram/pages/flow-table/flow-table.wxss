.container {
  padding: 24rpx;
  background-color: #f5f5f7;
  min-height: 100vh;
}

/* 搜索区域样式 */
.search-section {
  display: flex;
  margin-bottom: 24rpx;
  align-items: center;
  background-color: #ffffff;
  border-radius: 16rpx;
  padding: 16rpx;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.05);
}

.search-input {
  flex: 1;
  border: none;
  padding: 16rpx 20rpx;
  margin-right: 16rpx;
  background-color: #f2f2f7;
  border-radius: 12rpx;
  font-size: 28rpx;
}

.search-btn {
  background-color: #0071e3;
  color: white;
  padding: 12rpx 24rpx;
  border-radius: 12rpx;
  font-size: 28rpx;
  font-weight: 500;
  border: none;
  min-width: 120rpx;
}

/* 筛选标签区域 */
.filter-tags {
  display: flex;
  flex-wrap: wrap;
  gap: 16rpx;
  margin-bottom: 24rpx;
}

.filter-tag {
  display: flex;
  align-items: center;
  background-color: #f2f2f7;
  padding: 12rpx 16rpx;
  border-radius: 12rpx;
  font-size: 24rpx;
  color: #0071e3;
}

.tag-close {
  margin-left: 8rpx;
  font-size: 28rpx;
  color: #86868b;
  font-weight: bold;
}

/* 查询区域样式 */
.query-section {
  background-color: #ffffff;
  border-radius: 16rpx;
  padding: 24rpx;
  margin-bottom: 24rpx;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.05);
}

.query-item {
  margin-bottom: 20rpx;
}

.query-label {
  font-size: 28rpx;
  color: #86868b;
  margin-bottom: 10rpx;
}

.query-input-wrapper {
  height: 88rpx;
  position: relative;
}

.query-input {
  height: 88rpx;
  background-color: #f5f5f7;
  border-radius: 12rpx;
  padding: 0 24rpx;
  box-sizing: border-box;
  display: flex;
  align-items: center;
  justify-content: space-between;
  font-size: 28rpx;
  color: #1d1d1f;
}

.query-btn-area {
  margin-top: 30rpx;
  display: flex;
  justify-content: center;
}

.query-btn {
  width: 80%;
  height: 88rpx;
  background-color: #0071e3;
  color: #ffffff;
  border-radius: 12rpx;
  font-size: 30rpx;
  font-weight: 500;
  display: flex;
  align-items: center;
  justify-content: center;
}

/* 表格容器样式调整，支持滚动 */
.flow-table-container {
  background-color: #ffffff;
  border-radius: 16rpx;
  box-shadow: 0 1rpx 8rpx rgba(0, 0, 0, 0.03); /* 更柔和的阴影 */
  overflow: hidden;
  margin-bottom: 24rpx;
  max-height: 800rpx; /* 控制最大高度，超出部分可滚动 */
  white-space: nowrap; /* 防止表格内容换行 */
  min-width: 100%; /* 确保可以横向滚动 */
  width: 100%;
  -webkit-overflow-scrolling: touch; /* 增加滑动惯性 */
  padding-bottom: 180rpx; /* 底部预留空间，避免被底部操作区域遮挡 */
}

/* 美化滚动条 */
::-webkit-scrollbar {
  width: 6rpx;
  height: 6rpx;
}

::-webkit-scrollbar-thumb {
  background-color: rgba(0, 0, 0, 0.1);
  border-radius: 3rpx;
}

::-webkit-scrollbar-track {
  background-color: rgba(0, 0, 0, 0.02);
}

/* 表格标题 - 苹果风格 */
.table-title {
  font-size: 32rpx;
  font-weight: 600;
  text-align: center;
  padding: 24rpx 0;
  color: #1d1d1f;
  border-bottom: 0.5px solid rgba(60, 60, 67, 0.1); /* 更细、更淡的分隔线 */
  margin-bottom: 4rpx; /* 添加间距 */
}

/* 表格行 - 苹果风格 */
.table-row {
  display: flex;
  min-width: 800rpx; /* 确保横向内容不会因为太长而断开 */
  border-bottom: 1rpx solid #f5f5f7;
  background-color: #ffffff;
}

.table-header .table-row {
  background-color: #f5f5f7;
  font-weight: 500;
  border-bottom: 0.5px solid rgba(60,60,67,0.1);
}

/* 表格单元格 - 苹果风格 */
.table-cell {
  display: flex;
  align-items: center;
  box-sizing: border-box;
  font-size: 20rpx;
  font-weight: 500;
  min-width: 120rpx;
  width: 120rpx;
  padding: 0 16rpx 0 0;
}

.table-cell:last-child {
  border-right: none;
}

/* 日期单元格 */
.date-cell {
  display: flex;
  align-items: center;
  justify-content: center;
  min-width: 140rpx;
  width: 140rpx;
  box-sizing: border-box;
  text-align: center;
  font-size: 20rpx;
  font-weight: 500;
  padding: 0;
}

/* 工厂单元格 */
.factory-cell {
  display: flex;
  align-items: center;
  justify-content: flex-end; /* 将内容靠右显示 */
  min-width: 120rpx;
  width: 120rpx;
  box-sizing: border-box;
  text-align: right;
  font-size: 20rpx;
  font-weight: 500;
  padding-right: 20rpx;
}

.cell-content {
  text-align: right; /* 将文本靠右对齐 */
}

/* 人员单元格 - 改为工厂单元格，右对齐 */
.person-cell {
  min-width: 90rpx; /* 减小最小宽度 */
  width: 10%;
  flex-shrink: 0;
  text-align: right; /* 靠右对齐 */
  padding-right: 16rpx; /* 增加右边距 */
