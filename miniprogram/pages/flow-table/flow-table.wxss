  overflow: hidden;
}

.factory-item .list-item-info {
  display: flex;
  flex-direction: column;
  gap: 4rpx;
}

.factory-phone, .factory-address {
  font-size: 24rpx;
  color: #666;
  white-space: nowrap;
  text-overflow: ellipsis;
  overflow: hidden;
}

.select-check {
  position: absolute;
  right: 24rpx;
  top: 50%;
  transform: translateY(-50%);
  font-size: 32rpx;
  color: #007aff;
  font-weight: bold;
}

.empty-search {
  padding: 60rpx 30rpx;
  text-align: center;
}

.empty-text {
