/* 苹果简约风格 - 收发流水表 */
.container {
  background-color: #f2f2f7;
  min-height: 100vh;
  padding: 0;
}

/* 筛选区域 */
.filter-section {
  background-color: #ffffff;
  margin: 20rpx 32rpx;
  border-radius: 20rpx;
  padding: 32rpx;
  box-shadow: 0 2rpx 16rpx rgba(0, 0, 0, 0.04);
}

.filter-item {
  margin-bottom: 24rpx;
}

.filter-item:last-child {
  margin-bottom: 0;
}

.filter-input-wrapper {
  position: relative;
}

.filter-input {
  height: 88rpx;
  background-color: #f2f2f7;
  border-radius: 16rpx;
  padding: 0 32rpx;
  display: flex;
  align-items: center;
  justify-content: space-between;
  font-size: 32rpx;
  color: #1d1d1f;
  transition: all 0.2s ease;
}

.filter-input.has-value {
  background-color: #e8f4fd;
  color: #007aff;
}

.input-text {
  flex: 1;
}

.input-icon {
  font-size: 24rpx;
  color: #8e8e93;
  margin-left: 16rpx;
}

/* 日期范围 */
.date-range {
  display: flex;
  align-items: center;
  gap: 16rpx;
}

.date-picker {
  flex: 1;
}

.date-separator {
  font-size: 28rpx;
  color: #8e8e93;
  padding: 0 8rpx;
}

/* 操作按钮 */
.filter-actions {
  display: flex;
  gap: 16rpx;
  margin-top: 32rpx;
}

.query-btn {
  flex: 1;
  height: 88rpx;
  background-color: #007aff;
  color: #ffffff;
  border-radius: 16rpx;
  font-size: 32rpx;
  font-weight: 600;
  border: none;
  display: flex;
  align-items: center;
  justify-content: center;
}

.query-btn::after {
  border: none;
}

.clear-btn {
  flex: 1;
  height: 88rpx;
  background-color: #f2f2f7;
  color: #007aff;
  border-radius: 16rpx;
  font-size: 32rpx;
  font-weight: 500;
  border: none;
  display: flex;
  align-items: center;
  justify-content: center;
}

.clear-btn::after {
  border: none;
}

/* 活跃筛选标签 */
.active-filters {
  display: flex;
  flex-wrap: wrap;
  gap: 16rpx;
  margin: 0 32rpx 20rpx 32rpx;
}

.filter-tag {
  display: flex;
  align-items: center;
  background-color: #e8f4fd;
  color: #007aff;
  padding: 12rpx 20rpx;
  border-radius: 32rpx;
  font-size: 26rpx;
  font-weight: 500;
}

.tag-close {
  margin-left: 12rpx;
  font-size: 32rpx;
  color: #007aff;
  font-weight: 600;
  width: 32rpx;
  height: 32rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  border-radius: 50%;
  background-color: rgba(0, 122, 255, 0.1);
}

/* 流水记录列表 */
.records-list {
  padding: 0 2.5% 32rpx 2.5%;
  width: 100%;
  box-sizing: border-box;
}

.record-card {
  background-color: #ffffff;
  border-radius: 20rpx;
  margin-bottom: 20rpx;
  overflow: hidden;
  box-shadow: 0 2rpx 16rpx rgba(0, 0, 0, 0.04);
  width: 95%;
  margin-left: auto;
  margin-right: auto;
}

.card-header {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 20rpx 24rpx;
  border-bottom: 0.5px solid rgba(60, 60, 67, 0.12);
}

.header-left {
  display: flex;
  align-items: center;
  gap: 16rpx;
}

.record-type {
  padding: 8rpx 20rpx;
  border-radius: 32rpx;
  font-size: 22rpx;
  font-weight: 600;
}

.send-type {
  background-color: #e8f4fd;
  color: #007aff;
}

.receive-type {
  background-color: #f0f9ff;
  color: #34c759;
}

.order-no {
  font-size: 20rpx;
  color: #8e8e93;
  font-weight: 400;
  background-color: #f2f2f7;
  padding: 4rpx 12rpx;
  border-radius: 8rpx;
}

.record-date {
  font-size: 24rpx;
  color: #8e8e93;
  font-weight: 500;
}

/* 卡片内容 */
.card-content {
  padding: 16rpx 20rpx 20rpx 20rpx;
}

.content-row {
  display: flex;
  margin-bottom: 12rpx;
  gap: 8rpx;
}

.content-row:last-child {
  margin-bottom: 0;
}

.field-group {
  flex: 1;
  display: flex;
  flex-direction: column;
  gap: 6rpx;
}

.field-group-quarter {
  flex: 1;
  display: flex;
  flex-direction: column;
  gap: 4rpx;
  min-width: 0; /* 防止内容溢出 */
}

.field-label {
  font-size: 18rpx;
  color: #8e8e93;
  font-weight: 500;
}

.field-value {
  font-size: 22rpx;
  color: #1d1d1f;
  font-weight: 600;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

/* 空状态 */
.empty-state {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 120rpx 32rpx;
  text-align: center;
}

.empty-icon {
  font-size: 120rpx;
  margin-bottom: 32rpx;
  opacity: 0.6;
}

.empty-title {
  font-size: 36rpx;
  font-weight: 600;
  color: #1d1d1f;
  margin-bottom: 16rpx;
}

.empty-desc {
  font-size: 28rpx;
  color: #8e8e93;
  line-height: 1.5;
}

/* 货品选择弹窗 */
.modal-overlay {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background-color: rgba(0, 0, 0, 0.4);
  display: flex;
  align-items: center;
  justify-content: center;
  z-index: 1000;
  padding: 32rpx;
}

.product-selector-modal {
  background-color: #ffffff;
  border-radius: 24rpx;
  width: 100%;
  max-width: 640rpx;
  max-height: 80vh;
  display: flex;
  flex-direction: column;
  overflow: hidden;
}

.modal-header {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 32rpx;
  border-bottom: 0.5px solid rgba(60, 60, 67, 0.12);
}

.modal-title {
  font-size: 36rpx;
  font-weight: 600;
  color: #1d1d1f;
}

.modal-close {
  width: 56rpx;
  height: 56rpx;
  border-radius: 50%;
  background-color: #f2f2f7;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 32rpx;
  color: #8e8e93;
  font-weight: 600;
}

/* 搜索区域 */
.search-section {
  padding: 24rpx 32rpx;
  border-bottom: 0.5px solid rgba(60, 60, 67, 0.12);
}

.search-input {
  height: 72rpx;
  background-color: #f2f2f7;
  border-radius: 16rpx;
  padding: 0 24rpx;
  font-size: 30rpx;
  color: #1d1d1f;
}

/* 产品列表 */
.product-list {
  flex: 1;
  max-height: 600rpx;
}

.product-item {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 24rpx 32rpx;
  border-bottom: 0.5px solid rgba(60, 60, 67, 0.12);
  transition: background-color 0.2s ease;
}

.product-item:last-child {
  border-bottom: none;
}

.product-item.selected {
  background-color: #e8f4fd;
}

.product-info {
  flex: 1;
  display: flex;
  flex-direction: column;
  gap: 8rpx;
}

.product-no {
  font-size: 32rpx;
  font-weight: 600;
  color: #1d1d1f;
}

.product-name {
  font-size: 28rpx;
  color: #8e8e93;
}

.selected-icon {
  font-size: 32rpx;
  color: #007aff;
  font-weight: 600;
}

/* 弹窗操作 */
.modal-actions {
  padding: 24rpx 32rpx 32rpx 32rpx;
  border-top: 0.5px solid rgba(60, 60, 67, 0.12);
}

.confirm-btn {
  width: 100%;
  height: 88rpx;
  background-color: #007aff;
  color: #ffffff;
  border-radius: 16rpx;
  font-size: 32rpx;
  font-weight: 600;
  border: none;
  display: flex;
  align-items: center;
  justify-content: center;
}

.confirm-btn::after {
  border: none;
}

/* 响应式设计 */
@media (max-width: 750rpx) {

  
  .filter-section {
    margin: 16rpx 2.5%;
    padding: 24rpx;
  }
  
  .records-list {
    padding: 0 2.5% 24rpx 2.5%;
  }
  
  .record-card {
    width: 95%;
  }
  
  .card-content {
    padding: 16rpx 20rpx 20rpx 20rpx;
  }
  
  .field-label {
    font-size: 16rpx;
  }
  
  .field-value {
    font-size: 20rpx;
  }
  
  .record-type {
    font-size: 20rpx;
  }
  
  .order-no {
    font-size: 18rpx;
    padding: 3rpx 10rpx;
  }
  
  .record-date {
    font-size: 22rpx;
  }
}

/* 大屏幕优化 */
@media (min-width: 1200rpx) {
  .record-card {
    width: 95%;
    max-width: 1000rpx;
  }
  
  .records-list {
    padding: 0 2.5% 32rpx 2.5%;
    display: flex;
    flex-direction: column;
    align-items: center;
  }
}

/* 深色模式支持 */
@media (prefers-color-scheme: dark) {
  .container {
    background-color: #000000;
  }
  

  
  .filter-section,
  .record-card,
  .product-selector-modal {
    background-color: #1c1c1e;
  }
  
  .filter-input {
    background-color: #2c2c2e;
    color: #ffffff;
  }
  
  .filter-input.has-value {
    background-color: #1e3a5f;
    color: #64d2ff;
  }
  
  .field-value {
    color: #ffffff;
  }
  
  .modal-title {
    color: #ffffff;
  }
  
  .search-input {
    background-color: #2c2c2e;
    color: #ffffff;
  }
  
  .product-no {
    color: #ffffff;
  }
}

