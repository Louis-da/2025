  background: rgba(0, 122, 255, 0.1);
}

.factory-dropdown-item.selected::before {
  content: '';
  position: absolute;
  left: 8rpx;
  top: 50%;
  transform: translateY(-50%);
  width: 4rpx;
  height: 32rpx;
  background: #007aff;
  border-radius: 2rpx;
}

.factory-info {
  flex: 1;
  overflow: hidden;
}

.factory-name {
  font-size: 28rpx;
  font-weight: 600;
  color: #1d1d1f;
  margin-bottom: 4rpx;
  white-space: nowrap;
  text-overflow: ellipsis;
  overflow: hidden;
}

.factory-details {
  display: flex;
  flex-direction: column;
  gap: 2rpx;
}

.factory-phone,
.factory-address {
  font-size: 22rpx;
  color: #8e8e93;
  white-space: nowrap;
  text-overflow: ellipsis;
  overflow: hidden;
}

.check-mark {
  font-size: 28rpx;
  color: #007aff;
  font-weight: 600;
  margin-left: 12rpx;
  opacity: 0;
  transform: scale(0.8);
  transition: all 0.2s ease;
}

.factory-dropdown-item.selected .check-mark {
  opacity: 1;
  transform: scale(1);
}

