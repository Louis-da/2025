  .factory-dropdown {
    margin-left: -8rpx;
    margin-right: -8rpx;
    border-radius: 12rpx;
  }
  
  .factory-dropdown-item {
    margin: 0 4rpx;
    padding: 14rpx 16rpx;
  }
  
  .factory-name {
    font-size: 26rpx;
  }
  
  .factory-phone,
  .factory-address {
    font-size: 20rpx;
  }
}

