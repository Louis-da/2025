  border-bottom: 1rpx solid #f2f2f7;
}

.list-title {
  font-size: 24rpx;
  font-weight: 600;
  color: #1d1d1f;
}

.list-count {
  font-size: 20rpx;
  color: #8e8e93;
  background: #f2f2f7;
  padding: 6rpx 16rpx;
  border-radius: 16rpx;
