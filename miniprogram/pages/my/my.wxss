.container {
  min-height: 100vh;
  background-color: #f5f5f7;
  padding: 20rpx 30rpx;
  box-sizing: border-box;
  font-family: -apple-system, BlinkMacSystemFont, "SF Pro Display", "Helvetica Neue", sans-serif;
  position: relative;
}

/* 左上角会员信息迷你版 */
.mini-membership-info {
  position: absolute;
  top: 20rpx;
  left: 20rpx;
  background-color: rgba(255, 255, 255, 0.8);
  border-radius: 10rpx;
  padding: 10rpx 14rpx;
  font-size: 20rpx;
  box-shadow: 0 2rpx 5rpx rgba(0, 0, 0, 0.05);
  backdrop-filter: blur(10px);
  z-index: 2;
}

.mini-info-row {
  display: flex;
  margin-bottom: 4rpx;
}

.mini-info-row:last-child {
  margin-bottom: 0;
}

.mini-label {
  color: #86868b;
  font-size: 18rpx;
}

.mini-value {
  color: #1d1d1f;
  font-size: 18rpx;
}

/* 头像居中区域 */
.centered-avatar-section {
  display: flex;
  flex-direction: column;
  align-items: center;
  margin-top: 80rpx;
  margin-bottom: 40rpx;
}

.avatar-container {
  position: relative;
  margin-bottom: 24rpx;
}

.avatar {
  width: 180rpx;
  height: 180rpx;
  border-radius: 90rpx;
  background-color: #f2f2f7;
  border: 4rpx solid #ffffff;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.08);
}

.avatar-edit-hint {
  position: absolute;
  right: 0;
  bottom: 0;
  left: 0;
  background-color: rgba(0, 0, 0, 0.5);
  color: #ffffff;
  font-size: 20rpx;
  padding: 8rpx 0;
  text-align: center;
  border-bottom-left-radius: 90rpx;
  border-bottom-right-radius: 90rpx;
  opacity: 0.7;
  transition: opacity 0.2s;
}

.avatar-edit-hint.show-hint {
  opacity: 1;
}

.avatar-container:active .avatar-edit-hint {
  opacity: 1;
}

.edit-hint-text {
  font-size: 20rpx;
}

.user-info {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.username {
  font-size: 36rpx;
  font-weight: 600;
  color: #1d1d1f;
  margin-bottom: 8rpx;
}

.role-tag {
  display: inline-block;
  font-size: 22rpx;
  color: #007aff;
  background-color: rgba(0, 122, 255, 0.1);
  padding: 6rpx 14rpx;
  border-radius: 12rpx;
}

/* 组织信息区域 */
.org-info-section {
  background-color: #ffffff;
  border-radius: 16rpx;
  margin-bottom: 24rpx;
  padding: 20rpx;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.04);
}

.org-info-item {
  display: flex;
  flex-direction: column;
  margin-bottom: 16rpx;
}

.org-info-item:last-child {
  margin-bottom: 0;
}

.org-info-label {
  font-size: 22rpx;
  color: #86868b;
  margin-bottom: 4rpx;
}

.org-info-value {
  font-size: 24rpx;
  color: #1d1d1f;
}

/* 警告颜色 */
.warning {
  color: #ff3b30;
}

/* 退出登录按钮 */
.action-area {
  margin-top: 40rpx;
}

.logout-btn {
  width: 100%;
  height: 88rpx;
  border-radius: 12rpx;
  font-size: 32rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  background-color: #ffffff;
  color: #ff3b30;
  border: 1rpx solid #ff3b30;
}

.logout-btn:active {
  background-color: rgba(255, 59, 48, 0.05);
}

/* 编辑弹窗样式 */
.edit-modal {
  position: fixed;
  top: 0;
  right: 0;
  bottom: 0;
  left: 0;
  background-color: rgba(0, 0, 0, 0.5);
  z-index: 999;
  display: flex;
  align-items: center;
  justify-content: center;
  backdrop-filter: blur(8rpx);
}

.edit-modal-content {
  width: 90%;
  max-height: 80vh;
  background-color: #ffffff;
  border-radius: 16rpx;
  overflow: hidden;
  display: flex;
  flex-direction: column;
}

.edit-modal-header {
  padding: 20rpx 24rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
  border-bottom: 1rpx solid #e5e5ea;
}

.edit-modal-title {
  font-size: 32rpx;
  font-weight: 600;
  color: #1d1d1f;
}

.edit-modal-close {
  font-size: 40rpx;
  color: #8e8e93;
  line-height: 1;
  padding: 0 10rpx;
}

.edit-modal-body {
  padding: 24rpx;
  flex: 1;
  overflow-y: auto;
}

.edit-avatar-section {
  display: flex;
  flex-direction: column;
  align-items: center;
  margin-bottom: 30rpx;
}

.edit-avatar {
  width: 140rpx;
  height: 140rpx;
  border-radius: 70rpx;
  margin-bottom: 16rpx;
  background-color: #f2f2f7;
}

.change-avatar-btn {
  font-size: 24rpx;
  color: #007aff;
  background: none;
  border: none;
  line-height: 1.5;
  padding: 0;
}

.change-avatar-btn::after {
  border: none;
}

.edit-form {
  width: 100%;
}

.form-item {
  margin-bottom: 24rpx;
}

.form-label {
  display: block;
  font-size: 26rpx;
  color: #86868b;
  margin-bottom: 8rpx;
}

.form-input {
  width: 100%;
  height: 88rpx;
  background-color: #f5f5f7;
  border-radius: 10rpx;
  padding: 0 20rpx;
  font-size: 28rpx;
  color: #1d1d1f;
  box-sizing: border-box;
}

.password-toggle {
  margin: 10rpx 0 30rpx;
  text-align: right;
}

.password-toggle text {
  color: #007aff;
  font-size: 26rpx;
}

.edit-modal-footer {
  padding: 16rpx 24rpx;
  display: flex;
  justify-content: space-between;
  border-top: 1rpx solid #e5e5ea;
}

.cancel-btn, .save-btn {
  width: 48%;
  height: 80rpx;
  border-radius: 12rpx;
  font-size: 30rpx;
  line-height: 80rpx;
  text-align: center;
}

.cancel-btn {
  background-color: #f5f5f7;
  color: #1d1d1f;
}

.save-btn {
  background-color: #007aff;
  color: #ffffff;
}

.cancel-btn:active {
  background-color: #e5e5ea;
}

.save-btn:active {
  background-color: #0071e3;
}

/* 暗黑模式适配 */
@media (prefers-color-scheme: dark) {
  .container {
    background-color: #1c1c1e;
  }
  
  .mini-membership-info {
    background-color: rgba(44, 44, 46, 0.8);
  }
  
  .mini-value {
    color: #ffffff;
  }
  
  .avatar {
    border-color: #2c2c2e;
  }
  
  .username, .org-info-value {
    color: #ffffff;
  }
  
  .org-info-section {
    background-color: #2c2c2e;
  }
  
  .logout-btn {
    background-color: #2c2c2e;
  }
  
  .edit-modal-content {
    background-color: #2c2c2e;
  }
  
  .edit-modal-header {
    border-bottom-color: #38383a;
  }
  
  .edit-modal-title {
    color: #ffffff;
  }
  
  .form-input {
    background-color: #38383a;
    color: #ffffff;
  }
  
  .edit-modal-footer {
    border-top-color: #38383a;
  }
  
  .cancel-btn {
    background-color: #38383a;
    color: #ffffff;
  }
  
  .cancel-btn:active {
    background-color: #48484a;
  }
}