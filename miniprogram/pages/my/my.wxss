}

.loading-spinner {
  width: 40rpx;
  height: 40rpx;
  border: 4rpx solid #f2f2f7;
  border-top: 4rpx solid #1d1d1f;
  border-radius: 50%;
  animation: spin 1s linear infinite;
}

.loading-text {
  font-size: 24rpx;
  color: #8e8e93;
