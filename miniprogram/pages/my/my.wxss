/* AI智能风格个人中心样式 */

/* 全局容器 */
.ai-container {
  min-height: 100vh;
  background: linear-gradient(135deg, #e6e6fa 0%, #dda0dd 100%);
  position: relative;
  overflow-x: hidden;
  padding-bottom: 120rpx;
  width: 100%;
  box-sizing: border-box;
}

.ai-container::before {
  content: '';
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: 
    radial-gradient(circle at 20% 80%, rgba(221, 160, 221, 0.3) 0%, transparent 50%),
    radial-gradient(circle at 80% 20%, rgba(255, 255, 255, 0.1) 0%, transparent 50%),
    radial-gradient(circle at 40% 40%, rgba(230, 230, 250, 0.2) 0%, transparent 50%);
  pointer-events: none;
  z-index: 0;
}

/* AI智能头部区域 */
.ai-header {
  position: relative;
  z-index: 1;
  background: rgba(255, 255, 255, 0.98);
  border-radius: 0 0 32rpx 32rpx;
  margin: 0 24rpx 24rpx 24rpx;
  box-shadow: 0 8rpx 32rpx rgba(0, 0, 0, 0.1);
}

.ai-header-content {
  padding: 32rpx 24rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.ai-title-section {
  display: flex;
  align-items: center;
  gap: 16rpx;
}

.ai-icon {
  font-size: 48rpx;
  animation: pulse 2s infinite;
}

@keyframes pulse {
  0%, 100% { transform: scale(1); }
  50% { transform: scale(1.1); }
}

.ai-title-info {
  display: flex;
  flex-direction: column;
  gap: 4rpx;
}

.ai-title {
  font-size: 32rpx;
  font-weight: 700;
  color: #1a1a1a;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  -webkit-background-clip: text;
  -webkit-text-fill-color: transparent;
  background-clip: text;
}

.ai-subtitle {
  font-size: 20rpx;
  color: #666;
  font-weight: 500;
}

.ai-status-indicator {
  display: flex;
  align-items: center;
  gap: 8rpx;
  padding: 8rpx 16rpx;
  background: rgba(102, 126, 234, 0.1);
  border-radius: 20rpx;
}

.status-dot {
  width: 12rpx;
  height: 12rpx;
  border-radius: 50%;
  animation: blink 1.5s infinite;
}

.status-dot.active {
  background: #34c759;
}

@keyframes blink {
  0%, 50% { opacity: 1; }
  51%, 100% { opacity: 0.3; }
}

.status-text {
  font-size: 18rpx;
  color: #667eea;
  font-weight: 600;
}

/* AI智能用户卡片 */
.ai-user-card {
  position: relative;
  z-index: 1;
  background: rgba(255, 255, 255, 0.98);
  border-radius: 24rpx;
  margin: 0 24rpx 24rpx 24rpx;
  box-shadow: 0 8rpx 32rpx rgba(0, 0, 0, 0.1);
  border: 1rpx solid rgba(255, 255, 255, 0.2);
  overflow: hidden;
}

.user-card-background {
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  height: 200rpx;
  background: linear-gradient(135deg, rgba(102, 126, 234, 0.1) 0%, rgba(118, 75, 162, 0.1) 100%);
  overflow: hidden;
}

.background-pattern {
  position: absolute;
  top: -50%;
  left: -50%;
  width: 200%;
  height: 200%;
  background: 
    radial-gradient(circle at 30% 30%, rgba(102, 126, 234, 0.1) 0%, transparent 50%),
    radial-gradient(circle at 70% 70%, rgba(118, 75, 162, 0.1) 0%, transparent 50%);
  animation: float 6s ease-in-out infinite;
}

@keyframes float {
  0%, 100% { transform: translate(0, 0) rotate(0deg); }
  50% { transform: translate(-20rpx, -20rpx) rotate(5deg); }
}

.user-card-content {
  position: relative;
  padding: 40rpx 24rpx 32rpx 24rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
}

/* AI头像区域 */
.ai-avatar-section {
  margin-bottom: 24rpx;
  position: relative;
}

.avatar-container {
  position: relative;
  display: flex;
  align-items: center;
  justify-content: center;
}

.ai-avatar {
  width: 160rpx;
  height: 160rpx;
  border-radius: 80rpx;
  background: #f5f5f7;
  border: 4rpx solid rgba(255, 255, 255, 0.8);
  box-shadow: 0 8rpx 32rpx rgba(102, 126, 234, 0.2);
  transition: all 0.3s ease;
}

.ai-avatar-section:active .ai-avatar {
  transform: scale(0.95);
  box-shadow: 0 4rpx 16rpx rgba(102, 126, 234, 0.3);
}

.avatar-ring {
  position: absolute;
  width: 180rpx;
  height: 180rpx;
  border: 2rpx solid rgba(102, 126, 234, 0.3);
  border-radius: 90rpx;
  top: -10rpx;
  left: -10rpx;
  animation: rotate 8s linear infinite;
}

@keyframes rotate {
  from { transform: rotate(0deg); }
  to { transform: rotate(360deg); }
}

.avatar-edit-indicator {
  position: absolute;
  bottom: 8rpx;
  right: 8rpx;
  width: 40rpx;
  height: 40rpx;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  box-shadow: 0 4rpx 16rpx rgba(102, 126, 234, 0.3);
  border: 2rpx solid white;
}

.edit-icon {
  font-size: 20rpx;
  color: white;
}

/* AI用户信息 */
.ai-user-info {
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 8rpx;
}

.username-section {
  display: flex;
  align-items: center;
  justify-content: center;
  gap: 12rpx;
  margin-bottom: 8rpx;
}

.ai-username {
  font-size: 36rpx;
  font-weight: 700;
  color: #1a1a1a;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  -webkit-background-clip: text;
  -webkit-text-fill-color: transparent;
  background-clip: text;
}

.role-badge {
  padding: 6rpx 16rpx;
  background: linear-gradient(135deg, rgba(102, 126, 234, 0.1) 0%, rgba(118, 75, 162, 0.1) 100%);
  border: 1rpx solid rgba(102, 126, 234, 0.2);
  border-radius: 20rpx;
  font-size: 18rpx;
  color: #667eea;
  font-weight: 600;
}

.real-name {
  font-size: 24rpx;
  color: #666;
  font-weight: 500;
}

/* AI智能信息卡片组 */
.ai-info-cards {
  position: relative;
  z-index: 1;
  margin: 0 24rpx 24rpx 24rpx;
  display: flex;
  flex-direction: column;
  gap: 16rpx;
}

.ai-info-card {
  background: rgba(255, 255, 255, 0.98);
  border-radius: 20rpx;
  padding: 24rpx;
  box-shadow: 0 4rpx 20rpx rgba(102, 126, 234, 0.12);
  border: 1rpx solid rgba(102, 126, 234, 0.15);
  transition: all 0.3s ease;
}

.ai-info-card:active {
  transform: scale(0.98);
  box-shadow: 0 6rpx 24rpx rgba(102, 126, 234, 0.18);
}

.card-header {
  display: flex;
  align-items: center;
  gap: 12rpx;
  margin-bottom: 20rpx;
  padding-bottom: 16rpx;
  border-bottom: 1rpx solid rgba(102, 126, 234, 0.1);
}

.card-icon {
  font-size: 28rpx;
  animation: bounce 2s infinite;
}

@keyframes bounce {
  0%, 100% { transform: translateY(0); }
  50% { transform: translateY(-4rpx); }
}

.card-title {
  font-size: 24rpx;
  font-weight: 700;
  color: #1a1a1a;
}

.card-content {
  display: flex;
  flex-direction: column;
  gap: 16rpx;
}

/* 组织信息卡片 */
.organization-card .card-header {
  background: linear-gradient(135deg, rgba(102, 126, 234, 0.05) 0%, rgba(118, 75, 162, 0.05) 100%);
  margin: -24rpx -24rpx 20rpx -24rpx;
  padding: 20rpx 24rpx 16rpx 24rpx;
  border-radius: 20rpx 20rpx 0 0;
}

.info-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 12rpx 16rpx;
  background: linear-gradient(135deg, rgba(102, 126, 234, 0.03) 0%, rgba(118, 75, 162, 0.03) 100%);
  border-radius: 12rpx;
  border: 1rpx solid rgba(102, 126, 234, 0.08);
  min-height: 60rpx;
  box-sizing: border-box;
}

.info-label {
  font-size: 20rpx;
  color: #666;
  font-weight: 500;
  flex-shrink: 0;
  min-width: 120rpx;
}

.info-value {
  font-size: 20rpx;
  color: #1a1a1a;
  font-weight: 600;
  text-align: right;
  flex: 1;
  word-break: break-all;
  overflow-wrap: break-word;
  margin-left: 16rpx;
}

/* 用户管理卡片样式 - 苹果简洁风格 */
.user-manage-card {
  background: #ffffff;
  border-radius: 16rpx;
  padding: 32rpx;
  box-shadow: 0 2rpx 12rpx rgba(0, 0, 0, 0.08);
  border: 1rpx solid #f2f2f7;
  transition: all 0.2s ease;
  cursor: pointer;
}

.user-manage-card:hover {
  background-color: #f9f9f9;
  border-color: #e5e5ea;
}

.user-manage-card .card-header {
  background: none;
  margin: 0;
  padding: 0 0 16rpx 0;
  border-bottom: 1rpx solid #f2f2f7;
}

.user-manage-card .card-title {
  font-size: 28rpx;
  font-weight: 600;
  color: #1d1d1f;
}

.user-manage-card .card-icon {
  color: #1d1d1f;
  font-size: 32rpx;
}

.card-arrow {
  margin-left: auto;
  font-size: 20rpx;
  color: #8e8e93;
  transition: all 0.2s ease;
}

.user-manage-card:hover .card-arrow {
  transform: translateX(4rpx);
  color: #1d1d1f;
}

.user-manage-card .card-content {
  gap: 0;
}

.manage-description {
  font-size: 22rpx;
  color: #8e8e93;
  line-height: 1.4;
  margin-top: 12rpx;
}

/* 权限提示样式 - 苹果简洁风格 */
.permission-notice {
  background: #fff8e1;
  border: 1rpx solid #ffd54f;
  border-radius: 12rpx;
  padding: 24rpx;
  margin: 24rpx 0;
  display: flex;
  align-items: center;
  gap: 16rpx;
}

.notice-icon {
  font-size: 28rpx;
  color: #ff9500;
  flex-shrink: 0;
}

.notice-text {
  font-size: 24rpx;
  color: #8e6e00;
  line-height: 1.4;
  font-weight: 400;
}

/* 退出登录区域 - 固定在底部 */
.logout-section-bottom {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  z-index: 1000;
  background: rgba(255, 255, 255, 0.95);
  backdrop-filter: blur(10rpx);
  padding: 20rpx 24rpx;
  padding-bottom: calc(20rpx + env(safe-area-inset-bottom));
  border-top: 1rpx solid rgba(221, 160, 221, 0.2);
}

.logout-btn {
  width: 100%;
  display: flex;
  align-items: center;
  justify-content: center;
  padding: 20rpx 24rpx;
  background: linear-gradient(135deg, #ff6b6b 0%, #ee5a52 100%);
  color: white;
  border: none;
  border-radius: 20rpx;
  font-size: 20rpx;
  font-weight: 700;
  box-shadow: 0 4rpx 16rpx rgba(255, 107, 107, 0.3);
  transition: all 0.3s ease;
  position: relative;
  overflow: hidden;
}

.logout-btn::before {
  content: '';
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: linear-gradient(135deg, transparent 0%, rgba(255, 255, 255, 0.1) 50%, transparent 100%);
  transform: translateX(-100%);
  transition: transform 0.6s ease;
}

.logout-btn:active::before {
  transform: translateX(100%);
}

.logout-btn:active {
  transform: scale(0.98);
  box-shadow: 0 2rpx 8rpx rgba(255, 107, 107, 0.4);
}

.logout-text {
  font-size: 20rpx;
  font-weight: 700;
}

/* AI智能模态框样式 */
.ai-modal-mask {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: rgba(0, 0, 0, 0.5);
  z-index: 1000;
  animation: fadeIn 0.3s ease;
}

@keyframes fadeIn {
  from { opacity: 0; }
  to { opacity: 1; }
}

.ai-modal-dialog {
  position: fixed;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
  background: rgba(255, 255, 255, 0.98);
  border-radius: 24rpx;
  box-shadow: 0 16rpx 48rpx rgba(0, 0, 0, 0.2);
  border: 1rpx solid rgba(255, 255, 255, 0.2);
  z-index: 1001;
  animation: slideIn 0.3s ease;
  max-width: 90vw;
  max-height: 80vh;
  overflow: hidden;
  width: 600rpx;
  min-width: 300rpx;
  box-sizing: border-box;
}

@keyframes slideIn {
  from {
    opacity: 0;
    transform: translate(-50%, -50%) scale(0.9);
  }
  to {
    opacity: 1;
    transform: translate(-50%, -50%) scale(1);
  }
}

.ai-modal-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 24rpx;
  background: linear-gradient(135deg, rgba(102, 126, 234, 0.05) 0%, rgba(118, 75, 162, 0.05) 100%);
  border-bottom: 1rpx solid rgba(102, 126, 234, 0.1);
}

.modal-title-content {
  display: flex;
  align-items: center;
  gap: 12rpx;
}

.modal-icon {
  font-size: 28rpx;
}

.modal-title {
  font-size: 24rpx;
  font-weight: 700;
  color: #1a1a1a;
}

.modal-close-btn {
  width: 40rpx;
  height: 40rpx;
  background: rgba(102, 126, 234, 0.1);
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 24rpx;
  color: #667eea;
  font-weight: 700;
  transition: all 0.3s ease;
}

.modal-close-btn:active {
  background: rgba(102, 126, 234, 0.2);
  transform: scale(0.9);
}

.ai-modal-content {
  padding: 24rpx;
  max-height: 60vh;
  overflow-y: auto;
}

.ai-modal-footer {
  display: flex;
  gap: 16rpx;
  padding: 24rpx;
  border-top: 1rpx solid rgba(102, 126, 234, 0.1);
}

.ai-modal-btn {
  flex: 1;
  padding: 16rpx;
  border-radius: 16rpx;
  font-size: 20rpx;
  font-weight: 600;
  border: none;
  transition: all 0.3s ease;
}

.ai-modal-btn.cancel {
  background: rgba(102, 126, 234, 0.1);
  color: #667eea;
}

.ai-modal-btn.confirm {
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  color: white;
  box-shadow: 0 4rpx 16rpx rgba(102, 126, 234, 0.3);
}

.ai-modal-btn:active {
  transform: scale(0.98);
}

/* 用户管理弹窗样式 - 苹果简洁风格 */
.user-manage-dialog {
  max-width: 680rpx;
  max-height: 85vh;
  background: #ffffff;
  border-radius: 20rpx;
  box-shadow: 0 12rpx 40rpx rgba(0, 0, 0, 0.15);
  border: 1rpx solid rgba(0, 0, 0, 0.1);
  overflow: hidden;
}

.user-manage-dialog .ai-modal-header {
  background: #ffffff;
  border-bottom: 1rpx solid rgba(0, 0, 0, 0.1);
  padding: 24rpx 32rpx;
}

.user-manage-dialog .modal-title {
  font-size: 32rpx;
  font-weight: 600;
  color: #1d1d1f;
  letter-spacing: -0.01em;
}

.user-manage-dialog .modal-icon {
  font-size: 32rpx;
  color: #1d1d1f;
}

.user-manage-dialog .ai-modal-content {
  padding: 32rpx;
  background: #ffffff;
}

.user-list-container {
  max-height: 480rpx;
  overflow-y: auto;
  margin: 0;
  padding: 0;
}

/* 苹果风格滚动条 */
.user-list-container::-webkit-scrollbar {
  width: 6rpx;
}

.user-list-container::-webkit-scrollbar-track {
  background: #f2f2f7;
  border-radius: 3rpx;
}

.user-list-container::-webkit-scrollbar-thumb {
  background: #c7c7cc;
  border-radius: 3rpx;
}

.user-list-container::-webkit-scrollbar-thumb:hover {
