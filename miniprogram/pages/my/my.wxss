.user-manage-dialog .ai-modal-footer {
  background: #f9f9f9;
  border-top: 1rpx solid #f2f2f7;
  padding: 24rpx 32rpx;
  display: flex;
  justify-content: center;
}

.user-manage-dialog .ai-modal-btn.cancel {
  background: #f2f2f7;
  color: #1d1d1f;
  border: none;
  font-weight: 500;
  padding: 16rpx 32rpx;
  border-radius: 12rpx;
  font-size: 28rpx;
}

/* AI头像编辑区域 */
.ai-avatar-edit-section {
  display: flex;
  justify-content: center;
  margin-bottom: 32rpx;
}

.edit-avatar-container {
  position: relative;
  display: flex;
  align-items: center;
  justify-content: center;
}

.edit-avatar {
  width: 120rpx;
  height: 120rpx;
  border-radius: 60rpx;
  background: #f5f5f7;
  border: 3rpx solid rgba(102, 126, 234, 0.2);
  transition: all 0.3s ease;
}

.edit-avatar-overlay {
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: rgba(0, 0, 0, 0.6);
  border-radius: 60rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  gap: 4rpx;
  opacity: 0;
  transition: all 0.3s ease;
}

.edit-avatar-container:active .edit-avatar-overlay {
  opacity: 1;
}

.camera-icon {
  font-size: 24rpx;
  color: white;
}

.change-text {
  font-size: 16rpx;
  color: white;
  font-weight: 600;
}

/* AI表单区域 */
.ai-form-section {
  display: flex;
  flex-direction: column;
  gap: 24rpx;
}

.ai-form-item {
  display: flex;
  flex-direction: column;
  gap: 12rpx;
}

.form-label {
  display: flex;
  align-items: center;
  gap: 8rpx;
}

.label-icon {
  font-size: 18rpx;
}

.form-label text {
  font-size: 20rpx;
  font-weight: 600;
  color: #1a1a1a;
}

