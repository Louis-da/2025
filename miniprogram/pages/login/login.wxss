/* 登录表单容器 */
.login-form-container {
  min-height: 100vh;
}

/* 原有登录样式 */
.login-box {
  width: 80%;
  padding: 40rpx;
  background-color: #fff;
  border-radius: 20rpx;
  box-shadow: 0 0 10rpx rgba(0, 0, 0, 0.1);
}

.title {
  font-size: 48rpx;
  font-weight: bold;
  text-align: center;
  margin-bottom: 40rpx;
}

.input-group {
  margin-bottom: 30rpx;
}

input {
  border: 1rpx solid #ddd;
  padding: 20rpx;
  border-radius: 10rpx;
  font-size: 28rpx;
}

.login-btn {
  margin-top: 60rpx;
  width: 100%;
  height: 96rpx;
  border-radius: 48rpx;
  font-size: 36rpx;
  font-weight: 500;
  background: #007aff;
  color: #ffffff;
  display: flex;
  align-items: center;
  justify-content: center;
  border: none;
}

.login-btn[disabled] {
  background: #0062cc;
  opacity: 0.7;
}

.button-hover {
  background: #0062cc;
  opacity: 0.9;
}

/* 加载动画 */
.loading-container {
  display: flex;
  align-items: center;
  justify-content: center;
}

.loading-spinner {
  width: 36rpx;
  height: 36rpx;
  border: 3rpx solid rgba(255, 255, 255, 0.3);
  border-radius: 50%;
  border-top-color: #fff;
  animation: spin 1s linear infinite;
  margin-right: 16rpx;
}

@keyframes spin {
  0% { transform: rotate(0deg); }
  100% { transform: rotate(360deg); }
}

page {
  height: 100%;
  font-family: -apple-system, BlinkMacSystemFont, "SF Pro Text", "Helvetica Neue", Arial, sans-serif;
  background-color: #f5f5f7;
  color: #1d1d1f;
}

.container {
  display: flex;
  flex-direction: column;
  height: 100%;
  padding: 0 40rpx;
  justify-content: space-between;
}

/* Logo 部分 */
.logo-section {
  display: flex;
  flex-direction: column;
  align-items: center;
  margin-top: 100rpx;
  margin-bottom: 60rpx;
}

.logo {
  width: 180rpx;
  height: 180rpx;
  margin-bottom: 30rpx;
  border-radius: 24rpx;
}

.app-name {
  font-size: 48rpx;
  font-weight: 600;
  margin-bottom: 16rpx;
  color: #1d1d1f;
}

.app-slogan {
  font-size: 28rpx;
  color: #86868b;
  text-align: center;
  margin-bottom: 20rpx;
}

/* 表单部分 */
.form-container {
  display: flex;
  flex-direction: column;
  width: 100%;
  align-items: center;
}

.form-item {
  width: 100%;
  margin-bottom: 20rpx;
}

.input-label {
  font-size: 30rpx;
  color: #666;
  margin-bottom: 10rpx;
}

.input-field {
  width: 100%;
  height: 90rpx;
  font-size: 32rpx;
  padding: 0 20rpx;
  border: none;
  border-radius: 46rpx;
  background: #fff;
  color: #333;
  box-sizing: border-box;
}

/* 帮助链接 */
.help-link {
  font-size: 28rpx;
  color: #007aff;
  margin-top: 30rpx;
  text-align: center;
}

/* 页脚 */
.footer {
  padding: 40rpx 0;
  margin-bottom: 30rpx;
}

.copyright {
  font-size: 24rpx;
  color: #86868b;
  text-align: center;
}

/* 协议勾选框样式 */
.agreement-section {
  width: 100%;
  margin-top: 20rpx;
  margin-bottom: 10rpx;
}

.agreement-checkbox {
  display: flex;
  align-items: center;
  justify-content: center;
  padding: 10rpx 5rpx;
  width: 100%;
}

.checkbox {
  width: 28rpx;
  height: 28rpx;
  border: 2rpx solid #ddd;
  border-radius: 6rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  margin-right: 8rpx;
  background-color: #fff;
  transition: all 0.3s ease;
  flex-shrink: 0;
}

.checkbox.checked {
  background-color: #007aff;
  border-color: #007aff;
}

.checkmark {
  color: #fff;
  font-size: 18rpx;
  font-weight: bold;
  line-height: 1;
}

.agreement-text {
  font-size: 20rpx;
  color: #666;
  line-height: 1.2;
  display: inline;
  max-width: calc(100% - 40rpx);
  overflow: hidden;
  text-overflow: ellipsis;
}

.agreement-link {
  color: #ff8c00;
  text-decoration: underline;
  font-weight: 500;
  display: inline;
  cursor: pointer;
  pointer-events: auto;
}