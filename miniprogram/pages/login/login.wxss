.login-box {
  width: 80%;
  padding: 40rpx;
  background-color: #fff;
  border-radius: 20rpx;
  box-shadow: 0 0 10rpx rgba(0, 0, 0, 0.1);
}

.title {
  font-size: 48rpx;
  font-weight: bold;
  text-align: center;
  margin-bottom: 40rpx;
}

.input-group {
  margin-bottom: 30rpx;
}

input {
  border: 1rpx solid #ddd;
  padding: 20rpx;
  border-radius: 10rpx;
  font-size: 28rpx;
}

.login-btn {
  margin-top: 60rpx;
  width: 100%;
  height: 96rpx;
  border-radius: 48rpx;
  font-size: 36rpx;
  font-weight: 500;
  background: #007aff;
  color: #ffffff;
  display: flex;
  align-items: center;
  justify-content: center;
  border: none;
}

.login-btn[disabled] {
  background: #0062cc;
  opacity: 0.7;
}

.button-hover {
  background: #0062cc;
  opacity: 0.9;
}

/* 加载动画 */
.loading-container {
  display: flex;
  align-items: center;
  justify-content: center;
}

.loading-spinner {
  width: 36rpx;
  height: 36rpx;
  border: 3rpx solid rgba(255, 255, 255, 0.3);
  border-radius: 50%;
  border-top-color: #fff;
  animation: spin 1s linear infinite;
  margin-right: 16rpx;
}

@keyframes spin {
  0% { transform: rotate(0deg); }
  100% { transform: rotate(360deg); }
}

page {
  height: 100%;
  font-family: -apple-system, BlinkMacSystemFont, "SF Pro Text", "Helvetica Neue", Arial, sans-serif;
  background-color: #f5f5f7;
  color: #1d1d1f;
}

.container {
  display: flex;
  flex-direction: column;
  height: 100%;
  padding: 0 40rpx;
  justify-content: space-between;
}

/* Logo 部分 */
.logo-section {
  display: flex;
  flex-direction: column;
  align-items: center;
  margin-top: 100rpx;
  margin-bottom: 60rpx;
}

.logo {
  width: 180rpx;
  height: 180rpx;
  margin-bottom: 30rpx;
  border-radius: 24rpx;
}

.app-name {
  font-size: 48rpx;
  font-weight: 600;
  margin-bottom: 16rpx;
  color: #1d1d1f;
}

.app-slogan {
  font-size: 28rpx;
  color: #86868b;
  text-align: center;
  margin-bottom: 20rpx;
}

/* 表单部分 */
.form-container {
  display: flex;
  flex-direction: column;
  width: 100%;
  align-items: center;
}

.form-item {
  width: 100%;
  margin-bottom: 20rpx;
}

.input-label {
  font-size: 30rpx;
  color: #666;
  margin-bottom: 10rpx;
}

.input-field {
  width: 100%;
  height: 90rpx;
  font-size: 32rpx;
  padding: 0 20rpx;
  border: none;
  border-radius: 46rpx;
  background: #fff;
  color: #333;
  box-sizing: border-box;
}

/* 帮助链接 */
.help-link {
  font-size: 28rpx;
  color: #007aff;
  margin-top: 30rpx;
  text-align: center;
}

/* 页脚 */
.footer {
  padding: 40rpx 0;
  margin-bottom: 30rpx;
}

.copyright {
  font-size: 24rpx;
  color: #86868b;
  text-align: center;
}

/* 暗黑模式适配 */
@media (prefers-color-scheme: dark) {
  page {
    background-color: #1c1c1e;
    color: #ffffff;
  }
  
  .app-name {
    color: #ffffff;
  }
  
  .form-item {
    background-color: rgba(44, 44, 46, 0.8);
  }
  
  .form-item:focus-within {
    background-color: rgba(58, 58, 60, 0.8);
  }
  
  .input-field {
    color: #ffffff !important;
    background: #222226 !important;
    border: 1rpx solid #444 !important;
    caret-color: #00bfff !important;
  }
  
  .input-field::placeholder {
    color: #b0b0b0 !important;
    opacity: 1 !important;
  }
  
  input {
    color: #ffffff !important;
    background: #222226 !important;
    border: 1rpx solid #444 !important;
    caret-color: #00bfff !important;
  }
  input::placeholder {
    color: #b0b0b0 !important;
    opacity: 1 !important;
  }
}

/* 组织选择器 */
.org-selector {
  position: relative;
  width: 100%;
  display: flex;
  flex-direction: row;
  align-items: center;
}

.org-input {
  padding-right: 60rpx;
}

.selector-icon {
  position: absolute;
  right: 20rpx;
  top: 50%;
  transform: translateY(-50%);
  font-size: 24rpx;
  color: #999;
}

/* 组织选择弹窗 */
.org-picker-mask {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background-color: rgba(0, 0, 0, 0.5);
  z-index: 999;
}

.org-picker {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  background-color: #fff;
  border-radius: 20rpx 20rpx 0 0;
  z-index: 1000;
  max-height: 70%;
  animation: slideUp 0.3s ease;
}

@keyframes slideUp {
  from { transform: translateY(100%); }
  to { transform: translateY(0); }
}

.org-picker-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 30rpx;
  border-bottom: 1rpx solid #eee;
}

.org-picker-header text {
  font-size: 34rpx;
  font-weight: 500;
}

.close-btn {
  font-size: 40rpx;
  color: #999;
  padding: 10rpx;
}

.org-picker-body {
  padding: 20rpx;
  max-height: calc(70vh - 90rpx);
  overflow-y: auto;
}

.no-org {
  text-align: center;
  padding: 60rpx 0;
  color: #999;
  font-size: 28rpx;
}

.org-list {
  display: flex;
  flex-direction: column;
}

.org-item {
  padding: 30rpx 20rpx;
  border-bottom: 1rpx solid #eee;
  display: flex;
  flex-direction: column;
}

.org-name {
  font-size: 32rpx;
  font-weight: 500;
  margin-bottom: 10rpx;
}

.org-id {
  font-size: 24rpx;
  color: #999;
}

/* 暗黑模式下组织选择器样式 */
@media (prefers-color-scheme: dark) {
  .org-picker {
    background-color: #1c1c1e;
    border-top: 1rpx solid #333;
  }
  
  .org-picker-header {
    border-bottom: 1rpx solid #333;
  }
  
  .org-picker-header text {
    color: #fff;
  }
  
  .close-btn {
    color: #ccc;
  }
  
  .no-org {
    color: #aaa;
  }
  
  .org-item {
    border-bottom: 1rpx solid #333;
  }
  
  .org-name {
    color: #fff;
  }
  
  .org-id {
    color: #888;
  }
}

/* 协议勾选框样式 */
.agreement-section {
  width: 100%;
  margin-top: 20rpx;
  margin-bottom: 10rpx;
}

.agreement-checkbox {
  display: flex;
  align-items: center;
  justify-content: center;
  padding: 10rpx 5rpx;
  width: 100%;
}

.checkbox {
  width: 28rpx;
  height: 28rpx;
  border: 2rpx solid #ddd;
  border-radius: 6rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  margin-right: 8rpx;
  background-color: #fff;
  transition: all 0.3s ease;
  flex-shrink: 0;
}

.checkbox.checked {
  background-color: #007aff;
  border-color: #007aff;
}

.checkmark {
  color: #fff;
  font-size: 18rpx;
  font-weight: bold;
  line-height: 1;
}

.agreement-text {
  font-size: 20rpx;
  color: #666;
  line-height: 1.2;
  display: inline;
  max-width: calc(100% - 40rpx);
  overflow: hidden;
  text-overflow: ellipsis;
}

.agreement-link {
  color: #ff8c00;
  text-decoration: underline;
  font-weight: 500;
  display: inline;
  cursor: pointer;
  pointer-events: auto;
}

/* 暗黑模式下的协议样式 */
@media (prefers-color-scheme: dark) {
  .checkbox {
    border-color: #666;
    background-color: #2c2c2e;
  }
  
  .agreement-text {
    color: #f2f2f7;
  }
  
  .agreement-link {
    color: #ff9500;
  }
}