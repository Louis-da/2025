.login-box {
  width: 80%;
  padding: 40rpx;
  background-color: #fff;
  border-radius: 20rpx;
  box-shadow: 0 0 10rpx rgba(0, 0, 0, 0.1);
}

.title {
  font-size: 48rpx;
  font-weight: bold;
  text-align: center;
  margin-bottom: 40rpx;
}

.input-group {
  margin-bottom: 30rpx;
}

input {
  border: 1rpx solid #ddd;
  padding: 20rpx;
  border-radius: 10rpx;
  font-size: 28rpx;
}

.login-btn {
  background-color: #07c160;
  color: #fff;
  font-size: 32rpx;
  padding: 20rpx;
  border-radius: 10rpx;
  text-align: center;
}

page {
  height: 100%;
  font-family: -apple-system, BlinkMacSystemFont, "SF Pro Text", "Helvetica Neue", Arial, sans-serif;
  background-color: #f5f5f7;
  color: #1d1d1f;
}

.container {
  display: flex;
  flex-direction: column;
  height: 100%;
  padding: 0 40rpx;
  justify-content: space-between;
}

/* Logo 部分 */
.logo-section {
  display: flex;
  flex-direction: column;
  align-items: center;
  margin-top: 100rpx;
  margin-bottom: 60rpx;
}

.logo {
  width: 180rpx;
  height: 180rpx;
  margin-bottom: 30rpx;
  border-radius: 24rpx;
}

.app-name {
  font-size: 48rpx;
  font-weight: 600;
  margin-bottom: 16rpx;
  color: #1d1d1f;
}

.app-slogan {
  font-size: 28rpx;
  color: #86868b;
  text-align: center;
  margin-bottom: 20rpx;
}

/* 表单部分 */
.form-container {
  display: flex;
  flex-direction: column;
  width: 100%;
  align-items: center;
}

.form-item {
  width: 100%;
  margin-bottom: 20rpx;
}

.input-label {
  font-size: 30rpx;
  color: #666;
  margin-bottom: 10rpx;
}

.input-field {
  width: 100%;
  height: 90rpx;
  font-size: 32rpx;
  padding: 0 20rpx;
  border: none;
  border-radius: 46rpx;
  background: #fff;
  color: #333;
  box-sizing: border-box;
}

/* 登录按钮 */
.login-btn {
  margin-top: 60rpx;
  width: 100%;
  height: 96rpx;
  border-radius: 48rpx;
  font-size: 36rpx;
  font-weight: 500;
  background: #007aff;
  color: #ffffff;
  display: flex;
  align-items: center;
  justify-content: center;
  border: none;
}

.button-hover {
  background: #0062cc;
  opacity: 0.9;
}

/* 帮助链接 */
.help-link {
  font-size: 28rpx;
  color: #007aff;
  margin-top: 30rpx;
  text-align: center;
}

/* 页脚 */
.footer {
  padding: 40rpx 0;
  margin-bottom: 30rpx;
}

.copyright {
  font-size: 24rpx;
  color: #86868b;
  text-align: center;
}

/* 暗黑模式适配 */
@media (prefers-color-scheme: dark) {
  page {
    background-color: #1c1c1e;
    color: #ffffff;
  }
  
  .app-name {
    color: #ffffff;
  }
  
  .form-item {
    background-color: rgba(44, 44, 46, 0.8);
  }
  
  .form-item:focus-within {
    background-color: rgba(58, 58, 60, 0.8);
  }
  
  .input-field {
    color: #ffffff;
  }
  
  .input-field::placeholder {
    color: #636366;
  }
}