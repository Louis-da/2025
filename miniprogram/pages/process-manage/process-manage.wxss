/* pages/process-manage/process-manage.wxss */

.container.with-bg {
  display: flex;
  flex-direction: column;
  height: 100vh;
  background-color: #f7f8fa;
  padding-bottom: env(safe-area-inset-bottom);
}

/* 头部区域 */
.header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 24rpx 30rpx;
  background-color: #ffffff;
  border-bottom: 0.5rpx solid #e5e5ea;
  position: sticky;
  top: 0;
  z-index: 99;
}

.title {
  font-size: 36rpx;
  font-weight: 600;
  color: #1d1d1f;
}

.add-btn {
  min-width: 160rpx;
  text-align: center;
}

/* 搜索框 */
.search-box {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 16rpx 30rpx;
  background-color: #ffffff;
  border-bottom: 0.5rpx solid #e5e5ea;
}

.search-input {
  display: flex;
  align-items: center;
  background-color: rgba(242, 242, 247, 0.8);
  border-radius: 40rpx;
  padding: 10rpx 20rpx;
  flex: 1;
}

.search-input input {
  flex: 1;
  height: 70rpx;
  font-size: 28rpx;
  padding-left: 10rpx;
}

.search-input icon {
  margin-right: 10rpx;
}

/* 加载和空状态 */
.loading {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  height: 60vh;
  color: #8e8e93;
}

.loading-spinner {
  width: 64rpx;
  height: 64rpx;
  border: 6rpx solid #f3f3f3;
  border-top: 6rpx solid #1aad19;
  border-radius: 50%;
  animation: spin 1s linear infinite;
  margin-bottom: 20rpx;
}

@keyframes spin {
  0% { transform: rotate(0deg); }
  100% { transform: rotate(360deg); }
}

.loading-text {
  font-size: 28rpx;
}

.empty-state {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  height: 60vh;
  color: #8e8e93;
}

.empty-icon {
  width: 160rpx;
  height: 160rpx;
  margin-bottom: 30rpx;
}

.empty-text {
  font-size: 28rpx;
  margin-bottom: 30rpx;
}

.mt-4 {
  margin-top: 40rpx;
}

/* 工序列表 */
.list {
  flex: 1;
  overflow-y: auto;
  padding: 12rpx 24rpx;
  background-color: #f7f8fa;
}

.list-item {
  margin-bottom: 16rpx;
  position: relative;
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 24rpx;
  border-radius: 16rpx;
  background-color: #ffffff;
  box-shadow: 0 1rpx 10rpx rgba(0, 0, 0, 0.05);
}

.list-item.disabled {
  opacity: 0.7;
}

.list-item-content {
  flex: 1;
  padding-right: 16rpx;
}

.list-item-title {
  font-size: 32rpx;
  color: #1d1d1f;
  font-weight: 500;
}

.list-item-order {
  font-size: 24rpx;
  color: #8e8e93;
  margin-top: 8rpx;
}

.list-item-right {
  display: flex;
  flex-direction: column;
  align-items: flex-end;
  min-width: 120rpx;
}

/* 标签样式 */
.tag {
  display: inline-block;
  font-size: 24rpx;
  padding: 6rpx 16rpx;
  border-radius: 6rpx;
  margin-bottom: 10rpx;
}

.tag-success {
  background-color: rgba(7, 193, 96, 0.1);
  color: #07c160;
}

.tag-gray {
  background-color: rgba(142, 142, 147, 0.1);
  color: #8e8e93;
}

/* 按钮样式 */
.btn {
  display: inline-flex;
  align-items: center;
  justify-content: center;
  font-size: 28rpx;
  border-radius: 8rpx;
  padding: 12rpx 24rpx;
  box-sizing: border-box;
}

.btn-primary {
  background-color: #07c160;
  color: #ffffff;
}

.btn-light {
  background-color: rgba(142, 142, 147, 0.12);
  color: #8e8e93;
}

.btn-danger {
  background-color: rgba(255, 59, 48, 0.1);
  color: #ff3b30;
}

.btn-success {
  background-color: rgba(7, 193, 96, 0.1);
  color: #07c160;
}

.btn-rounded {
  border-radius: 100rpx;
}

.btn-small {
  font-size: 24rpx;
  padding: 6rpx 16rpx;
}

/* 弹窗样式 */
.mask {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: rgba(0, 0, 0, 0.5);
  z-index: 100;
}

.drawer {
  position: fixed;
  width: 100%;
  background: #ffffff;
  z-index: 101;
  transition: all 0.3s ease;
}

.drawer-bottom {
  bottom: 0;
  left: 0;
  right: 0;
  border-radius: 24rpx 24rpx 0 0;
  transform: translateY(100%);
}

.drawer-show {
  transform: translateY(0);
}

.drawer-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 32rpx 32rpx;
  border-bottom: 0.5rpx solid #e5e5ea;
}

.drawer-title {
  font-size: 34rpx;
  font-weight: 600;
  color: #1d1d1f;
}

.drawer-close {
  font-size: 40rpx;
  color: #8e8e93;
  width: 60rpx;
  height: 60rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}

.drawer-body {
  padding: 40rpx 32rpx;
  max-height: 70vh;
  overflow-y: auto;
}

/* 表单样式 */
.form-group {
  margin-bottom: 32rpx;
}

.form-label {
  display: block;
  font-size: 28rpx;
  font-weight: 500;
  color: #1d1d1f;
  margin-bottom: 12rpx;
}

.form-control {
  width: 100%;
  height: 88rpx;
  background-color: rgba(242, 242, 247, 0.8);
  border-radius: 12rpx;
  padding: 0 24rpx;
  font-size: 32rpx;
  color: #1d1d1f;
}

.form-helper {
  font-size: 24rpx;
  color: #8e8e93;
  margin-top: 12rpx;
}

.status-group {
  display: flex;
  margin-top: 12rpx;
}

.radio-label {
  display: flex;
  align-items: center;
  margin-right: 40rpx;
  font-size: 28rpx;
}

.radio-label text {
  margin-left: 8rpx;
}

/* 通知提示区域 */
.drawer-notice {
  display: flex;
  align-items: flex-start;
  background-color: rgba(0, 122, 255, 0.08);
  padding: 16rpx 20rpx;
  border-radius: 12rpx;
  margin-top: 16rpx;
}

.notice-icon {
  font-size: 32rpx;
  color: #007aff;
  margin-right: 12rpx;
  line-height: 1.2;
}

.notice-text {
  font-size: 26rpx;
  color: #007aff;
  line-height: 1.5;
  flex: 1;
}

.drawer-footer {
  display: flex;
  justify-content: space-between;
  gap: 24rpx;
  padding: 32rpx;
  border-top: 0.5rpx solid #e5e5ea;
}

.drawer-footer .btn {
  flex: 1;
  height: 96rpx;
  font-size: 32rpx;
}

.cancel-btn {
  background-color: rgba(142, 142, 147, 0.12);
  color: #8e8e93;
}

.confirm-btn {
  font-weight: 500;
}

/* 适配暗黑模式 */
@media (prefers-color-scheme: dark) {
  .container.with-bg {
    background-color: #1a1a1a;
  }
  
  .header, .search-box, .drawer {
    background-color: #2a2a2a;
    border-color: #333;
  }
  
  .title, .drawer-title, .form-label {
    color: #f5f5f5;
  }
  
  .search-input {
    background-color: #333;
  }
  
  .list-item {
    background-color: #2a2a2a;
    box-shadow: 0 1rpx 10rpx rgba(0, 0, 0, 0.2);
  }
  
  .list-item-title {
    color: #f5f5f5;
  }
  
  .form-control {
    background-color: #333;
    color: #f5f5f5;
  }
  
  .drawer-notice {
    background-color: rgba(0, 122, 255, 0.15);
  }
}