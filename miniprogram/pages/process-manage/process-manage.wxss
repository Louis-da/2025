/* pages/process-manage/process-manage.wxss */

/* 页面容器 */
.page-container {
  min-height: 100vh;
  background: linear-gradient(135deg, #e8d5ff 0%, #f0e6ff 50%, #f5f0ff 100%);
  font-family: -apple-system, BlinkMacSystemFont, sans-serif;
}

/* 页面头部 */
.page-header {
  background: rgba(255, 255, 255, 0.95);
  padding: 20rpx 32rpx;
  position: sticky;
  top: 0;
  z-index: 100;
  box-shadow: 0 2rpx 20rpx rgba(0, 0, 0, 0.1);
}

.header-content {
  display: flex;
  justify-content: space-between;
  align-items: center;
  max-width: 1200rpx;
  margin: 0 auto;
  flex-wrap: wrap;
  gap: 16rpx;
}

.header-left {
  display: flex;
  flex-direction: column;
}

.page-title {
  font-size: 48rpx;
  font-weight: 700;
  color: #8b5cf6;
  margin-bottom: 8rpx;
}

.page-subtitle {
  font-size: 18rpx;
  color: #666;
  font-weight: 400;
  line-height: 1.2;
}

.header-right .add-btn-wrapper {
  position: relative;
}

.add-btn {
  display: flex;
  align-items: center;
  background: linear-gradient(45deg, #8b5cf6, #a855f7);
  color: #fff;
  padding: 20rpx 32rpx;
  border-radius: 50rpx;
  font-size: 32rpx;
  font-weight: 600;
  box-shadow: 0 8rpx 25rpx rgba(139, 92, 246, 0.3);
  transition: all 0.3s ease;
}

.add-btn:active {
  transform: translateY(2rpx);
  box-shadow: 0 4rpx 15rpx rgba(139, 92, 246, 0.3);
}

.add-icon {
  font-size: 36rpx;
  font-weight: 300;
  margin-right: 12rpx;
}

.add-text {
  font-size: 32rpx;
}

/* AI智能提示卡片 */
.ai-tip-card {
  margin: 32rpx;
  background: linear-gradient(135deg, #4facfe 0%, #00f2fe 100%);
  border-radius: 24rpx;
  padding: 32rpx;
  display: flex;
  align-items: center;
  box-shadow: 0 8rpx 32rpx rgba(79, 172, 254, 0.3);
}

.ai-tip-icon {
  font-size: 48rpx;
  animation: pulse 2s infinite;
  margin-right: 24rpx;
}

@keyframes pulse {
  0%, 100% { transform: scale(1); }
  50% { transform: scale(1.1); }
}

.ai-tip-content {
  flex: 1;
  display: flex;
  flex-direction: column;
}

.ai-tip-title {
  font-size: 32rpx;
  font-weight: 700;
  color: #fff;
  margin-bottom: 8rpx;
}

.ai-tip-desc {
  font-size: 28rpx;
  color: rgba(255, 255, 255, 0.9);
  line-height: 1.5;
}

/* 加载状态 */
.loading-wrapper {
  display: flex;
  justify-content: center;
  align-items: center;
  min-height: 60vh;
}

.loading-content {
  display: flex;
  flex-direction: column;
  align-items: center;
  color: #fff;
}

.loading-spinner {
  width: 80rpx;
  height: 80rpx;
  border: 6rpx solid rgba(255, 255, 255, 0.3);
  border-top: 6rpx solid #fff;
  border-radius: 50%;
  animation: spin 1s linear infinite;
  margin-bottom: 32rpx;
}

@keyframes spin {
  0% { transform: rotate(0deg); }
  100% { transform: rotate(360deg); }
}

.loading-text {
  font-size: 32rpx;
  color: rgba(255, 255, 255, 0.9);
}

/* 空状态 */
.empty-wrapper {
  display: flex;
  justify-content: center;
  align-items: center;
  min-height: 60vh;
  padding: 0 32rpx;
}

.empty-content {
  text-align: center;
  color: #fff;
  max-width: 600rpx;
}

.empty-icon {
  font-size: 120rpx;
  margin-bottom: 32rpx;
  opacity: 0.8;
}

.empty-title {
  font-size: 40rpx;
  font-weight: 600;
  margin-bottom: 16rpx;
  display: block;
}

.empty-desc {
  font-size: 30rpx;
  opacity: 0.8;
  line-height: 1.5;
  margin-bottom: 48rpx;
  display: block;
}

.empty-action {
  margin-top: 48rpx;
}

.empty-btn {
  display: inline-block;
  background: rgba(255, 255, 255, 0.2);
  color: #fff;
  padding: 24rpx 48rpx;
  border-radius: 50rpx;
  font-size: 32rpx;
  font-weight: 600;
  border: 2rpx solid rgba(255, 255, 255, 0.3);
  transition: all 0.3s ease;
}

.empty-btn:active {
  background: rgba(255, 255, 255, 0.3);
  transform: scale(0.95);
}

/* 工序网格布局 */
.process-grid {
  padding: 16rpx;
  display: flex;
  flex-wrap: wrap;
  gap: 16rpx;
  max-width: 1200rpx;
  margin: 0 auto;
}

/* 工序卡片 */
.process-card {
  background: rgba(255, 255, 255, 0.98);
  border-radius: 16rpx;
  padding: 16rpx;
  position: relative;
  overflow: hidden;
  transition: all 0.2s ease;
  box-shadow: 
    0 4rpx 20rpx rgba(0, 0, 0, 0.1),
    0 2rpx 8rpx rgba(0, 0, 0, 0.06),
    inset 0 1rpx 0 rgba(255, 255, 255, 0.9);
  border: 1rpx solid rgba(255, 255, 255, 0.3);
  width: calc((100% - 16rpx) / 2);
  min-width: 180rpx;
  aspect-ratio: 1;
  display: flex;
  flex-direction: column;
  box-sizing: border-box;
}

.process-card:active {
  transform: translateY(-4rpx) scale(0.98);
  box-shadow: 
    0 8rpx 32rpx rgba(0, 0, 0, 0.15),
    0 4rpx 12rpx rgba(0, 0, 0, 0.1),
    inset 0 1rpx 0 rgba(255, 255, 255, 0.7);
}

.process-card.disabled {
  opacity: 0.7;
  filter: grayscale(30%);
  background: rgba(255, 255, 255, 0.9);
}

.process-card.disabled .enable-btn {
  opacity: 1;
  filter: none;
  background: linear-gradient(45deg, #51cf66, #69db7c);
  box-shadow: 0 6rpx 20rpx rgba(81, 207, 102, 0.4);
  transform: scale(1.1);
}

.process-card.disabled:active {
  transform: none;
}

/* 卡片头部 */
.card-header {
  position: absolute;
  top: 16rpx;
  left: 16rpx;
  right: 16rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
  z-index: 2;
}

.process-order-badge {
  background: linear-gradient(45deg, #8b5cf6, #a855f7);
  color: #fff;
  padding: 6rpx 12rpx;
  border-radius: 12rpx;
  font-size: 24rpx;
  font-weight: 600;
  min-width: 32rpx;
  text-align: center;
  line-height: 1.2;
}

.status-indicator {
  width: 16rpx;
  height: 16rpx;
  border-radius: 50%;
  transition: all 0.3s ease;
}

.status-indicator.active {
  background: #52c41a;
  box-shadow: 0 0 0 4rpx rgba(82, 196, 26, 0.2);
}

.status-indicator.inactive {
  background: #ff4d4f;
  box-shadow: 0 0 0 4rpx rgba(255, 77, 79, 0.2);
}

/* 卡片内容 */
.card-content {
  margin-top: 24rpx;
  margin-bottom: 32rpx;
  flex: 1;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
}

.process-name {
  font-size: 32rpx;
  font-weight: 600;
  color: #1a1a1a;
  line-height: 1.3;
  max-width: 100%;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

/* 卡片操作 */
.card-actions {
  position: absolute;
  bottom: 16rpx;
  left: 16rpx;
  width: auto;
  z-index: 3;
}

.action-btn {
  display: flex;
  align-items: center;
  justify-content: center;
  padding: 8rpx;
  border-radius: 50%;
  font-size: 24rpx;
  font-weight: 600;
  transition: all 0.3s ease;
  border: none;
  width: 48rpx;
  height: 48rpx;
  box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.15);
}

.disable-btn {
  background: linear-gradient(45deg, #ff6b6b, #ff8e8e);
  color: #fff;
}

.disable-btn:active {
  background: linear-gradient(45deg, #ff5252, #ff7777);
  transform: scale(0.9);
}

.enable-btn {
  background: linear-gradient(45deg, #51cf66, #69db7c);
  color: #fff;
}

.enable-btn:active {
  background: linear-gradient(45deg, #40c057, #5bb95d);
  transform: scale(0.9);
}

.btn-icon {
  font-size: 24rpx;
  line-height: 1;
}

/* 状态标签 - 隐藏状态 */
.status-badge {
  display: none;
}

/* 弹窗样式 */
.modal-mask {
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  background: rgba(0, 0, 0, 0.5);
  z-index: 1000;
  opacity: 0;
  transition: opacity 0.3s ease;
}

.modal-container {
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  display: flex;
  align-items: center;
  justify-content: center;
  z-index: 1001;
  opacity: 0;
  transform: scale(0.8);
  transition: all 0.3s ease;
  padding: 64rpx;
  box-sizing: border-box;
}

.modal-container.modal-show {
  opacity: 1;
  transform: scale(1);
}

.modal-content {
  background: #fff;
  border-radius: 32rpx;
  width: 100%;
  max-width: 700rpx;
  max-height: 80vh;
  overflow: hidden;
  box-shadow: 0 20rpx 60rpx rgba(0, 0, 0, 0.3);
}

.modal-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 40rpx 48rpx 0;
  background: linear-gradient(135deg, #8b5cf6, #a855f7);
  color: #fff;
}

.modal-title {
  font-size: 40rpx;
  font-weight: 700;
}

.modal-close {
  font-size: 48rpx;
  font-weight: 300;
  padding: 16rpx;
  line-height: 1;
  opacity: 0.8;
  transition: opacity 0.3s ease;
}

.modal-close:active {
  opacity: 1;
}

.modal-body {
  padding: 48rpx;
  max-height: 60vh;
  overflow-y: auto;
}

/* 表单区域 */
.form-section {
  margin-bottom: 40rpx;
}

.form-item {
  margin-bottom: 32rpx;
}

.form-label {
  display: block;
  font-size: 32rpx;
  font-weight: 600;
  color: #1a1a1a;
  margin-bottom: 16rpx;
}

.form-input {
  width: 100%;
  height: 96rpx;
  padding: 0 24rpx;
  border: 2rpx solid #e8e8e8;
  border-radius: 16rpx;
  font-size: 32rpx;
  color: #1a1a1a;
  background: #f8f9fa;
  transition: all 0.3s ease;
  box-sizing: border-box;
}

.form-input:focus {
  border-color: #8b5cf6;
  background: #fff;
  box-shadow: 0 0 0 6rpx rgba(139, 92, 246, 0.1);
}

/* 状态选择组 */
.status-group {
  display: flex;
  gap: 32rpx;
}

.radio-label {
  display: flex;
  align-items: center;
  font-size: 28rpx;
  color: #666;
}

.radio-label radio {
  margin-right: 12rpx;
}

/* AI建议区域 */
.ai-suggestion {
  background: linear-gradient(135deg, #4facfe 0%, #00f2fe 100%);
  border-radius: 20rpx;
  padding: 32rpx;
  display: flex;
  align-items: flex-start;
  margin-bottom: 32rpx;
}

.suggestion-icon {
  font-size: 36rpx;
  animation: bounce 2s infinite;
  margin-right: 20rpx;
}

@keyframes bounce {
  0%, 20%, 50%, 80%, 100% { transform: translateY(0); }
  40% { transform: translateY(-10rpx); }
  60% { transform: translateY(-5rpx); }
}

.suggestion-content {
  flex: 1;
  display: flex;
  flex-direction: column;
}

.suggestion-title {
  font-size: 30rpx;
  font-weight: 700;
  color: #fff;
  margin-bottom: 8rpx;
}

.suggestion-desc {
  font-size: 26rpx;
  color: rgba(255, 255, 255, 0.9);
  line-height: 1.5;
}

/* 编辑警告区域 */
.edit-warning {
  background: linear-gradient(135deg, #ffecd2 0%, #fcb69f 100%);
  border-radius: 20rpx;
  padding: 32rpx;
  display: flex;
  align-items: flex-start;
  margin-bottom: 32rpx;
}

.warning-icon {
  font-size: 36rpx;
  animation: shake 3s infinite;
  margin-right: 20rpx;
}

@keyframes shake {
  0%, 100% { transform: translateX(0); }
  10%, 30%, 50%, 70%, 90% { transform: translateX(-2rpx); }
  20%, 40%, 60%, 80% { transform: translateX(2rpx); }
}

.warning-content {
  flex: 1;
  display: flex;
  flex-direction: column;
}

.warning-title {
  font-size: 30rpx;
  font-weight: 700;
  color: #d4691f;
  margin-bottom: 8rpx;
}

.warning-desc {
  font-size: 26rpx;
  color: #8b5a2b;
  line-height: 1.5;
}

/* 弹窗底部 */
.modal-footer {
  display: flex;
  padding: 0 48rpx 48rpx;
  background: #f8f9fa;
}

.footer-btn {
  flex: 1;
  height: 88rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  border-radius: 20rpx;
  font-size: 32rpx;
  font-weight: 600;
  transition: all 0.3s ease;
  margin-right: 24rpx;
}

.footer-btn:last-child {
  margin-right: 0;
}

.cancel-btn {
  background: #e8e8e8;
  color: #666;
}

.cancel-btn:active {
  background: #d8d8d8;
  transform: scale(0.95);
}

.confirm-btn {
  background: linear-gradient(45deg, #8b5cf6, #a855f7);
  color: #fff;
  box-shadow: 0 8rpx 25rpx rgba(139, 92, 246, 0.3);
}

.confirm-btn:active {
  transform: scale(0.95);
  box-shadow: 0 4rpx 15rpx rgba(139, 92, 246, 0.3);
}

/* 响应式设计 */
@media (max-width: 750rpx) {
  .process-grid {
    padding: 12rpx;
    gap: 12rpx;
  }
  
  .process-card {
    width: calc((100% - 12rpx) / 2);
    min-width: 160rpx;
    padding: 12rpx;
  }
  
  .process-name {
    font-size: 28rpx;
  }
}

@media (max-width: 500rpx) {
  .process-grid {
    padding: 10rpx;
    gap: 10rpx;
  }
  
  .process-card {
    width: calc((100% - 10rpx) / 2);
    min-width: 140rpx;
    padding: 10rpx;
  }
  
  .process-name {
    font-size: 24rpx;
  }
}

@media (max-width: 350rpx) {
  .process-grid {
    padding: 8rpx;
    gap: 8rpx;
  }
  
  .process-card {
    width: calc((100% - 8rpx) / 2);
    min-width: 120rpx;
    padding: 8rpx;
  }
  
  .process-name {
    font-size: 22rpx;
  }
}

/* 工具函数 */
.stopPropagation {
  /* 用于阻止事件冒泡的占位类 */
}