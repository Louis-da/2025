/* 苹果风格对账单页面样式（紧凑版） */

/* 整体容器，背景色、字体、最大宽度等 */
.container {
  background-color: #f5f7fa;
  min-height: 100vh;
  font-family: -apple-system, BlinkMacSystemFont, 'SF Pro Display', 'Helvetica Neue', Helvetica, Arial, sans-serif;
  padding-bottom: 120rpx; /* 增加底部padding，为固定按钮留出空间 */
  box-sizing: border-box;
  max-width: 2000rpx;
  margin: 0 auto;
  position: relative; /* 添加相对定位，作为固定按钮的参考 */
}

/* 顶部标题栏，毛玻璃效果，吸顶 */
.header {
  padding: 16rpx 0;
  background-color: rgba(255, 255, 255, 0.9);
  backdrop-filter: blur(10px);
  box-shadow: 0 1rpx 6rpx rgba(0, 0, 0, 0.05);
  margin-bottom: 8rpx;
  position: sticky;
  top: 0;
  z-index: 100;
}

.header-title {
  font-size: 28rpx;
  font-weight: 600;
  text-align: center;
  color: #1c1c1e;
  letter-spacing: 0.5rpx;
}

/* 查询区域卡片，可滑动 - 响应式 */
.search-section {
  background-color: #fff; /* 背景白色 */
  border-radius: 16rpx; /* 统一圆角 */
  width: 95%;           /* 占屏幕95%宽度 */
  margin: 16rpx auto;   /* 上下边距16rpx，左右自动居中 */
  padding: 24rpx;       /* 统一内边距 */
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.04); /* 轻微阴影 */
  box-sizing: border-box;
}

/* 内容区布局 */
.search-section > .section-header,
.search-section > .form-group,
.search-section > .date-group,
.search-section > button {
  box-sizing: border-box;
}

.section-header {
  margin-bottom: 12rpx;
}

.section-title {
  font-size: 26rpx;
  font-weight: 700;
  color: #007aff;
  letter-spacing: 0.5rpx;
  margin-bottom: 8rpx;
}

.form-group {
  margin-bottom: 12rpx;
}

.form-label {
  font-size: 22rpx;
  color: #3a3a3c;
  margin-bottom: 4rpx;
  font-weight: 500;
  display: block;
}

.form-picker {
  width: 100%;
}

/* 下拉选择器样式 */
.picker-content {
  background-color: #f2f2f7;
  border-radius: 8rpx;
  padding: 12rpx 16rpx;
  font-size: 22rpx;
  color: #8e8e93;
  display: flex;
  justify-content: space-between;
  align-items: center;
}
.picker-content.has-value {
  color: #1c1c1e;
}
.picker-arrow {
  width: 12rpx;
  height: 12rpx;
  border-right: 2rpx solid #8e8e93;
  border-bottom: 2rpx solid #8e8e93;
  transform: rotate(45deg);
  margin-left: auto;
}

/* 日期选择器区域 */
.date-group {
  margin-bottom: 12rpx;
}
.date-pickers {
  display: flex;
  justify-content: space-between;
  align-items: center;
}
.date-picker {
  width: 48%;
}
.date-separator {
  width: 4%;
  height: 2rpx;
  background-color: #c6c6c8;
}

/* 查询按钮 */
.search-btn {
  background: #007aff;
  color: #fff;
  font-size: 24rpx;
  border-radius: 8rpx;
  padding: 16rpx 0;
  font-weight: 600;
  margin-top: 8rpx;
  box-shadow: 0 2rpx 8rpx rgba(0, 122, 255, 0.12);
  border: none;
  transition: background 0.2s, transform 0.1s;
}
.search-btn:active {
  background: #0062cc;
  transform: scale(0.98);
}

/* 加载中动画 */
.loading-container {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 40rpx 0;
  color: #8e8e93;
}
.loading {
  width: 40rpx;
  height: 40rpx;
  border-radius: 50%;
  border: 3rpx solid rgba(0, 122, 255, 0.2);
  border-top: 3rpx solid #007aff;
  animation: spin 1s linear infinite;
  margin-bottom: 10rpx;
}
@keyframes spin {
  0% { transform: rotate(0deg); }
  100% { transform: rotate(360deg); }
}

/* 空状态样式 */
.empty-state {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 60rpx 0;
  color: #8e8e93;
}

.empty-state-image {
  width: 120rpx;
  height: 120rpx;
  margin-bottom: 20rpx;
  opacity: 0.6;
}

.empty-state-text {
  font-size: 24rpx;
  color: #8e8e93;
}

/* 对账单内容区域 - 响应式 */
.statement-content {
  width: 100%;
  max-width: 100vw;
  overflow-x: hidden;
  display: flex;
  flex-direction: column;
  gap: 16rpx;
}

/* 全局响应式优化 */
@media (max-width: 600rpx) {
  .container {
    padding-bottom: 100rpx;
  }
  
  .search-section {
    width: 95%;
    padding: 20rpx;
  }
  
  .section-title {
    font-size: 24rpx;
  }
  
  .form-label {
    font-size: 20rpx;
  }
  
  .picker-content {
    padding: 10rpx 14rpx;
    font-size: 20rpx;
  }
  
  .search-btn {
    font-size: 22rpx;
    padding: 14rpx 0;
  }
  
  .search-section,
  .statement-header,
  .statement-summary,
  .statement-cards-container,
  .product-summary,
  .export-section {
    width: 95%;
  }
  
  .statement-header {
    padding: 16rpx;
  }
  
  .factory-name {
    font-size: 28rpx;
  }
  
  .date-info,
  .balance-info {
    font-size: 22rpx;
    flex-direction: column;
    gap: 4rpx;
  }
}

/* 中等屏幕适配 */
@media (min-width: 601rpx) and (max-width: 1000rpx) {
  .search-section,
  .statement-header,
  .statement-summary,
  .statement-cards-container,
