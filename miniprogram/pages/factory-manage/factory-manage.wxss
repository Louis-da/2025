  height: 70rpx;
}

.account-detail-item.header > text {
  padding: 20rpx 6rpx;
  vertical-align: bottom;
}

.account-detail-item > text {
  display: table-cell;
  padding: 16rpx 6rpx;
  vertical-align: middle;
  word-break: keep-all;
  white-space: nowrap;
  line-height: 1.3;
  overflow: hidden;
  text-overflow: ellipsis;
}

.account-date {
