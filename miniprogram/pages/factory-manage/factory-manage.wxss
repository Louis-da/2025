.container {
  padding: 24rpx;
  background-color: #f5f5f7;
  min-height: 100vh;
  box-sizing: border-box;
}

/* 搜索栏样式 */
.search-bar {
  position: sticky;
  top: 0;
  z-index: 10;
  background-color: #f5f5f7;
  padding: 12rpx 0;
  margin-bottom: 24rpx;
}

.search-input-box {
  display: flex;
  align-items: center;
  background-color: rgba(255, 255, 255, 0.9);
  border-radius: 16rpx;
  padding: 0 24rpx;
  height: 80rpx;
  box-shadow: 0 1rpx 8rpx rgba(0, 0, 0, 0.05);
  backdrop-filter: blur(10px);
}

.search-input-box icon {
  margin-right: 16rpx;
}

.search-input-box input {
  flex: 1;
  height: 100%;
  font-size: 30rpx;
  color: #1d1d1f;
}

/* 工厂列表样式 */
.factory-list {
  padding-bottom: 120rpx;
}

.factory-item {
  margin-bottom: 24rpx;
  border-radius: 16rpx;
  background-color: rgba(255, 255, 255, 0.9);
  box-shadow: 0 2rpx 12rpx rgba(0, 0, 0, 0.04);
  overflow: hidden;
  transition: all 0.3s;
}

.factory-item.inactive {
  opacity: 0.7;
}

.factory-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 28rpx 24rpx;
  border-bottom: 0.5rpx solid rgba(0, 0, 0, 0.1);
}

.factory-name {
  font-size: 34rpx;
  font-weight: 500;
  color: #1d1d1f;
}

.factory-status {
  font-size: 24rpx;
  padding: 8rpx 18rpx;
  border-radius: 24rpx;
  font-weight: 500;
}

.active-status {
  background-color: rgba(52, 199, 89, 0.1);
  color: #34c759;
}

.inactive-status {
  background-color: rgba(142, 142, 147, 0.1);
  color: #8e8e93;
}

/* 工厂信息样式 */
.factory-info {
  padding: 24rpx;
}

.info-item {
  display: flex;
  margin-bottom: 20rpx;
  font-size: 28rpx;
  line-height: 1.5;
}

.info-item .label {
  color: #86868b;
  width: 160rpx;
  flex-shrink: 0;
}

.info-item .value {
  flex: 1;
  color: #1d1d1f;
}

.info-item .remark {
  color: #515154;
}

.factory-extra {
  margin-top: 24rpx;
  padding-top: 24rpx;
  border-top: 0.5rpx solid rgba(0, 0, 0, 0.1);
}

/* 账户状态样式 */
.balance-info {
  display: flex;
  flex-direction: column;
  margin-bottom: 16rpx;
}

.balance-item {
  font-size: 28rpx;
  color: #86868b;
  margin-bottom: 8rpx;
  display: flex;
  align-items: center;
}

.balance {
  color: #34c759;
  font-weight: 500;
  margin-left: 8rpx;
}

.debt {
  color: #ff3b30;
  font-weight: 500;
  margin-left: 8rpx;
}

.balance-zero {
  color: #8e8e93;
  margin-left: 8rpx;
}

/* 新增账户明细和支付欠款按钮样式 */
.detail-btn {
  background-color: #f8f8f8;
  color: #07c160;
  border: 1rpx solid #07c160;
}

.pay-btn {
  background-color: #fa5151;
