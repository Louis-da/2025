}

/* 账户明细弹窗样式 */
.account-detail-modal {
  max-height: 85vh;
  border-radius: 16rpx;
  overflow: hidden;
  box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.15);
}

.account-detail-content {
  padding: 0 !important;
  max-height: 65vh;
  position: relative;
}

.account-scroll-view {
  width: 100%;
  max-height: 65vh;
  overflow: hidden;
}

.account-scroll-view-horizontal {
  width: 100%;
  white-space: nowrap;
}

.account-table-container {
  padding: 0 6rpx;
  width: fit-content;
  min-width: 100%;
}

.account-detail-list {
  width: 100%;
  min-width: 980rpx;
  display: table;
  border-collapse: separate;
  border-spacing: 12rpx 0;
  table-layout: fixed;
}

.account-detail-item {
  display: table-row;
  border-bottom: 0.5rpx solid rgba(0, 0, 0, 0.06);
  font-size: 22rpx;
  height: 64rpx;
}

.account-detail-item.header {
  position: sticky;
  top: 0;
  z-index: 1;
