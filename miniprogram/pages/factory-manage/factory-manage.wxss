/* 页面容器 */
.page-container {
  min-height: 100vh;
  background: linear-gradient(135deg, #faf5ff 0%, #f3e8ff 100%);
  padding: 0;
  font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', 'Roboto', sans-serif;
}

/* 页面头部 */
.page-header {
  background: rgba(255, 255, 255, 0.95);
  backdrop-filter: blur(20px);
  border-bottom: 1px solid rgba(226, 232, 240, 0.8);
  padding: 20rpx 32rpx;
  position: sticky;
  top: 0;
  z-index: 100;
}

.header-content {
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.header-left {
  display: flex;
  flex-direction: column;
}

.page-title {
  font-size: 36rpx;
  font-weight: 700;
  color: #1e293b;
  margin-bottom: 4rpx;
}

.page-subtitle {
  font-size: 24rpx;
  color: #64748b;
  font-weight: 500;
}

.header-right {
  display: flex;
  align-items: center;
}

.add-btn-wrapper {
  position: relative;
}

.add-btn {
  display: flex;
  align-items: center;
  background: linear-gradient(135deg, #3b82f6 0%, #1d4ed8 100%);
  color: white;
  padding: 16rpx 24rpx;
  border-radius: 24rpx;
  box-shadow: 0 4rpx 12rpx rgba(59, 130, 246, 0.3);
  transition: all 0.3s ease;
}

.add-btn:active {
  transform: translateY(2rpx);
  box-shadow: 0 2rpx 8rpx rgba(59, 130, 246, 0.4);
}

.add-icon {
  font-size: 28rpx;
  font-weight: 600;
  margin-right: 8rpx;
}

.add-text {
  font-size: 28rpx;
  font-weight: 600;
}

/* 工厂筛选搜索区域 */
.factory-search-section {
  background: rgba(255, 255, 255, 0.95);
  backdrop-filter: blur(20px);
  border-bottom: 1px solid rgba(226, 232, 240, 0.8);
  padding: 20rpx 32rpx;
  position: sticky;
  top: 88rpx; /* 紧贴页面头部 */
  z-index: 99;
}

.search-container {
  padding: 0;
}

/* 搜索框样式 */
.search-box {
  display: flex;
  align-items: center;
  background: rgba(255, 255, 255, 0.95);
  border: 2rpx solid rgba(226, 232, 240, 0.8);
  border-radius: 24rpx;
  padding: 0 24rpx;
  height: 80rpx;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.08);
  transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
}

.search-box:focus-within {
  border-color: #007aff;
  box-shadow: 0 0 0 6rpx rgba(0, 122, 255, 0.15), 0 8rpx 24rpx rgba(0, 0, 0, 0.12);
  transform: translateY(-2rpx);
}

.search-input {
  flex: 1;
  font-size: 28rpx;
  color: #1e293b;
  background: transparent;
  border: none;
  height: 100%;
  padding: 0 8rpx;
}

.search-icon {
  font-size: 28rpx;
  margin-right: 12rpx;
  opacity: 0.6;
  color: #64748b;
  transition: all 0.3s ease;
}

.search-box:focus-within .search-icon {
  color: #007aff;
  opacity: 1;
}

.clear-icon {
  width: 32rpx;
  height: 32rpx;
  border-radius: 50%;
  background: #94a3b8;
  color: white;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 20rpx;
  margin: 0 8rpx;
  transition: all 0.2s ease;
}

.clear-icon:active {
  background: #64748b;
  transform: scale(0.9);
}

/* 查询按钮样式 */
.search-btn {
  background: linear-gradient(135deg, #007aff 0%, #0056cc 100%);
  color: white;
  padding: 12rpx 24rpx;
  border-radius: 16rpx;
  font-size: 26rpx;
  font-weight: 600;
  margin-left: 12rpx;
  box-shadow: 0 2rpx 8rpx rgba(0, 122, 255, 0.3);
  transition: all 0.3s ease;
  white-space: nowrap;
}

.search-btn:active {
  background: linear-gradient(135deg, #0056cc 0%, #003d99 100%);
  transform: translateY(1rpx);
  box-shadow: 0 1rpx 4rpx rgba(0, 122, 255, 0.4);
}

.search-results-info {
  margin-top: 12rpx;
  text-align: center;
}

.results-text {
  font-size: 24rpx;
  color: #007aff;
  background: rgba(0, 122, 255, 0.1);
  padding: 8rpx 16rpx;
  border-radius: 12rpx;
  font-weight: 500;
}

/* 空状态样式 */
.dropdown-empty {
  text-align: center;
  padding: 60rpx 32rpx;
  color: #94a3b8;
}

.dropdown-empty .empty-icon {
  font-size: 60rpx;
  margin-bottom: 16rpx;
  opacity: 0.6;
}

.dropdown-empty .empty-text {
  font-size: 26rpx;
  color: #64748b;
}

/* AI智能提示卡片 */
.ai-tip-card {
  margin: 0 32rpx 24rpx;
  background: linear-gradient(135deg, #dbeafe 0%, #bfdbfe 100%);
  border: 1px solid rgba(59, 130, 246, 0.2);
  border-radius: 20rpx;
  padding: 24rpx;
  display: flex;
  align-items: center;
  box-shadow: 0 2rpx 8rpx rgba(59, 130, 246, 0.1);
}

.ai-tip-icon {
  font-size: 32rpx;
  margin-right: 16rpx;
}

.ai-tip-content {
  flex: 1;
}

.ai-tip-title {
  font-size: 28rpx;
  font-weight: 600;
  color: #1e40af;
  display: block;
  margin-bottom: 4rpx;
}

.ai-tip-desc {
  font-size: 24rpx;
  color: #3730a3;
  opacity: 0.8;
}

/* 加载状态 */
.loading-wrapper {
  display: flex;
  justify-content: center;
  align-items: center;
  padding: 120rpx 0;
}

.loading-content {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.loading-spinner {
  width: 60rpx;
  height: 60rpx;
  border: 4rpx solid #e2e8f0;
  border-top: 4rpx solid #3b82f6;
  border-radius: 50%;
  animation: spin 1s linear infinite;
  margin-bottom: 16rpx;
}

.loading-text {
  font-size: 28rpx;
  color: #64748b;
}

@keyframes spin {
  0% { transform: rotate(0deg); }
  100% { transform: rotate(360deg); }
}

/* 空状态 */
.empty-wrapper {
  display: flex;
  justify-content: center;
  align-items: center;
  padding: 120rpx 32rpx;
}

.empty-content {
  display: flex;
  flex-direction: column;
  align-items: center;
  text-align: center;
}

.empty-icon {
  font-size: 120rpx;
  margin-bottom: 24rpx;
  opacity: 0.6;
}

.empty-title {
  font-size: 32rpx;
  font-weight: 600;
  color: #374151;
  margin-bottom: 12rpx;
}

.empty-desc {
  font-size: 28rpx;
  color: #6b7280;
  margin-bottom: 32rpx;
  line-height: 1.5;
}

.empty-action {
  margin-top: 16rpx;
}

.empty-btn {
  background: linear-gradient(135deg, #3b82f6 0%, #1d4ed8 100%);
  color: white;
  padding: 20rpx 40rpx;
  border-radius: 24rpx;
  font-size: 28rpx;
  font-weight: 600;
  box-shadow: 0 4rpx 12rpx rgba(59, 130, 246, 0.3);
  transition: all 0.3s ease;
}

.empty-btn:active {
  transform: translateY(2rpx);
}

/* 工厂网格布局 */
.factory-grid {
  padding: 0 32rpx 120rpx;
  display: flex;
  flex-direction: column;
  gap: 24rpx;
}

.factory-card {
  background: rgba(255, 255, 255, 0.95);
  border-radius: 24rpx;
  border: 1px solid rgba(226, 232, 240, 0.8);
  box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.04);
  overflow: hidden;
  transition: all 0.3s ease;
  backdrop-filter: blur(10px);
}

.factory-card:active {
  transform: translateY(-2rpx);
  box-shadow: 0 8rpx 24rpx rgba(0, 0, 0, 0.08);
}

.factory-card.disabled {
  opacity: 0.6;
  filter: grayscale(0.3);
}

.card-content {
  padding: 32rpx;
}

/* 工厂头部信息 */
.factory-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 20rpx;
}

.factory-name {
  font-size: 36rpx;
  font-weight: 700;
  color: #1e293b;
  flex: 1;
}

/* 工厂详细信息 - 工序和联系信息 */
.factory-details {
  margin-bottom: 20rpx;
}

.detail-row {
  display: flex;
  align-items: center;
  margin-bottom: 8rpx;
}

.detail-row:last-child {
  margin-bottom: 0;
}

.detail-icon {
  font-size: 20rpx;
  margin-right: 8rpx;
  width: 28rpx;
  text-align: center;
}

.detail-content {
  flex: 1;
  font-size: 22rpx;
  color: #333333;
  line-height: 1.3;
  font-weight: 500;
}

/* 工厂创建时间 - 账户按钮下方位置 */
.factory-create-time {
  display: flex;
  align-items: center;
  padding: 12rpx 32rpx 20rpx;
  margin-top: 0;
}

.time-label {
  font-size: 18rpx;
  margin-right: 6rpx;
  color: #94a3b8;
}

.time-value {
  font-size: 18rpx;
  color: #94a3b8;
  font-weight: 500;
}

/* 账户状态 */
.account-status {
  background: linear-gradient(135deg, #f8fafc 0%, #f1f5f9 100%);
  border: 1px solid rgba(226, 232, 240, 0.8);
  border-radius: 16rpx;
  padding: 20rpx;
  margin-bottom: 24rpx;
}

.account-label {
  font-size: 24rpx;
  color: #64748b;
  margin-bottom: 8rpx;
  font-weight: 500;
}

.account-value {
  font-size: 28rpx;
  font-weight: 600;
}

.balance-positive {
  color: #059669;
}

.balance-negative {
  color: #dc2626;
}

.balance-zero {
  color: #6b7280;
}

/* 卡片操作 */
.card-actions {
  display: flex;
  gap: 16rpx;
  padding: 0 32rpx 32rpx;
  flex-wrap: wrap;
}

.action-btn {
  flex: 1;
  min-width: 120rpx;
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: center;
  gap: 8rpx;
  padding: 16rpx 12rpx;
  border-radius: 16rpx;
  transition: all 0.3s ease;
  border: 1px solid transparent;
}

.action-btn:active {
  transform: scale(0.95);
}

.account-btn {
  background: linear-gradient(135deg, #dbeafe 0%, #bfdbfe 100%);
  border-color: rgba(59, 130, 246, 0.2);
}

.edit-btn {
  background: linear-gradient(135deg, #f3e8ff 0%, #e9d5ff 100%);
  border-color: rgba(147, 51, 234, 0.2);
}

.pay-btn {
  background: linear-gradient(135deg, #fef3c7 0%, #fde68a 100%);
  border-color: rgba(245, 158, 11, 0.2);
}

.disable-btn {
  background: linear-gradient(135deg, #fef2f2 0%, #fecaca 100%);
  color: #dc2626;
  border-color: rgba(239, 68, 68, 0.2);
  flex: none;
  min-width: 160rpx;
}

.enable-btn {
  background: linear-gradient(135deg, #dcfce7 0%, #bbf7d0 100%);
  color: #166534;
  border-color: rgba(34, 197, 94, 0.2);
  flex: none;
  min-width: 160rpx;
}

.btn-icon {
  font-size: 24rpx;
  line-height: 1;
  transition: transform 0.2s ease;
}

.btn-text {
  font-size: 24rpx;
  font-weight: 500;
  color: #374151;
  line-height: 1;
  transition: transform 0.2s ease;
}

/* 加载更多 */
.loading-more {
  display: flex;
  justify-content: center;
  align-items: center;
  padding: 40rpx;
  gap: 16rpx;
}

.loading-spinner-small {
  width: 32rpx;
  height: 32rpx;
  border: 2rpx solid #e2e8f0;
  border-top: 2rpx solid #3b82f6;
  border-radius: 50%;
  animation: spin 1s linear infinite;
}

.loading-more-text {
  font-size: 20rpx;
  color: #666;
  margin-left: 12rpx;
}

.load-more {
  display: flex;
  justify-content: center;
  padding: 40rpx;
}

.load-more-text {
  font-size: 28rpx;
  color: #3b82f6;
  font-weight: 500;
  padding: 16rpx 32rpx;
  border: 1px solid rgba(59, 130, 246, 0.3);
  border-radius: 20rpx;
  background: rgba(59, 130, 246, 0.05);
  transition: all 0.3s ease;
}

.load-more:active .load-more-text {
  background: rgba(59, 130, 246, 0.1);
  transform: scale(0.98);
}

.list-end {
  text-align: center;
  padding: 20rpx;
}

.list-end-text {
  font-size: 20rpx;
  color: #999;
}

/* 弹窗样式 */
.modal-mask {
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  background: rgba(0, 0, 0, 0.5);
  backdrop-filter: blur(4px);
  z-index: 1000;
  opacity: 0;
  animation: fadeIn 0.3s ease forwards;
}

.modal-container {
  position: fixed;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%) scale(0.9);
  width: 90%;
  max-width: 600rpx;
  max-height: 80vh;
  z-index: 1001;
  opacity: 0;
  transition: all 0.3s ease;
}

.modal-container.large {
  max-width: 95%;
  max-height: 85vh;
}

.modal-container.modal-show {
  opacity: 1;
  transform: translate(-50%, -50%) scale(1);
}

.modal-content {
  background: white;
  border-radius: 24rpx;
  overflow: hidden;
  box-shadow: 0 20rpx 60rpx rgba(0, 0, 0, 0.15);
  display: flex;
  flex-direction: column;
  max-height: inherit;
}

.modal-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 32rpx;
  border-bottom: 1px solid #e2e8f0;
  background: linear-gradient(135deg, #f8fafc 0%, #f1f5f9 100%);
}

.modal-title {
  font-size: 32rpx;
  font-weight: 700;
  color: #1e293b;
}

.modal-close {
  width: 48rpx;
  height: 48rpx;
  border-radius: 50%;
  background: #f1f5f9;
  color: #64748b;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 24rpx;
  transition: all 0.2s ease;
}

.modal-close:active {
  background: #e2e8f0;
  transform: scale(0.9);
}

.modal-body {
  flex: 1;
  padding: 32rpx;
  overflow-y: auto;
}

/* AI建议和警告 */
.ai-suggestion, .edit-warning {
  margin-bottom: 32rpx;
  padding: 24rpx;
  border-radius: 16rpx;
  display: flex;
  align-items: flex-start;
  gap: 16rpx;
}

.ai-suggestion {
  background: linear-gradient(135deg, #dbeafe 0%, #bfdbfe 100%);
  border: 1px solid rgba(59, 130, 246, 0.2);
}

.edit-warning {
  background: linear-gradient(135deg, #fef3c7 0%, #fde68a 100%);
  border: 1px solid rgba(245, 158, 11, 0.2);
}

.suggestion-icon, .warning-icon {
  font-size: 28rpx;
  margin-top: 2rpx;
}

.suggestion-content, .warning-content {
  flex: 1;
}

.suggestion-title, .warning-title {
  font-size: 28rpx;
  font-weight: 600;
  margin-bottom: 4rpx;
  display: block;
}

.suggestion-title {
  color: #1e40af;
}

.warning-title {
  color: #92400e;
}

.suggestion-desc, .warning-desc {
  font-size: 24rpx;
  line-height: 1.4;
}

.suggestion-desc {
  color: #3730a3;
}

.warning-desc {
  color: #a16207;
}

/* 表单样式 */
.form-section {
  display: flex;
  flex-direction: column;
  gap: 32rpx;
}

.form-item {
  display: flex;
  flex-direction: column;
}

.form-label {
  font-size: 28rpx;
  font-weight: 600;
  color: #374151;
  margin-bottom: 12rpx;
}

.form-label.required::after {
  content: ' *';
  color: #ff3b30;
  font-weight: bold;
}

.form-input, .form-textarea {
  background: #f8fafc;
  border: 2rpx solid #e2e8f0;
  border-radius: 12rpx;
  padding: 20rpx;
  font-size: 28rpx;
  color: #1e293b;
  transition: all 0.3s ease;
}

.form-input:focus, .form-textarea:focus {
  border-color: #3b82f6;
  background: white;
  box-shadow: 0 0 0 6rpx rgba(59, 130, 246, 0.1);
}

.form-input[disabled], .form-textarea[disabled] {
  background: #f1f5f9;
  color: #94a3b8;
  cursor: not-allowed;
}

.form-textarea {
  min-height: 120rpx;
  resize: vertical;
}

/* 日期显示样式 */
.form-display-value {
  background: #f8fafc;
  border: 2rpx solid #e2e8f0;
  border-radius: 12rpx;
  padding: 20rpx;
  display: flex;
  align-items: center;
  justify-content: space-between;
}

.date-display {
  font-size: 28rpx;
  color: #1e293b;
  font-weight: 500;
}

.date-icon {
  font-size: 32rpx;
  opacity: 0.7;
}

/* 多选择器 */
.multi-selector {
  border: 2rpx solid #e2e8f0;
  border-radius: 12rpx;
  background: #f8fafc;
  overflow: hidden;
}

.selected-items {
  padding: 20rpx;
  min-height: 80rpx;
  display: flex;
  flex-wrap: wrap;
  gap: 12rpx;
  align-items: center;
}

.tag {
  background: linear-gradient(135deg, #3b82f6 0%, #1d4ed8 100%);
  color: white;
  padding: 8rpx 16rpx;
  border-radius: 16rpx;
  font-size: 24rpx;
  font-weight: 500;
  display: flex;
  align-items: center;
  gap: 8rpx;
}

.tag-close {
  width: 24rpx;
  height: 24rpx;
  border-radius: 50%;
  background: rgba(255, 255, 255, 0.2);
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 16rpx;
  transition: all 0.2s ease;
}

.tag-close:active {
  background: rgba(255, 255, 255, 0.3);
  transform: scale(0.9);
}

.no-processes-hint {
  font-size: 28rpx;
  color: #94a3b8;
  font-style: italic;
}

.selector-action {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 20rpx;
  border-top: 1px solid #e2e8f0;
  background: white;
  transition: all 0.2s ease;
}

.selector-action:active {
  background: #f8fafc;
}

.selector-text {
  font-size: 28rpx;
  color: #3b82f6;
  font-weight: 500;
}

.selector-icon {
  width: 32rpx;
  height: 32rpx;
  border-radius: 50%;
  background: #3b82f6;
  color: white;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 20rpx;
  font-weight: 600;
}

/* 支付相关 */
.debt-summary {
  background: linear-gradient(135deg, #fef2f2 0%, #fecaca 100%);
  border: 1px solid rgba(239, 68, 68, 0.2);
  border-radius: 16rpx;
  padding: 24rpx;
  margin-bottom: 32rpx;
  text-align: center;
}

.debt-factory-name {
  font-size: 32rpx;
  font-weight: 700;
  color: #991b1b;
  margin-bottom: 8rpx;
}

.debt-amount {
  font-size: 28rpx;
  color: #dc2626;
  font-weight: 600;
}

.payment-methods {
  display: flex;
  flex-direction: column;
  gap: 16rpx;
}

.payment-method-item {
  display: flex;
  align-items: center;
  padding: 16rpx;
  background: #f8fafc;
  border: 1px solid #e2e8f0;
  border-radius: 12rpx;
  transition: all 0.2s ease;
}

.payment-method-item:active {
  background: #f1f5f9;
}

.payment-method-item radio {
  margin-right: 16rpx;
}

.helper-text {
  font-size: 24rpx;
  color: #6b7280;
  margin-top: 8rpx;
  line-height: 1.4;
}

/* 账户表格 */
.account-scroll {
  max-height: 60vh;
}

.account-table {
  width: 100%;
  font-size: 14rpx;
}

.table-header, .table-row {
  display: flex;
  align-items: center;
  padding: 8rpx 0;
  border-bottom: 1px solid #e2e8f0;
}

.table-header {
  background: #f8fafc;
  font-weight: 600;
  color: #374151;
  position: sticky;
  top: 0;
  z-index: 10;
  font-size: 14rpx;
}

.table-row:hover {
  background: #f8fafc;
}

.col-date { width: 20%; }
.col-order { width: 20%; }
.col-fee { width: 15%; }
.col-pay { width: 15%; }
.col-method { width: 15%; }
.col-balance { width: 15%; }

.col-date, .col-order, .col-fee, .col-pay, .col-method, .col-balance {
  padding: 0 3rpx;
  text-align: left;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
  font-size: 14rpx;
  line-height: 1.0;
}

.positive {
  color: #059669;
  font-weight: 600;
}

.negative {
  color: #dc2626;
  font-weight: 600;
}

.empty-account, .loading-account {
  display: flex;
