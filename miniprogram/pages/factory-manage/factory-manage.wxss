/* 停用/启用按钮容器 */
.disable-btn, .enable-btn {
  flex: none;
  width: auto;
  min-width: 120rpx;
  position: relative;
  padding: 18rpx 24rpx;
  border-radius: 20rpx;
  font-size: 24rpx;
  font-weight: 600;
  text-align: center;
  transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
  border: 2rpx solid transparent;
  overflow: hidden;
  display: flex;
  align-items: center;
  justify-content: center;
  gap: 6rpx;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.1);
  margin-bottom: 0;
  animation: slideInUp 0.4s ease-out;
}

/* 按钮图标和文本 */
.btn-icon {
  font-size: 24rpx;
  line-height: 1;
  transition: transform 0.2s ease;
}

.btn-text {
  font-size: 24rpx;
  font-weight: 500;
  color: #374151;
  line-height: 1;
  transition: transform 0.2s ease;
}

/* 悬停效果 */
.disable-btn:hover .btn-icon,
.disable-btn:hover .btn-text {
  transform: scale(1.05);
}

.enable-btn:hover .btn-icon,
.enable-btn:hover .btn-text {
  transform: scale(1.05);
}

/* 停用按钮 - 红色主题 */
.disable-btn {
  background: linear-gradient(135deg, #fee2e2 0%, #fecaca 50%, #fca5a5 100%);
  color: #dc2626;
  border-color: rgba(220, 38, 38, 0.2);
}

.disable-btn::before {
  content: '';
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: linear-gradient(135deg, rgba(220, 38, 38, 0.1) 0%, rgba(220, 38, 38, 0.05) 100%);
  border-radius: inherit;
  transition: opacity 0.3s ease;
  opacity: 0;
}

.disable-btn:active::before {
  opacity: 1;
}

.disable-btn:active {
  transform: translateY(1rpx) scale(0.98);
  box-shadow: 0 1rpx 4rpx rgba(220, 38, 38, 0.3);
}

/* 启用按钮 - 绿色主题 */
.enable-btn {
  background: linear-gradient(135deg, #dcfce7 0%, #bbf7d0 50%, #86efac 100%);
  color: #16a34a;
  border-color: rgba(22, 163, 74, 0.2);
}

.enable-btn::before {
  content: '';
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: linear-gradient(135deg, rgba(22, 163, 74, 0.1) 0%, rgba(22, 163, 74, 0.05) 100%);
  border-radius: inherit;
  transition: opacity 0.3s ease;
  opacity: 0;
}

.enable-btn:active::before {
  opacity: 1;
}

.enable-btn:active {
  transform: translateY(1rpx) scale(0.98);
  box-shadow: 0 1rpx 4rpx rgba(22, 163, 74, 0.3);
}

