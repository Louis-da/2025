/* 苹果风格的基础页面样式 */
page {
  background-color: #f5f5f7;
  font-family: -apple-system, BlinkMacSystemFont, "SF Pro Text", "Helvetica Neue", Arial, sans-serif;
  color: #1d1d1f;
}

.container {
  padding: 0;
  display: flex;
  flex-direction: column;
  align-items: stretch;
  min-height: 100vh;
}

/* 页面顶部标题区域 */
.header {
  padding: 40rpx 30rpx 20rpx;
  margin-bottom: 10rpx;
}

.title {
  font-size: 36rpx;
  font-weight: 600;
  color: #1d1d1f;
  margin-bottom: 8rpx;
  display: block;
}

.subtitle {
  font-size: 28rpx;
  color: #86868b;
  font-weight: 400;
  display: block;
}

/* 卡片容器 */
.card-container {
  margin: 15rpx 0 30rpx;
  padding: 0 20rpx;
}

.section-title {
  font-size: 20rpx;
  text-transform: uppercase;
  letter-spacing: 1px;
  color: #86868b;
  padding: 0 10rpx 15rpx;
  margin-left: 10rpx;
  font-weight: 500;
}

/* 卡片样式 */
.card {
  background-color: #ffffff;
  border-radius: 14rpx;
  margin-bottom: 14rpx;
  padding: 25rpx 25rpx;
  display: flex;
  align-items: center;
  justify-content: space-between;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.04);
  transition: background-color 0.2s;
}

.card:active {
  background-color: #f5f5f7;
}

.card-content {
  display: flex;
  align-items: center;
  flex: 1;
}

.icon {
  width: 44rpx;
  height: 44rpx;
  font-size: 36rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  margin-right: 20rpx;
  border-radius: 10rpx;
}

.card-info {
  display: flex;
  flex-direction: column;
}

.card-title {
  font-size: 32rpx;
  font-weight: 500;
  color: #1d1d1f;
  margin-bottom: 6rpx;
}

.card-desc {
  font-size: 24rpx;
  color: #86868b;
}

.card-arrow {
  color: #c7c7cc;
  font-size: 28rpx;
  font-weight: 300;
}

/* 图标特殊样式 */
.product-icon {
  background-color: #f2f8fd;
}

.factory-icon {
  background-color: #f2f7f2;
}

.color-icon {
  background-color: #fdf4f2;
}

.size-icon {
  background-color: #f5f2fd;
}

.process-icon {
  background-color: #f7f7f2;
}

.manage-btn {
  width: 100%;
  height: 100rpx;
  margin-bottom: 30rpx;
  border-radius: 12rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 32rpx;
  font-weight: 500;
  background-color: #ffffff;
  color: #1d1d1f;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.1);
  border: none;
}

.manage-btn:active {
  background-color: #f5f5f7;
}