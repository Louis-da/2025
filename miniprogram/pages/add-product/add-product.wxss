/* .form-input 已被全局 .form-input 替代 */

/* .picker 已使用全局 .form-input 样式 */
.picker-override {
  display: flex; /* 添加 flex 以便放置箭头 */
  align-items: center;
  justify-content: space-between;
  padding-right: 20rpx; /* 全局 input 可能没右 padding */
  box-sizing: border-box; /* 确保 padding 不影响宽度 */
}

.picker-text {
  font-size: inherit; /* 继承 form-input 的字体大小 */
  color: inherit; /* 继承 form-input 的字体颜色 */
  flex: 1;
}

.picker-placeholder {
  font-size: inherit;
  color: #999; /* 保留 placeholder 颜色 */
  flex: 1;
}

.arrow {
  width: 16rpx;
  height: 16rpx;
  border-right: 3rpx solid #ccc;
  border-bottom: 3rpx solid #ccc;
  transform: rotate(45deg);
  margin-left: 10rpx;
}

/* 多选择器样式 */
.multi-selector {
  flex: 1;
  background-color: #f8f8f8; /* 与全局 input 不同，保留? 或改为 #fff */
  border: 1rpx solid #d2d2d7; /* 模仿全局 input 边框 */
  border-radius: 12rpx; /* 模仿全局 input 圆角 */
  padding: 16rpx 20rpx;
  display: flex;
  flex-direction: column;
  min-height: 88rpx; /* 匹配全局 input 高度 */
  box-sizing: border-box;
}

.selected-items {
  display: flex;
  flex-wrap: wrap;
  /* margin-bottom: 16rpx; */
}

/* .selected-tag 已被全局 .tag 替代 */
.selected-tag-override {
  margin-right: 16rpx;
  margin-bottom: 16rpx;
  /* padding: 8rpx 16rpx; */ /* 使用全局 tag padding */
  /* border-radius: 30rpx; */ /* 使用全局 tag radius */
  /* display: flex; align-items: center; */ /* 全局 tag 已包含? */
}

.tag-close {
  margin-left: 10rpx;
  font-size: 28rpx;
  line-height: 1;
  font-weight: bold;
  /* color: #1890ff; */ /* 根据 tag 颜色调整 */
}

.selector-action {
  display: flex;
  justify-content: space-between;
  align-items: center;
  height: 40rpx;
  font-size: 26rpx;
  color: #0071e3; /* 改为全局主色 */
  margin-top: auto; /* 推到底部 */
}

.placeholder {
  color: #999;
}

.add-icon {
  font-size: 28rpx;
  font-weight: bold;
}

/* 图片上传 */
.image-uploader {
  width: 240rpx;
  height: 240rpx;
  background-color: #f8f8f8; /* 保留 */
  border-radius: 8rpx;
  overflow: hidden;
  margin: 10rpx 0 10rpx;
}

.upload-placeholder {
  width: 100%;
  height: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  border: 1rpx dashed #d2d2d7; /* 边框颜色统一 */
  box-sizing: border-box;
}

.upload-placeholder image {
  width: 80rpx;
  height: 80rpx;
  margin-bottom: 16rpx;
}

.upload-placeholder text {
  font-size: 26rpx;
  color: #86868b; /* 文本颜色统一 */
}

.uploaded-image {
  width: 100%;
  height: 100%;
}

/* 备注输入框 */
.remark-input {
  flex: 1;
  width: 100%;
  height: 160rpx;
  /* background-color, border-radius, padding, font-size, color 由 .form-input 提供 */
  box-sizing: border-box;
}

/* 按钮组 */
.btn-group {
  display: flex;
  justify-content: space-between;
  margin-top: 40rpx;
  padding: 0; /* container已有padding */
  margin-bottom: 60rpx;
}

/* .cancel-btn, .save-btn 已被全局 .btn 替代 */
.form-btn-override {
  width: 48%; /* 调整宽度 */
  /* height, line-height, text-align, border-radius, font-size 由 .btn 提供 */
}

