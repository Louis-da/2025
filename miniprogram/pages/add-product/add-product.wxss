/* .container 已被全局样式替代 */

/* .section 已被全局 .card 替代 */

.section-title {
  font-size: 30rpx;
  font-weight: 500;
  margin-bottom: 20rpx; /* 调整 margin */
  color: #333; /* 与全局 title 颜色略有不同，暂时保留 */
  display: flex;
  align-items: center;
}

.section-title::before {
  content: "";
  display: block;
  width: 8rpx;
  height: 28rpx;
  background-color: #0071e3; /* 改为全局主色 */
  margin-right: 12rpx;
  border-radius: 4rpx;
}

/* .form-row 已被全局 .form-item 替代 */

/* .form-label 已被全局 .form-label 替代 */
.form-label-override {
  width: 140rpx; /* 设置固定宽度 */
  /* align-self: flex-start; 如果需要顶部对齐 */
  /* padding-top: 10rpx; 根据全局 .form-input 的 padding 调整 */
}

