.container {
  padding: 20rpx;
  background-color: #f6f6f6;
  min-height: 100vh;
}

.form-header {
  display: flex;
  justify-content: center;
  align-items: center;
  margin-bottom: 20rpx;
  background-color: #fff;
  border-radius: 12rpx;
  padding: 30rpx;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.05);
  position: relative;
}

.form-title {
  font-size: 36rpx;
  font-weight: 500;
  color: #333;
  text-align: center;
  margin: 0 auto;
}

/* 左上角单据号 */
.order-no-small {
  position: absolute;
  left: 30rpx;
  top: 30rpx;
  font-size: 32rpx;
  color: #3875FF;
  font-weight: 600;
}

.form-status {
  position: absolute;
  right: 30rpx;
  top: 30rpx;
  background-color: #ff3b30;
  color: #fff;
  font-size: 24rpx;
  padding: 6rpx 16rpx;
  border-radius: 30rpx;
  font-weight: 500;
}

/* 当同时存在订单号和作废状态时的位置调整 
.form-header .form-status {
  top: 20rpx;
}

.form-header .form-order-no + .form-status {
  top: 70rpx;
}
*/

.section {
  background-color: #fff;
  border-radius: 12rpx;
  padding: 30rpx;
  margin-bottom: 20rpx;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.05);
}

.section-title {
  font-size: 32rpx;
  font-weight: 500;
  margin-bottom: 24rpx;
  color: #333;
  border-bottom: 1rpx solid #e5e5e5;
  padding-bottom: 16rpx;
}

.form-row {
  display: flex;
  gap: 20rpx;
  margin-bottom: 20rpx;
}

.form-col {
  flex: 1;
  display: flex;
  flex-direction: column;
  gap: 10rpx;
}

.form-col-small {
  flex: 0.6;
}

.form-group {
  margin-bottom: 24rpx;
}

/* 合并行布局样式 */
.combined-row {
  display: flex;
  justify-content: space-between;
  margin-bottom: 16rpx;
  background-color: #f5f5f7;
  border-radius: 12rpx;
  padding: 16rpx 20rpx;
  box-shadow: 0 1rpx 2rpx rgba(0, 0, 0, 0.03);
}

.combined-row:last-child {
  margin-bottom: 0;
}

.combined-item {
  flex: 1;
  display: flex;
  flex-direction: column;
  padding: 0 10rpx;
  overflow: hidden;
}

.item-label {
  font-size: 24rpx;
  color: #8e8e93;
  margin-bottom: 8rpx;
}

.item-value {
  font-size: 28rpx;
  color: #1d1d1f;
  font-weight: 500;
  white-space: nowrap;
  text-overflow: ellipsis;
  overflow: hidden;
}

.form-label {
  font-size: 28rpx;
  font-weight: 500;
  color: #333;
  margin-bottom: 8rpx;
}

.required:after {
  content: '*';
  color: #ff3b30;
  margin-left: 5rpx;
}

.form-value {
  font-size: 28rpx;
  color: #333;
  background-color: #f5f5f5;
  padding: 20rpx;
  border-radius: 10rpx;
  min-height: 40rpx;
  position: relative;
}

.picker-arrow {
  position: absolute;
  right: 20rpx;
  top: 50%;
  transform: translateY(-50%);
  width: 16rpx;
  height: 16rpx;
  border-right: 2rpx solid #999;
  border-bottom: 2rpx solid #999;
  transform: translateY(-50%) rotate(45deg);
}

.placeholder {
  color: #999;
}

.form-control {
  border: 1rpx solid #e5e5e5;
  border-radius: 10rpx;
  padding: 10rpx;
}

.form-control input {
  width: 100%;
  height: 70rpx;
  font-size: 28rpx;
}

.form-textarea {
  width: 100%;
  height: 160rpx;
  border: 1rpx solid #e5e5e5;
  border-radius: 10rpx;
  padding: 20rpx;
  font-size: 28rpx;
  box-sizing: border-box;
}

/* 产品添加按钮栏 */
.product-action-bar {
  display: flex;
  justify-content: flex-end;
  margin-bottom: 24rpx;
}

/* 添加货品按钮居中显示 */
.product-action-bar-centered {
  justify-content: center;
}

.add-product-btn {
  background-color: #007aff;
  color: #fff;
  font-size: 26rpx;
  padding: 12rpx 24rpx;
  border-radius: 30rpx;
  border: none;
  font-weight: 500;
  box-shadow: 0 2rpx 5rpx rgba(0, 122, 255, 0.2);
}

/* 产品列表样式 */
.product-list {
  margin-bottom: 24rpx;
}

.no-products {
  padding: 60rpx 0;
  text-align: center;
  color: #999;
  font-size: 28rpx;
  background-color: #f9f9f9;
  border-radius: 10rpx;
}

.product-item {
  background-color: #f9f9f9;
  border-radius: 12rpx;
  padding: 24rpx;
  margin-bottom: 24rpx;
  box-shadow: 0 2rpx 6rpx rgba(0, 0, 0, 0.03);
}

.product-info {
  display: flex;
  margin-bottom: 20rpx;
}

.product-image {
  width: 150rpx;
  height: 150rpx;
  border-radius: 10rpx;
  background-color: #eee;
  margin-right: 24rpx;
  object-fit: cover;
}

.product-details {
  flex: 1;
}

.product-name {
  font-size: 24rpx;
  color: #666;
  margin-bottom: 12rpx;
}

.product-code {
  font-size: 30rpx;
  font-weight: 500;
  margin-bottom: 16rpx;
  color: #333;
}

.product-options {
  display: flex;
  flex-wrap: wrap;
}

.option-item {
  display: flex;
  align-items: center;
  margin-right: 30rpx;
  margin-bottom: 12rpx;
}

.option-label {
  font-size: 26rpx;
  color: #666;
  margin-right: 10rpx;
}

.picker {
  font-size: 26rpx;
  color: #333;
  background-color: #eee;
  padding: 10rpx 36rpx 10rpx 16rpx;
  border-radius: 6rpx;
  min-width: 120rpx;
  text-align: left;
  position: relative;
}

.picker-text {
  font-size: 26rpx;
  color: #333;
}

.option-input {
  width: 150rpx;
  background-color: #eee;
  padding: 10rpx 15rpx;
  border-radius: 6rpx;
  font-size: 26rpx;
  text-align: center;
}

.product-controls {
  margin-top: 20rpx;
}

.quantity-weight {
  display: flex;
  justify-content: space-between;
  margin-bottom: 20rpx;
}

.control-item {
  display: flex;
  align-items: center;
  width: 48%;
}

.control-label {
  font-size: 26rpx;
  color: #666;
  margin-right: 10rpx;
}

.control-input {
  flex: 1;
  background-color: #eee;
  border-radius: 6rpx;
  padding: 10rpx 15rpx;
  font-size: 26rpx;
  text-align: center;
}

.control-value {
  font-size: 26rpx;
  color: #333;
}

.product-actions {
  display: flex;
  justify-content: flex-end;
}

.btn-small {
  font-size: 24rpx;
  padding: 10rpx 24rpx;
  margin-left: 16rpx;
  background-color: #f0f0f0;
  color: #333;
  border-radius: 30rpx;
  border: none;
}

.btn-danger {
  background-color: #ff3b30;
  color: #fff;
}

/* 产品总计样式 */
.product-totals {
  display: flex;
  justify-content: space-between;
  padding: 24rpx;
  background-color: #f5f5f5;
  border-radius: 10rpx;
  font-size: 28rpx;
  font-weight: 500;
}

/* 按钮样式 */
.btn-primary {
  background-color: #3875FF;
  color: #FFFFFF;
  font-size: 32rpx;
  padding: 20rpx 30rpx;
  border-radius: 10rpx;
  border: none;
  font-weight: 500;
  box-shadow: 0 4rpx 10rpx rgba(0, 122, 255, 0.2);
}

.btn-default {
  background-color: #F5F5F5;
  color: #333333;
  font-size: 32rpx;
  padding: 20rpx 30rpx;
  border-radius: 10rpx;
  border: 1rpx solid #E0E0E0;
  font-weight: 500;
}

/* 底部操作按钮 */
.footer-actions {
  display: flex;
  justify-content: space-between;
  margin-top: 40rpx;
  padding: 0 20rpx 40rpx;
}

.footer-actions button {
  min-width: 220rpx;
  margin: 0;
}

/* 产品选择弹窗 */
.product-modal, .product-confirm-modal {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  z-index: 1000;
  opacity: 0;
  visibility: hidden;
  transition: opacity 0.3s ease;
}

.product-modal.show, .product-confirm-modal.show {
  opacity: 1;
  visibility: visible;
}

.modal-mask {
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background-color: rgba(0, 0, 0, 0.5);
}

.modal-content {
  position: absolute;
  bottom: 0;
  left: 0;
  right: 0;
  background-color: #fff;
  height: 75%;
  border-top-left-radius: 20rpx;
  border-top-right-radius: 20rpx;
  overflow: hidden;
  display: flex;
  flex-direction: column;
  transform: translateY(100%);
  transition: transform 0.3s cubic-bezier(0.19, 1, 0.22, 1);
}

.product-modal.show .modal-content, .product-confirm-modal.show .modal-content {
  transform: translateY(0);
}

.modal-header {
  padding: 30rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
  border-bottom: 1rpx solid #e5e5e5;
}

.modal-title {
  font-size: 34rpx;
  font-weight: 500;
  color: #333;
}

.modal-close {
  font-size: 40rpx;
  color: #999;
  height: 60rpx;
  width: 60rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}

.modal-search {
  padding: 20rpx;
  border-bottom: 1rpx solid #e5e5e5;
}

.modal-search input {
  background-color: #f5f5f5;
  border-radius: 30rpx;
  padding: 16rpx 30rpx;
  font-size: 28rpx;
  height: 70rpx;
  width: 100%;
  box-sizing: border-box;
  box-shadow: inset 0 1rpx 3rpx rgba(0, 0, 0, 0.05);
  border: 1rpx solid #e5e5e5;
}

.modal-body {
  flex: 1;
  padding: 20rpx;
  overflow-y: auto;
}

.empty-search {
  padding: 60rpx 0;
  text-align: center;
}

.empty-text {
  color: #999;
  font-size: 28rpx;
}

/* 产品网格列表 */
.product-list-grid {
  display: flex;
  flex-wrap: wrap;
  margin: 0 -10rpx;
}

.product-grid-item {
  width: calc(50% - 20rpx);
  margin: 10rpx;
  background-color: #f9f9f9;
  border-radius: 12rpx;
  overflow: hidden;
  box-shadow: 0 2rpx 6rpx rgba(0, 0, 0, 0.03);
}

.product-grid-image {
  width: 100%;
  height: 240rpx;
  object-fit: cover;
  background-color: #eee;
}

.product-grid-details {
  padding: 16rpx;
}

.product-grid-name {
  font-size: 28rpx;
  font-weight: 500;
  margin-bottom: 8rpx;
  color: #333;
}

.product-grid-code {
  font-size: 24rpx;
  color: #666;
}

/* 产品确认弹窗样式 */
.selected-product {
  display: flex;
  padding: 24rpx;
  background-color: #f9f9f9;
  border-radius: 12rpx;
  margin-bottom: 24rpx;
}

.product-edit-form {
  background-color: #fff;
  border-radius: 12rpx;
  padding: 20rpx;
  margin-bottom: 30rpx;
}

.edit-form-item {
  margin-bottom: 20rpx;
}

.edit-form-label {
  font-size: 28rpx;
  color: #333;
  margin-bottom: 10rpx;
  display: block;
  font-weight: 500;
}

.edit-form-value {
  font-size: 28rpx;
  color: #333;
  background-color: #f5f5f5;
  padding: 16rpx 20rpx;
  border-radius: 8rpx;
  position: relative;
}

.edit-form-input {
  width: 100%;
  background-color: #f5f5f5;
  padding: 16rpx 20rpx;
  border-radius: 8rpx;
  font-size: 28rpx;
  box-sizing: border-box;
}

/* 优化数量和重量输入框样式 */
.quantity-input, .weight-input {
  width: 100%;
  height: 80rpx;
  text-align: left;
  font-size: 32rpx;
  font-weight: 500;
  border: 2rpx solid #E0E0E0;
  border-radius: 8rpx;
  background-color: #F9FBFF;
  color: #333333;
  box-shadow: inset 0 1rpx 3rpx rgba(0, 0, 0, 0.05);
  padding: 0 20rpx;
  box-sizing: border-box;
}

/* 添加输入框获取焦点效果 */
.quantity-input:focus, .weight-input:focus {
  border-color: #3875FF;
  background-color: #FFFFFF;
  box-shadow: 0 0 0 2rpx rgba(56, 117, 255, 0.2);
}

.modal-actions {
  display: flex;
  flex-direction: column;
  width: 100%;
  padding: 24rpx;
  gap: 20rpx;
}

/* 添加并继续按钮样式 */
.btn-add-continue {
  width: 80rpx;
  height: 80rpx;
  line-height: 76rpx;
  background-color: #3875FF;
  color: white;
  border-radius: 50%;
  text-align: center;
  font-size: 40rpx;
  font-weight: bold;
  margin: 10rpx auto 20rpx;
  box-shadow: 0 4rpx 8rpx rgba(56, 117, 255, 0.3);
  transition: transform 0.2s ease, box-shadow 0.2s ease;
}

/* 按钮悬停效果 */
.btn-hover {
  opacity: 0.8;
  transform: scale(0.97);
}

/* 全宽按钮 */
.full-width-btn {
  width: 100%;
  height: 80rpx;
  line-height: 80rpx;
  text-align: center;
  border-radius: 8rpx;
  font-size: 30rpx;
  font-weight: 500;
}

/* 货品列表中颜色和尺码同行显示 */
.product-options-row {
  display: flex;
  flex-wrap: wrap;
  margin-top: 10rpx;
  gap: 20rpx;
}

/* 同货号添加按钮样式 */
.btn-same-product {
  display: flex;
  align-items: center;
  justify-content: center;
  background-color: #007aff;
  color: #fff;
  font-size: 24rpx;
  padding: 10rpx 24rpx;
  margin-left: 16rpx;
  border-radius: 30rpx;
  border: none;
  box-shadow: 0 2rpx 5rpx rgba(0, 122, 255, 0.2);
}

.btn-icon {
  font-size: 28rpx;
  margin-right: 6rpx;
  font-weight: bold;
}

.btn-text {
  font-weight: 500;
}

/* 为添加且继续按钮添加样式 - 这部分样式可以移除，因为已经改成+号图标了 */
.btn-continue {
  background-color: #34c759;
  color: #fff;
  font-size: 32rpx;
  padding: 20rpx 30rpx;
  border-radius: 10rpx;
  border: none;
  font-weight: 500;
  box-shadow: 0 4rpx 10rpx rgba(52, 199, 89, 0.2);
}

/* 三个按钮的modal操作区样式 - 这部分样式可以移除，因为布局已经改变 */
.modal-actions-three {
  display: flex;
  flex-direction: column;
  gap: 15rpx;
}

.modal-actions-three button {
  width: 100%;
  margin: 0;
}

/* 货品标签展示样式 */
.product-tags {
  display: flex;
  flex-wrap: wrap;
  margin-top: 10rpx;
  gap: 12rpx;
}

.product-tag {
  display: flex;
  align-items: center;
  background-color: #f2f7ff;
  padding: 6rpx 12rpx;
  border-radius: 6rpx;
  border: 1rpx solid #e0eaff;
}

.tag-name {
  font-size: 24rpx;
  color: #666;
  margin-right: 6rpx;
}

.tag-value {
  font-size: 24rpx;
  color: #333;
  font-weight: 500;
}

/* 备注照片上传样式 */
.remark-photo-upload {
  margin-top: 16rpx;
}

.photo-list {
  display: flex;
  flex-wrap: wrap;
  gap: 16rpx;
  margin-bottom: 10rpx;
}

.photo-item {
  width: 160rpx;
  height: 160rpx;
  border-radius: 8rpx;
  overflow: hidden;
  position: relative;
}

.photo-preview {
  width: 100%;
  height: 100%;
  object-fit: cover;
}

.photo-delete {
  position: absolute;
  top: 0;
  right: 0;
  width: 44rpx;
  height: 44rpx;
  background-color: rgba(0, 0, 0, 0.5);
  color: #fff;
  font-size: 28rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  border-bottom-left-radius: 8rpx;
}

.photo-upload-btn {
  width: 160rpx;
  height: 160rpx;
  border: 1rpx dashed #ccc;
  border-radius: 8rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  background-color: #f9f9f9;
}

.upload-icon {
  font-size: 48rpx;
  color: #999;
  margin-bottom: 10rpx;
  font-weight: 200;
}

.upload-text {
  font-size: 24rpx;
  color: #999;
}

.photo-tip {
  font-size: 22rpx;
  color: #999;
  margin-top: 6rpx;
}

/* 查看模式下的备注照片展示 */
.remark-photos {
  display: flex;
  flex-wrap: wrap;
  gap: 16rpx;
  margin-top: 16rpx;
}

.remark-photo {
  width: 160rpx;
  height: 160rpx;
  border-radius: 8rpx;
  object-fit: cover;
}

/* 添加继续按钮样式 */
.add-continue-btn {
  display: flex;
  justify-content: center;
  align-items: center;
  width: 80rpx;
  height: 80rpx;
  border-radius: 50%;
  background-color: #4A90E2;
  color: white;
  font-size: 36rpx;
  box-shadow: 0 4rpx 8rpx rgba(74, 144, 226, 0.3);
  margin: 0 auto;
  transition: all 0.3s ease;
}

.add-continue-btn:active {
  transform: scale(0.95);
  background-color: #3B7BC0;
}

/* 优化确认和取消按钮容器 */
.modal-footer {
  display: flex;
  flex-direction: column;
  gap: 16rpx;
  margin-top: 30rpx;
  width: 100%;
}

.modal-footer .btn {
  width: 100%;
  height: 88rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  border-radius: 8rpx;
  font-size: 32rpx;
  font-weight: 500;
}

.modal-footer .btn-primary {
  background-color: #4A90E2;
  color: white;
}

.modal-footer .btn-default {
  background-color: #F0F0F0;
  color: #333;
  border: 1rpx solid #E0E0E0;
}

/* 基础信息部分样式优化 */
.info-section {
  padding: 24rpx 30rpx;
}

/* 制单人和制单时间元信息样式 */
.order-meta-info {
  display: flex;
  justify-content: flex-start;
  margin-bottom: 20rpx;
  font-size: 24rpx;
  color: #8e8e93;
  padding: 0 2rpx;
}

.meta-item {
  margin-right: 30rpx;
  display: flex;
  align-items: center;
}

/* 货品选择弹窗与收回单一致 */
.product-select-list .list-item-override {
  margin-bottom: 16rpx;
  padding: 16rpx;
}

.list-item-content {
  display: flex;
  align-items: center;
}

.list-item-image {
  width: 80rpx;
  height: 80rpx;
  border-radius: 8rpx;
  margin-right: 20rpx;
  background-color: #f5f5f7;
}

.list-item-details {
  flex: 1;
}

.list-item-name {
  font-size: 24rpx;
  color: #86868b;
}

.list-item-code {
  font-size: 28rpx;
  color: #1d1d1f;
  margin-bottom: 4rpx;
}

/* 分享相关样式 */
.modal-dialog {
  position: fixed;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
  width: 85%;
  max-width: 650rpx;
  background-color: #ffffff;
  border-radius: 16rpx;
  z-index: 1001;
  overflow: hidden;
  box-shadow: 0 8rpx 32rpx rgba(0, 0, 0, 0.2);
}

.share-dialog .modal-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 24rpx 32rpx;
  border-bottom: 1px solid #e5e5ea;
}

.share-dialog .modal-header text {
  font-size: 32rpx;
  font-weight: 500;
  color: #1d1d1f;
}

.share-dialog .close-btn {
  font-size: 40rpx;
  color: #86868b;
  line-height: 1;
}

.share-dialog .modal-content {
  padding: 24rpx 32rpx;
  max-height: 70vh;
  overflow-y: auto;
}

.share-preview {
  display: flex;
  justify-content: center;
  margin-bottom: 20rpx;
  overflow: hidden;
  border-radius: 12rpx;
  box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.1);
}

.share-image {
  width: 100%;
  max-height: 800rpx;
}

.share-tips {
  text-align: center;
  font-size: 26rpx;
  color: #86868b;
  margin: 16rpx 0;
}

.share-dialog .modal-footer {
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  padding: 24rpx 32rpx;
